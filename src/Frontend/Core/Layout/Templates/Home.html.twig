{% include "Core/Layout/Templates/Head.html.twig" %}

<body class="{{ LANGUAGE }}" itemscope itemtype="http://schema.org/WebPage">
	{% include "Core/Layout/Templates/Cookies.html.twig" %}

	<div id="container">
		<header id="header">
			{# Logo #}
			<h2>
				<a href="/">{{ siteTitle }}</a>
			</h2>

			{# Language #}
			<div>
				{% include "Core/Layout/Templates/Languages.html.twig" %}
			</div>
		</header>

		{# Navigation #}
		<nav>
			{{ var|getnavigation('page', 0, 1)|raw }}
		</nav>

		<section>
			{# Breadcrumb #}
			{% include "Core/Layout/Templates/Breadcrumb.html.twig" %}

			{# Page title #}
			{% if not hideContentTitle %}
				<header class="mainTitle">
					<h1>{{ page.title }}</h1>
				</header>
			{% endif %}

			{# Main position #}
			{% for xXx in positionMain %}
				{% if positionMain.blockIsHTML %}
					<section class="mod">
						<div class="inner">
							<div class="bd content">
								{{ positionMain.blockContent|raw }}
							</div>
						</div>
					</section>
				{% endif %}
				{% if not positionMain.blockIsHTML %}
					{{ positionMain.blockContent|raw }}
				{% endif %}
			{% endfor %}
		</section>

		<footer>
			{% include "Core/Layout/Templates/Footer.html.twig" %}
		</footer>
	</div>

	{# General Javascript #}
	{% for xXx in jsFiles %}
		<script src="{{ jsFiles.file }}"></script>
	{% endfor %}

	{# Site wide HTML #}
	{{ siteHTMLFooter|raw }}
</body>
</html>

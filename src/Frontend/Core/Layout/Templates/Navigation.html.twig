{% if navigation %}
  <ul class="nav navbar-nav">
    {% for nav in navigation %}
      <li{% if nav.selected %} class="active"{% endif %}>
        <a href="{{ nav.link }}" title="{{ nav.navigation_title }}"{% if nav.nofollow %} rel="nofollow"{% endif %}{% if nav.link_class %} class="{{ nav.link_class }}"{% endif %}>{{ nav.navigation_title|e('html') }}</a>
        {% if nav.selected %}{{ nav.children|raw }}{% endif %}
      </li>
    {% endfor %}
  </ul>
{% endif %}

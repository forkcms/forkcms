{% if navigation %}
	<ul>
		{% for nav in navigation %}
			<li{% if nav.selected %} class="selected"{% endif %}>
				<a href="{{ nav.link }}" title="{{ nav.nav_title }}"{% if nav.nofollow %} rel="nofollow"{% endif %}>{{ nav.nav_title }}</a>
				{% if nav.selected %}{{ nav.children }}{% endif %}
			</li>
		{% endfor %}
	</ul>
{% endif %}

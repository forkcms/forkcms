{#
	variables that are available:
	- {{ archive }}: contains an array with some dates
	- {{ items }}: contains an array with all items, each element contains data about the items
	- {{ allowComments }}: boolean to indicate that the archive may display comment info
#}

{% if not items %}
	<section id="blogArchive" class="mod">
		<div class="inner">
			<div class="bd content">
				<p>{{ msg.BlogNoItems }}</p>
			</div>
		</div>
	</section>
{% endif %}
{% if items %}
	<section id="blogArchive" class="mod">
		<div class="inner">
			<div class="bd content">
				<table class="dataGrid" width="100%">
					<thead>
						<tr>
							<th class="date">{{ lbl.Date|capitalize }}</th>
							<th class="title">{{ lbl.Title|capitalize }}</th>
							{% if allowComments %}
								<th class="comments">{{ lbl.Comments|capitalize }}</th>
							{% endif %}
						</tr>
					</thead>
					<tbody>
						{% for xXx in items %}
							<tr>
								<td class="date">{{ items.publish_on|spoon_date({$dateFormatShort }}, {{ LANGUAGE }}})</td>
								<td class="title"><a href="{{ items.full_url }}" title="{{ items.title }}">{{ items.title }}</a></td>
								{% if items.allow_comments %}
									<td class="comments">
										{% if not items.comments %}<a href="{{ items.full_url }}#{{ act.Comment }}">{{ msg.BlogNoComments|capitalize }}</a>{% endif %}
										{% if items.comments %}
											{% if items.comments_multiple %}<a href="{{ items.full_url }}#{{ act.Comments }}">{{ msg.BlogNumberOfComments|sprintf({$items.comments_count }}})</a>{% endif %}
											{% if not items.comments_multiple %}<a href="{{ items.full_url }}#{{ act.Comments }}">{{ msg.BlogOneComment }}</a>{% endif %}
										{% endif %}
									</td>
								{% endif %}
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</section>
	{% include "Core/Layout/Templates/Pagination.html.twig" %}
{% endif %}

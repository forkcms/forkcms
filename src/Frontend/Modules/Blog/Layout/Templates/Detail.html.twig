{#
	variables that are available:
	- {{ item }}: contains data about the post
	- {{ comments }}: contains an array with the comments for the post, each element contains data about the comment.
	- {{ commentsCount }}: contains a variable with the number of comments for this blog post.
	- {{ navigation }}: contains an array with data for previous and next post
#}
<div id="blogDetail">
	<article class="mod article" itemscope itemtype="http://schema.org/Blog">
		<div class="inner">
			<meta itemprop="interactionCount" content="UserComments:{{ commentsCount }}">
			<meta itemprop="author" content="{{ item.user_id|usersetting('nickname') }}">
			<header class="hd">
				<h1 itemprop="name">{{ item.title }}</h1>
				<ul>
					<li>
						{# Written by #}
						{{ msg.WrittenBy|capitalize|sprintf(item.user_id|usersetting('nickname')) }}

						{# Written on #}
						{{ lbl.On }} <time itemprop="datePublished" datetime="{{ item.publish_on|spoon_date('Y-m-d\TH:i:s') }}">{{ item.publish_on|date(dateFormatLong) }}</time>

						{# Category#}
						{{ lbl.In }} {{ lbl.The }} {{ lbl.Category }} <a itemprop="articleSection" href="{{ item.category_full_url }}" title="{{ item.category_title }}">{{ item.category_title }}</a>{% if not item.tags %}.{% endif %}

						{# Tags #}
						{% if item.tags %}
							{{ lbl.With }} {{ lbl.The }} {{ lbl.Tags }}
							<span itemprop="keywords">
								{% for tag in item.tags %}
									<a href="{{ tag.full_url }}" rel="tag" title="{{ tag.name }}">{{ tag.name }}</a>{% if not tag.last %}, {% endif %}{% if tag.last %}.{% endif %}
								{% endfor %}
							</span>
						{% endif %}
					</li>
					{# Comments #}
					{% if item.allow_comments %}
						<li>
							{% if not comments %}<a href="{{ item.full_url }}#{{ act.Comment }}" itemprop="discussionUrl">{{ msg.BlogNoComments|capitalize }}</a>{% endif %}
							{% if comments %}
								{% if blogCommentsMultiple %}<a href="{{ item.full_url }}#{{ act.Comments }}" itemprop="discussionUrl">{{ msgBlogNumberOfComments|sprintf(commentsCount) }}</a>{% endif %}
								{% if not blogCommentsMultiple %}<a href="{{ item.full_url }}#{{ act.Comments }}" itemprop="discussionUrl">{{ msg.BlogOneComment }}</a>{% endif %}
							{% endif %}
						</li>
					{% endif %}
					<li>
						<a href="{{ item.full_url }}" class="share">{{ lbl.Share|capitalize }}</a>
					</li>
				</ul>
			</header>
			<div class="bd content" itemprop="articleBody">
				{% if item.image %}<img src="{{ FRONTEND_FILES_URL }}/blog/images/source/{{ item.image }}" alt="{{ item.title }}" itemprop="image" />{% endif %}
				{{ item.text|raw }}
			</div>
			<footer class="ft">
				{% if navigation %}
				<ul class="pageNavigation">
					{% if navigation.previous %}
						<li class="previousLink">
							<a href="{{ navigation.previous.url }}" rel="prev">{{ lbl.PreviousArticle|capitalize }}: {{ navigation.previous.title }}</a>
						</li>
					{% endif %}
					{% if navigation.next %}
						<li class="nextLink">
							<a href="{{ navigation.next.url }}" rel="next">{{ lbl.NextArticle|capitalize }}: {{ navigation.next.title }}</a>
						</li>
					{% endif %}
				</ul>
				{% endif %}
			</footer>
		</div>
	</article>

	{% if comments %}
		{% if item.allow_comments %}
			<section id="blogComments" class="mod" itemscope itemtype="http://schema.org/Article">
				<div class="inner">
					<header class="hd">
						<h3 id="{{ act.Comments }}">{{ lbl.Comments|capitalize }}</h3>
					</header>
					<div class="bd content">
						{% for comment in comments %}
							{# Do not alter the id! It is used as an anchor #}
							<div id="comment-{{ comment.id }}" class="comment" itemprop="comment" itemscope itemtype="http://schema.org/UserComments">
								<meta itemprop="discusses" content="{{ item.title }}" />
								<div class="imageHolder">
									{% if comment.website %}<a href="{{ comment.website }}">{% endif %}
										<img src="{{ FRONTEND_CORE_URL }}/Layout/images/default_author_avatar.gif" width="48" height="48" alt="{{ comment.author }}" class="replaceWithGravatar" data-gravatar-id="{{ comment.gravatar_id }}" />
									{% if comment.website %}</a>{% endif %}
								</div>
								<div class="commentContent">
									<p class="commentAuthor" itemscope itemtype="http://schema.org/Person">
										{% if comment.website %}<a href="{{ comment.website }}" itemprop="url">{% endif %}
											<span itemprop="creator name">{{ comment.author }}</span>
										{% if comment.website %}</a>{% endif %}
										{{ lbl.Wrote }}
										<time itemprop="commentTime" datetime="{{ comment.created_on|date('Y-m-d\TH:i:s') }}">{{ comment.created_on|timeago|raw }}</time>
									</p>
									<div class="commentText content" itemprop="commentText">
										{{ comment.text|cleanupplaintext|raw }}
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			</section>
		{% endif %}
	{% endif %}
	{% if item.allow_comments %}
		<section id="blogCommentForm" class="mod">
			<div class="inner">
				<header class="hd">
					<h3 id="{{ act.Comment }}">{{ msg.Comment|capitalize }}</h3>
				</header>
				<div class="bd">
					{% if commentIsInModeration %}<div class="message warning"><p>{{ msg.BlogCommentInModeration }}</p></div>{% endif %}
					{% if commentIsSpam %}<div class="message error"><p>{{ msg.BlogCommentIsSpam }}</p></div>{% endif %}
					{% if commentIsAdded %}<div class="message success"><p>{{ msg.BlogCommentIsAdded }}</p></div>{% endif %}
					{% form commentsForm %}
						<div class="alignBlocks">
							<p {% if txtAuthorError %}class="errorArea"{% endif %}>
								<label for="author">{{ lbl.Name|capitalize }}<abbr title="{{ lbl.RequiredField }}">*</abbr></label>
								{% form_field_error author %} {% form_field author %}
							</p>
							<p {% if txtEmailError %}class="errorArea"{% endif %}>
								<label for="email">{{ lbl.Email|capitalize }}<abbr title="{{ lbl.RequiredField }}">*</abbr></label>
								{% form_field_error email %} {% form_field email %}
							</p>
						</div>
						<p class="bigInput{% if txtWebsiteError %} errorArea{% endif %}">
							<label for="website">{{ lbl.Website|capitalize }}</label>
							{% form_field_error website %} {% form_field website %}
						</p>
						<p class="bigInput{% if txtMessageError %} errorArea{% endif %}">
							<label for="message">{{ lbl.Message|capitalize }}<abbr title="{{ lbl.RequiredField }}">*</abbr></label>
							{% form_field_error message %} {% form_field message %}
						</p>
						<p>
							<input class="inputSubmit" type="submit" name="comment" value="{{ msg.Comment|capitalize }}" />
						</p>
					{% endform %}
				</div>
			</div>
		</section>
	{% endif %}
</div>

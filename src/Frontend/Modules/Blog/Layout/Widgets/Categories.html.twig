{#
  variables that are available:
  - {{ widgetBlogCategories }}:
#}

{% if widgetBlogCategories %}
  <section id="blogCategoriesWidget" class="mod">
    <div class="inner">
      <header class="hd">
        <h3>{{ 'lbl.Categories'|trans|ucfirst }}</h3>
      </header>
      <div class="bd content">
        <ul>
          {% for widgetBlogCategories in widgetBlogCategories %}
            <li>
              <a href="{{ widgetBlogCategories.url }}">
                {{ widgetBlogCategories.label }}&nbsp;({{ widgetBlogCategories.total }})
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </section>
{% endif %}

{% import "Core/Layout/Templates/Macros.html.twig" as macro %}

<aside class="module-mailmotor widget-mailmotor-subscribe">
  {% block widget_heading %}
    <header class="widget-heading">
      <h3>{{ 'lbl.SubscribeToNewsletter'|trans|ucfirst }}</h3>
    </header>
  {% endblock %}

  {% block widget_body %}
    <div class="widget-body">
      <form action="{{ geturlforblock('Mailmotor', 'Subscribe' ) }}" method="post" class="form-horizontal">
        <input type="hidden" name="form_token" id="formToken" value="{{ formToken }}" />
        <input type="hidden" name="form" value="subscribe" />
        <label class="control-label" for="email">
          {{ 'lbl.Email'|trans|ucfirst }}{{ macro.required }}
        </label>
        <div class="input-group">
          <input type="email" value="" id="email" name="email" class="form-control" placeholder="{{ 'lbl.YourEmail'|trans|ucfirst }}" />
          <span class="input-group-btn">
            <input id="send" class="btn btn-default" type="submit" name="send" value="{{ 'lbl.Subscribe'|trans }}" />
          </span>
        </div>
      </form>
    </div>
  {% endblock %}

  {% block widget_footer %}{% endblock %}
</aside>

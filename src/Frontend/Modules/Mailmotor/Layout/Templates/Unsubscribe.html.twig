<section id="mailmotorUnsubscribeForm" class="mod">
	<div class="inner">
		<div class="hd">
			<h3>{{ 'lbl.UnsubscribeFromNewsletter'|trans|capitalize }}</h3>
		</div>
		<div class="bd">
			{% if mailmotorUnsubscribeHasFormError %}<div class="message error"><p>{{ 'err.FormError'|trans|raw }}</p></div>{% endif %}
			{% if mailmotorUnsubscribeHasError %}<div class="message error"><p>{{ 'err.UnsubscribeFailed'|trans|raw }}</p></div>{% endif %}
			{% if mailmotorUnsubscribeIsSuccess %}<div class="message success"><p>{{ 'msg.UnsubscribeSuccess'|trans|raw }}</p></div>{% endif %}

			{% if not mailmotorUnsubscribeHideForm %}
				{{ form_start(form) }}
				{{ form_rest(form) }}
				{{ form_end(form) }}
			{% endif %}
		</div>
	</div>
</section>
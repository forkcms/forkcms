{#
    The variables that are available to use:
    - $mailMotorSubscribeHasFormError
    - $mailMotorSubscribeHasError
    - $mailMotorSubscribeIsSuccess
    - $mailMotorSubscribeHideForm
    - $mailMotorSubscribe
#}

<div id="mailmotorSubscribeForm" class="mod">
  <div class="inner">
    <div class="hd">
      <h3>{{ 'lbl.SubscribeToNewsletter'|trans|capitalize }}</h3>
    </div>
    <div class="bd">
      {% if mailmotorSubscribeHasFormError %}<div class="message error"><p>{{ 'err.FormError'|trans|raw }}</p></div>{% endif %}
      {% if mailmotorSubscribeHasError %}<div class="message error"><p>{{ 'err.SubscribeFailed'|trans|raw }}</p></div>{% endif %}
      {% if mailmotorSubscribeIsSuccess %}
        <div class="message success">
          {% if mailmotorSubscribeHasDoubleOptIn %}{{ 'msg.SubscribeSuccessForDoubleOptIn'|trans|raw }}{% endif %}
          {% if not mailmotorSubscribeHasDoubleOptIn %}{{ 'msg.SubscribeSuccess'|trans|raw }}{% endif %}
        </div>
      {% endif %}

      {% if not mailmotorSubscribeHideForm %}
        {{ form_start(form) }}
        {{ form_rest(form) }}
        {{ form_end(form) }}
      {% endif %}

    </div>
  </div>
</div>

<section id="subscribeIndex" class="mod">
	<div class="inner">
		<div class="bd">
			{% if subscribeHasFormError %}<div class="message error"><p>{{ err.FormError }}</p></div>{% endif %}
			{% if subscribeHasError %}<div class="message error"><p>{{ err.SubscribeFailed }}</p></div>{% endif %}
			{% if subscribeIsSuccess %}<div class="message success"><p>{{ msg.SubscribeSuccess }}</p></div>{% endif %}

			{% if not subscribeHideForm %}
				{% form subscribe %}
					<p{% if txtEmailError %} class="errorArea"{% endif %}>
						<label for="email">{{ lbl.Email|capitalize }}<abbr title="{{ lbl.RequiredField }}">#</abbr></label>
						{% form_field_error Email %} {% form_field Email %}
					</p>
					<p>
						<input id="send" class="inputSubmit" type="submit" name="send" value="{{ lbl.Send|capitalize }}" />
					</p>
				{% endform %}
			{% endif %}
		</div>
	</div>
</section>
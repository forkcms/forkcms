{#
    The variables that are available to use:
    - $mailMotorSubscribeHasFormError
    - $mailMotorSubscribeHasError
    - $mailMotorSubscribeIsSuccess
    - $mailMotorSubscribeHideForm
    - $mailMotorSubscribe
#}

<div id="mailMotorSubscribeForm" class="mod">
  <div class="inner">
    <div class="hd">
      <h3>{{ 'lbl.SubscribeToNewsletter'|trans|capitalize }}</h3>
    </div>
    <div class="bd">
      {% if mailMotorSubscribeHasFormError %}<div class="message error"><p>{{ 'err.FormError'|trans|raw }}</p></div>{% endif %}
      {% if mailMotorSubscribeHasError %}<div class="message error"><p>{{ 'err.SubscribeFailed'|trans|raw }}</p></div>{% endif %}
      {% if mailMotorSubscribeIsSuccess %}
        <div class="message success">
          {% if mailMotorSubscribeHasDoubleOptIn %}{{ 'msg.SubscribeSuccessForDoubleOptIn'|trans }}{% endif %}
          {% if not mailMotorSubscribeHasDoubleOptIn %}{{ 'msg.SubscribeSuccess'|trans }}{% endif %}
        </div>
      {% endif %}

      {% if not mailMotorSubscribeHideForm %}
        {% form mailMotorSubscribeForm %}
          <p{% if txtEmailError %} class="errorArea"{% endif %}>
            <label for="email">{{ 'lbl.Email'|trans|capitalize }}<abbr title="{{ 'lbl.RequiredField'|trans|capitalize }}">*</abbr></label>
            {% form_field_error email %} {% form_field email %}
          </p>
          {% if interests %}
            <p{% if chkInterestsError %} class="errorArea"{% endif %}>
              <label>{{ 'lbl.Interests'|trans|ucfirst }}</label>
              <ul class="inputList">
                {% for interest in interests %}<li>{{ interest.chkInterests }} <label for="{{ interest.id }}">{{ interest.label|ucfirst }}</label></li>{% endfor %}
              </ul>
            {% form_field_error interests %}
            </p>
          {% endif %}
          <p>
              <input id="send" class="inputSubmit btn" type="submit" name="send" value="{{ 'lbl.Subscribe'|trans|capitalize }}" />
          </p>
        {% endform %}
      {% endif %}
    </div>
  </div>
</div>

{#
	variables that are available:
	- {{ isLoggedIn }}
	- {{ profile }}: only available when logged in
#}

{% if isLoggedIn %}
	{{ 'msg.ProfilesLoggedInAs'|trans|sprintf({$profile.display_name }}:{{ profile.url.dashboard }}})
{% endif %}

{% if not isLoggedIn %}
    <a href="{{ var|geturlforblock('Profiles', 'Login') }}?queryString={{ var|geturlforblock('Profiles') }}">{{ 'lbl.Login'|trans|capitalize }}</a>
{% endif %}

{# Success #}
{% if updateSettingsSuccess %}
	<div class="message success"><p>{{ msg.UpdateSettingsIsSuccess }}</p></div>
{% endif %}

{# Error #}
{% if updateSettingsHasFormError %}
	<div class="message error"><p>{{ err.FormError }}</p></div>
{% endif %}

<section id="settingsForm" class="mod">
	<div class="inner">
		<div class="bd">
			{% form updateSettings %}
				<fieldset>
					<legend>{{ lbl.YourData|capitalize }}</legend>

					<p{% if txtDisplayNameError %} class="errorArea"{% endif %}>
						<label for="displayName">{{ lbl.DisplayName|capitalize }}<abbr title="{{ lbl.RequiredField }}">#</abbr></label>
						{% form_field_error DisplayName %}{% form_field DisplayName %}
						<small class="helpTxt">{{ msg.HelpDisplayNameChanges|sprintf({$maxDisplayNameChanges }}:{{ displayNameChangesLeft }}})</small>
					</p>
					<p{% if txtEmailError %} class="errorArea"{% endif %}>
						<label for="email">{{ lbl.Email|capitalize }}<abbr title="{{ lbl.RequiredField }}">#</abbr></label>
						{% form_field_error Email %}{% form_field Email %}
					</p>
					<p>
						<a href="{{ var|geturlforblock:'Profiles':'ChangeEmail' }}">{{ msg.ChangeEmail }}</a>
					</p>
					<p{% if txtFirstNameError %} class="errorArea"{% endif %}>
						<label for="firstName">{{ lbl.FirstName|capitalize }}</label>
						{% form_field_error FirstName %}{% form_field FirstName %}
					</p>
					<p{% if txtLastNameError %} class="errorArea"{% endif %}>
						<label for="lastName">{{ lbl.LastName|capitalize }}</label>
						{% form_field_error LastName %}{% form_field LastName %}
					</p>
					<p{% if ddmGenderError %} class="errorArea"{% endif %}>
						<label for="gender">{{ lbl.Gender|capitalize }}</label>
						{% form_field_error Gender %} {% form_field Gender %}
					</p>
					<p{% if ddmYearError %} class="errorArea"{% endif %}>
						<label for="day">{{ lbl.BirthDate|capitalize }}</label>
						{% form_field_error Day %} {% form_field Month %} {% form_field Year %} {% form_field Year %}
					</p>
				</fieldset>
				<fieldset>
					<legend>{{ lbl.YourLocationData|capitalize }}</legend>

					<p{% if txtCityError %} class="errorArea"{% endif %}>
						<label for="city">{{ lbl.City|capitalize }}</label>
						{% form_field_error City %}{% form_field City %}
					</p>
					<p{% if ddmCountryError %} class="errorArea"{% endif %}>
						<label for="country">{{ lbl.Country|capitalize }}</label>
						{% form_field_error Country %} {% form_field Country %}
					</p>
				</fieldset>
				<fieldset>
					<legend>{{ lbl.YourAvatar|capitalize }}</legend>
					{% if avatar %}
						<img src="{{ FRONTEND_FILES_URL }}/Profiles/Avatars/240x240/{{ avatar }}" />
					{% endif %}

					<p{% if fileAvatarError %} class="errorArea"{% endif %}>
						<label for="avatar">{{ lbl.Avatar|capitalize }}</label>
						{% form_field_error Avatar %}{% form_field Avatar %}
					</p>
				</fieldset>
				<p>
					<input class="inputSubmit" type="submit" value="{{ lbl.Save|capitalize }}" />
				</p>
			{% endform %}
		</div>
	</div>
</section>

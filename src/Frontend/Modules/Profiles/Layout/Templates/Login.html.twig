{# Error #}
{% if formError %}
	<div class="message error">
		{% if loginError %}
			<p>{{ loginError }}</p>
		{% endif %}

		{% if not loginError %}
			<p>{{ err.FormError }}</p>
		{% endif %}
	</div>
{% endif %}

<section id="loginForm" class="mod">
	<div class="inner">
		<div class="bd">
			{% form login %}
				<fieldset>
					<p{% if txtEmailError %} class="errorArea"{% endif %}>
						<label for="email">{{ lbl.Email|capitalize }}<abbr title="{{ lbl.RequiredField }}">#</abbr></label>
						{% form_field_error Email %}{% form_field Email %}
					</p>
					<p{% if txtPasswordError %} class="errorArea"{% endif %}>
						<label for="password">{{ lbl.Password|capitalize }}<abbr title="{{ lbl.RequiredField }}">#</abbr></label>
						{% form_field_error Password %}{% form_field Password %}
					</p>
					<p>
						<label for="remember">{% form_field Remember %} {{ lbl.RememberMe|capitalize }}</label>
						{% form_field_error Remember %}
					</p>
					<p>
						<input class="inputSubmit" type="submit" value="{{ lbl.Login|capitalize }}" />
					</p>
				</fieldset>
			{% endform %}
		</div>
		<footer class="ft">
			<p>
				<a href="{{ var|geturlforblock:'Profiles':'ForgotPassword' }}" title="{{ msg.ForgotPassword }}">{{ msg.ForgotPassword }}</a>
			</p>
		</footer>
	</div>
</section>

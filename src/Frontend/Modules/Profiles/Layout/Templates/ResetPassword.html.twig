{# Success #}
{% if resetPasswordSuccess %}
	<div class="message success"><p>{{ msg.ResetPasswordIsSuccess }}</p></div>
{% endif %}

{# Error #}
{% if resetPasswordHasError %}
	<div class="message error"><p>{{ err.FormError }}</p></div>
{% endif %}

{% if not resetPasswordHideForm %}
	<section id="resetPasswordForm" class="mod">
		<div class="inner">
			<div class="bd">
				{% form resetPassword %}
					<fieldset>
						<p{% if txtPasswordError %} class="errorArea"{% endif %}>
							<label for="password">{{ lbl.Password|capitalize }}<abbr title="{{ lbl.RequiredField }}">#</abbr></label>
							{% form_field_error Password %}{% form_field Password %}
						</p>
						<p>
							<label for="showPassword">{% form_field ShowPassword %} {{ lbl.ShowPassword|capitalize }}</label>
						</p>
						<p>
							<input class="inputSubmit" type="submit" value="{{ lbl.Save|capitalize }}" />
						</p>
					</fieldset>
				{% endform %}
			</div>
		</div>
	</section>
{% endif %}
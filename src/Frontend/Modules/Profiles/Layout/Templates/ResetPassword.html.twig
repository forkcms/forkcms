{% import 'Core/Layout/Templates/Alerts.html.twig' as alerts %}
{% import "Core/Layout/Templates/Macros.html.twig" as macro %}

<section class="module-profiles block-profiles-reset-password">
  {% block block_heading %}{% endblock %}

  {% block block_alerts %}
    <div class="block-alerts">
      {% if resetPasswordSuccess %}
        {{ alerts.alert('success', 'msg.ResetPasswordIsSuccess'|trans) }}
      {% endif %}
      {% if resetPasswordHasError %}
        {{ alerts.alert('danger', 'err.FormError'|trans) }}
      {% endif %}
    </div>
  {% endblock %}

  {% block block_body %}
    <div class="block-body">
      {% if not resetPasswordHideForm %}
        {% form resetPassword %}
        <fieldset class="form-horizontal">
          <div class="form-group{% if txtPasswordError %} has-error{% endif %}">
            <label class="control-label col-sm-2" for="password">{{ 'lbl.Password'|trans|ucfirst }}
              {{ macro.required }}</label>
            <div class="col-sm-6">
              {% form_field_error password %}{% form_field password %}
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-6">
              <div class="checkbox">
                <label for="showPassword">{% form_field show_password %} {{ 'lbl.ShowPassword'|trans|ucfirst }}</label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-6">
              <input class="btn btn-primary" type="submit" value="{{ 'lbl.Save'|trans|ucfirst }}" />
            </div>
          </div>
        </fieldset>
        {% endform %}
      {% endif %}
    </div>
  {% endblock %}

  {% block block_heading %}{% endblock %}
</section>

{# Success #}
{% if resetPasswordSuccess %}
  <div class="message success"><p>{{ 'msg.ResetPasswordIsSuccess'|trans }}</p></div>
{% endif %}

{# Error #}
{% if resetPasswordCodeInvalid %}
  <div class="message error"><p>{{ 'err.ResetPasswordInvalidCode'|trans }}</p></div>
{% endif %}

{# Error #}
{% if resetPasswordHasError %}
  <div class="message error"><p>{{ 'err.FormError'|trans }}</p></div>
{% endif %}

{% if not resetPasswordHideForm %}
  <section id="resetPasswordForm" class="mod">
    <div class="inner">
      <div class="bd">
        {% form resetPassword %}
        <fieldset>
          <p{% if txtPasswordError %} class="errorArea"{% endif %}>
            <label for="password">{{ 'lbl.Password'|trans|ucfirst }}
              <abbr title="{{ 'lbl.RequiredField'|trans }}">*</abbr>
            </label>
            {% form_field password %} {% form_field_error password %}
          </p>
          <p>
            <label for="showPassword">{% form_field show_password %} {{ 'lbl.ShowPassword'|trans|ucfirst }}</label>
          </p>
          <p>
            <input class="inputSubmit" type="submit" value="{{ 'lbl.Save'|trans|ucfirst }}" />
          </p>
        </fieldset>
        {% endform %}
      </div>
    </div>
  </section>
{% endif %}

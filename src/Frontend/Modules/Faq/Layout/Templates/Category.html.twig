{#
	variables that are available:
	- {{ questions }}: contains all questions inside this category
#}

<section id="faqCategory" class="mod">
	<div class="inner">
		<header class="hd">
			<h1>{{ category.title }}</h1>
		</header>
		<div class="bd">
			{% if questions %}
				<section class="mod">
					<div class="inner">
						<div class="bd">
							<ul>
								{% for question in questions %}
									<li><a href="{{ question.full_url }}">{{ question.question }}</a></li>
								{% endfor %}
							</ul>
						</div>
					</div>
				</section>
			{% endif %}

			{% if not questions %}
				<p>{{ 'msg.NoQuestionsInCategory'|trans|capitalize }}</p>
			{% endif %}

			<p><a href="{{ geturlforblock('Faq') }}" title="{{ 'lbl.ToFaqOverview'|trans|capitalize }}">{{ 'lbl.ToFaqOverview'|trans|capitalize }}</a></p>
		</div>
	</div>
</section>

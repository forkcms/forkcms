{#
  variables that are available:
  - {{ widgetTagsRelated }}: contains an array with all related items
#}
{% if widgetTagsRelated %}
  <aside class="module-tags widget-tags-related">
    {% block widget_heading %}
      <header class="widget-heading" role="banner">
        <h3>{{ 'lbl.Related'|trans|ucfirst }}</h3>
      </header>
    {% endblock %}

    {% block widget_body %}
      <div class="widget-body">
        <ul>
          {% for widgetTagsRelated in widgetTagsRelated %}
            <li>
              <a href="{{ widgetTagsRelated.full_url }}" title="{{ widgetTagsRelated.title }}">
                {{ widgetTagsRelated.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
    {% endblock %}

    {% block widget_footer %}{% endblock %}
  </aside>
{% endif %}

{#
	variables that are available:
	- {{ searchResults }}: contains an array with all items, each element contains data about the item
	- {{ searchTerm }}: the term that has been searched for
#}

{% if searchTerm %}
	<section id="searchResults" class="mod">
		<div class="inner">
			{% if not searchResults %}
				<div class="bd content">
					<p>{{ msg.SearchNoItems }}</p>
				</div>
			{% endif %}
			{% if searchResults %}
				{% for xXx in searchResults %}
					<div class="bd">
						<section class="mod">
							<div class="inner">
								<header class="hd">
									<h3>
										<a href="{{ searchResults.full_url }}" title="{{ searchResults.title }}">
											{{ searchResults.title }}
										</a>
									</h3>
								</header>
								<div class="bd content">
									{% if not searchResults.introduction %}{{ searchResults.text|truncate(200 ) }}{% endif %}
									{% if searchResults.introduction %}{{ searchResults.introduction }}{% endif %}
								</div>
							</div>
						</section>
					</div>
				{% endfor %}
			{% endif %}
		</div>
	</section>
	{% include "Core/Layout/Templates/Pagination.html.twig" %}
{% endif %}

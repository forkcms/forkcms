{% import "Core/Layout/Templates/Macros.html.twig" as macro %}

{% block widget_heading %}{% endblock %}

{% block widget_body %}
  {% form search %}
  <label for="qWidget" class="sr-only sr-only-focusable">
    {{ 'lbl.SearchTerm'|trans|ucfirst }}{{ macro.required }}
  </label>
  <div class="form-group">
    <div class="input-group">
      {% form_field q_widget %}
      <div class="input-group-btn">
        <input id="submit" class="btn btn-default" type="submit" name="submit" value="{{ 'lbl.Search'|trans }}" />
      </div>
    </div>
  </div>
  {% endform %}
{% endblock %}

{% block widget_footer %}{% endblock %}

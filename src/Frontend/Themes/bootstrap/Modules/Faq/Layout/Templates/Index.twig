{#
	variables that are available:
	- {{ faqCategories }}: contains all categories, along with all questions inside a category
#}

{% if not faqCategories %}
	<section id="faqIndex">
		<p>{{ msg.FaqNoItems }}</p>
	</section>
{% endif %}

{% if faqCategories %}
	<section id="faqIndex">
		<div class="panel-group" id="accordion">
			{% set faqCategoriesSpoonIter = faqCategories %}{% for faqCategories in faqCategoriesSpoonIter %}
				{% if allowMultipleCategories %}
				<header>
					<h3 id="{{ faqCategories.url }}">{{ faqCategories.title }}</h3>
				</header>
				{% endif %}

				{% set faqCategories.questionsSpoonIter = faqCategories.questions %}{% for faqCategories.questions in faqCategories.questionsSpoonIter %}
				<div class="panel panel-default">
					<div class="panel-heading">
						<h4 class="panel-title">
							<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapse{{ faqCategories.questions.id }}">{{ faqCategories.questions.question }}</a>
						</h4>
					</div>
					<div id="collapse{{ faqCategories.questions.id }}" class="panel-collapse collapse">
						<div class="panel-body">
							{{ faqCategories.questions.answer }}
						</div>
					</div>
				</div>
				{% endfor %}
			{% endfor %}
		</div>
	</section>
{% endif %}
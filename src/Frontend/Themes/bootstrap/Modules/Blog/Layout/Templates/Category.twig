{#
	variables that are available:
	- {{ category }}: contains data about the category
	- {{ items }}: contains an array with all posts, each element contains data about the post
#}

{% if items %}
	<section id="blogCategory">
		{% set itemsCollection = items %}{% for items in itemsCollection %}
			<article>
					<header>
						<h3><a href="{{ items.full_url }}" title="{{ items.title }}">{{ items.title }}</a></h3>
						<p class="lead">
							{# Written by #}
							{$msgWrittenBy|capitalize|sprintf({$items.user_id|usersetting:'nickname'}})

							{# Category#}
							{{ lbl.In }} {{ lbl.The }} {{ lbl.Category }} <a href="{{ items.category_full_url }}" title="{{ items.category_title }}">{{ items.category_title }}</a>{% if not items.tags %}.{% endif %}
						</p>
						<hr>
						<p class="pull-left"><span class="glyphicon glyphicon-time"></span>					
							{# Written on #}
							{{ lbl.On }} {{ items.publish_on|spoon_date({{ dateFormatLong }}, {{ LANGUAGE }} ) }}
						</p>
							{# Comments #}
							{% if items.allow_comments %}
							<div class="text-right">
								{% if not items.comments %}<a href="{{ items.full_url }}#{{ act.Comment }}">{{ msg.BlogNoComments|capitalize }}</a>{% endif %}
								{% if items.comments %}
									{% if items.comments_multiple %}<a href="{{ items.full_url }}#{{ act.Comments }}">{{ msg.BlogNumberOfComments|sprintf({{ items.comments_count }} ) }}</a>{% endif %}
									{% if not items.comments_multiple %}<a href="{{ items.full_url }}#{{ act.Comments }}">{{ msg.BlogOneComment }}</a>{% endif %}
								{% endif %}
							</div>
							{% endif %}
						<hr>
							{# Tags#}
							{% if items.tags %}
							<p>
								{{ lbl.With }} {{ lbl.The }} {{ lbl.Tags }}
								{% set items.tagsCollection = items.tags %}{% for items.tags in items.tagsCollection %}
									<a href="{{ items.tags.full_url }}" rel="tag" title="{{ items.tags.name }}">{{ items.tags.name }}</a>{% if not items.tags.last %}, {% endif %}{% if items.tags.last %}.{% endif %}
								{% endfor %}
							</p>
							<hr>
							{% endif %}
					</header>
					
					{% if items.image %}<img src="{{ FRONTEND_FILES_URL }}/blog/images/source/{{ items.image }}" alt="{{ items.title }}" />{% endif %}
					{% if not items.introduction %}{{ items.text }}{% endif %}
					{% if items.introduction %}{{ items.introduction }}{% endif %}
					<hr>
			</article>
		{% endfor %}
	</section>
	{% include Core/Layout/Templates/Pagination.twig %}
{% endif %}

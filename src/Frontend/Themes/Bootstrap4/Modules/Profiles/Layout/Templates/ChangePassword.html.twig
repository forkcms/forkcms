{% import 'Core/Layout/Templates/Alerts.html.twig' as alerts %}

<section id="updatePasswordForm" class="profiles">
  {% if updatePasswordSuccess %}
    {{ alerts.alert('success', 'msg.UpdatePasswordIsSuccess'|trans) }}
  {% endif %}
  {% if updatePasswordHasFormError %}
    {{ alerts.alert('danger', 'err.FormError'|trans) }}
  {% endif %}

  {% form updatePassword %}
    <fieldset class="form-horizontal">
      <div class="form-group row{% if txtOldPasswordError %} has-danger{% endif %}">
        <label class="form-control-label col-sm-2" for="oldPassword">{{ 'lbl.OldPassword'|trans|ucfirst }}<abbr title="{{ 'lbl.RequiredField'|trans|ucfirst }}">*</abbr></label>
        <div class="col-sm-6">
          {% form_field old_password %}
          {% form_field_error old_password %}
        </div>
      </div>
      <div class="form-group row{% if txtNewPasswordError %} has-danger{% endif %}">
        <label class="form-control-label col-sm-2" for="newPassword">{{ 'lbl.NewPassword'|trans|ucfirst }}<abbr title="{{ 'lbl.RequiredField'|trans|ucfirst }}">*</abbr></label>
        <div class="col-sm-6">
          {% form_field_error new_password %}{% form_field new_password %}
        </div>
      </div>
      <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
          <label for="showPassword">{% form_field show_password %} {{ 'lbl.ShowPassword'|trans|ucfirst }}</label>
        </div>
      </div>
      <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
          <input class="btn btn-primary" type="submit" value="{{ 'lbl.Save'|trans|ucfirst }}" />
        </div>
      </div>
    </fieldset>
  {% endform %}
</section>

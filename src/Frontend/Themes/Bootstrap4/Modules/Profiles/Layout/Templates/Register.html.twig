{% import 'Core/Layout/Templates/Alerts.html.twig' as alerts %}
<section id="registerForm" class="profiles">
  {% if registerIsSuccess %}
    {{ alerts.alert('success', 'msg.RegisterIsSuccess'|trans) }}
  {% endif %}
  {% if registerHasFormError %}
    {{ alerts.alert('danger', 'err.FormError'|trans) }}
  {% endif %}

  {% if not registerHideForm %}
    {% form register %}
    <div class="bd">
      <fieldset class="form-horizontal">
        <div class="form-group row{% if txtDisplayNameError %} has-danger{% endif %}">
          <label class="form-control-label col-sm-2" for="displayName">{{ 'lbl.DisplayName'|trans|ucfirst }}<abbr title="{{ 'lbl.RequiredField'|trans|ucfirst }}">*</abbr></label>
          <div class="col-sm-6">
            {% form_field_error display_name %}{% form_field display_name %}
          </div>
        </div>
        <div class="form-group row{% if txtEmailError %} has-danger{% endif %}">
          <label class="form-control-label col-sm-2" for="email">{{ 'lbl.Email'|trans|ucfirst }}<abbr title="{{ 'lbl.RequiredField'|trans|ucfirst }}">*</abbr></label>
          <div class="col-sm-6">
            {% form_field_error email %}{% form_field email %}
          </div>
        </div>
        <div class="form-group row{% if txtPasswordError %} has-danger{% endif %}">
          <label class="form-control-label col-sm-2" for="password">{{ 'lbl.Password'|trans|ucfirst }}<abbr title="{{ 'lbl.RequiredField'|trans|ucfirst }}">*</abbr></label>
          <div class="col-sm-6">
            {% form_field_error password %}{% form_field password %}
          </div>
        </div>
        <div class="form-group row">
          <div class="offset-sm-2 col-sm-6">
            <label for="showPassword">{% form_field show_password %} {{ 'lbl.ShowPassword'|trans|ucfirst }} </label>
          </div>
        </div>
        <div class="form-group row">
          <div class="offset-sm-2 col-sm-6">
            <input class="btn btn-primary" type="submit" value="{{ 'lbl.Register'|trans|ucfirst }}" />
          </div>
        </div>
        <div class="form-group row">
          <div class="offset-sm-2 col-sm-6">
            <small>
              {{ 'msg.AlreadyHaveAnAccount'|trans|ucfirst }}
              <a href="{{ geturlforblock('Profiles','Login') }}">{{ 'lbl.LoginHere'|trans }}</a>
              .
            </small>
          </div>
        </div>
      </fieldset>
    </div>
    {% endform %}
  {% endif %}
</section>

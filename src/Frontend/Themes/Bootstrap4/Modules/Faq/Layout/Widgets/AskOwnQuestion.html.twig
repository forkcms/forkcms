{#
  variables that are available:
  - {{ widgetFaqOwnQuestion }}: true or false depending on if the data can be shown
#}
{% import 'Core/Layout/Templates/Alerts.html.twig' as alerts %}

{% if widgetFaqOwnQuestion %}
  <div id="faqOwnQuestionForm" class="faq faq-widget card my-3">
    <header class="card-header">
      <h4 class="mb-0" id="{{ 'act.OwnQuestion'|trans }}">{{ 'msg.AskOwnQuestion'|trans|ucfirst }}</h4>
    </header>
    {% if errorSpam %}
      {{ alerts.alert('danger', 'err.OwnQuestionSpam'|trans) }}
    {% endif %}
    {% if success %}
      {{ alerts.alert('success', 'msg.OwnQuestionSuccess'|trans) }}
    {% endif %}

    <div class="card-body">
      {% if form_own_question %}
        {% form own_question %}
          <div class="form-group{% if txtNameError %} has-danger{% endif %}">
            <label class="form-control-label" for="name">{{ 'lbl.YourName'|trans|ucfirst }}<abbr title="{{ 'lbl.RequiredField'|trans|ucfirst }}">*</abbr></label>
            {% form_field_error name %} {% form_field name %}
          </div>
          <div class="form-group{% if txtEmailError %} has-danger{% endif %}">
            <label class="form-control-label" for="email">{{ 'lbl.YourEmail'|trans|ucfirst }}<abbr title="{{ 'lbl.RequiredField'|trans|ucfirst }}">*</abbr></label>
            {% form_field_error email %} {% form_field email %}
          </div>
          <div class="form-group{% if txtMessageError %} has-danger{% endif %}">
            <label class="form-control-label" for="message">{{ 'lbl.YourQuestion'|trans|ucfirst }}<abbr title="{{ 'lbl.RequiredField'|trans|ucfirst }}">*</abbr></label>
            {% form_field_error message %} {% form_field message %}
          </div>
          <input class="btn btn-primary" type="submit" name="send" value="{{ 'lbl.Send'|trans|ucfirst }}" />
        {% endform %}
      {% endif %}
    </div>
  </div>
{% endif %}

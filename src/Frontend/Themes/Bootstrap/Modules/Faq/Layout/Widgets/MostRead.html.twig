{#
  variables that are available:
  - {{ widgetFaqMostRead }}: contains an array with all posts, each element contains data about the post
#}

{% if widgetFaqMostRead %}
  <section id="faqMostReadWidget" class="well faq">
    <header role="banner">
      <h3>{{ 'lbl.MostReadQuestions'|trans|capitalize }}</h3>
    </header>
    <ul>
      {% for question in widgetFaqMostRead %}
        <li><a href="{{ question.full_url }}">{{ question.question }}</a></li>
      {% endfor %}
    </ul>
  </section>
{% endif %}

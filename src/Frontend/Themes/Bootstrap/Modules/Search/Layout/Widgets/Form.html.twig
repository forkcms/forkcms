<section id="searchFormWidget" class="form-inline search" role="search">
  {% form search %}
    <label for="qWidget" class="sr-only">{{ 'lbl.SearchTerm'|trans|ucfirst }}<abbr title="{{ 'lbl.RequiredField'|trans|ucfirst }}">*</abbr></label>
    <div class="input-group">
      {% form_field q_widget %}
      <input id="submit" class="btn btn-outline-primary" type="submit" name="submit" value="{{ 'lbl.Search'|trans|ucfirst }}" />
    </div>
  {% endform %}
</section>

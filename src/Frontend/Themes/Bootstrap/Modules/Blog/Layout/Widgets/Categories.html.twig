{#
  variables that are available:
  - {{ widgetBlogCategories }}:
#}

{% if widgetBlogCategories %}
  <section id="blogCategoriesWidget" class="well blog">
  <header role="banner">
    <h3>{{ 'lbl.Categories'|trans|capitalize }}</h3>
  </header>
  <ul>
    {% for category in widgetBlogCategories %}
      <li>
      <a href="{{ category.url }}">
        {{ category.label }}</a>
      <span class="badge">{{ category.total }}</span>
      </li>
    {% endfor %}
  </ul>
  </section>
{% endif %}

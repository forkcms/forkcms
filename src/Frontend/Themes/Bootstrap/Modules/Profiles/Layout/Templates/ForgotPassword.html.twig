{% import 'Core/Layout/Templates/Alerts.html.twig' as alerts %}
{% if forgotPasswordSuccess %}
  {{ alerts.alert('success', 'msg.ForgotPasswordIsSuccess'|trans) }}
{% endif %}
{% if forgotPasswordHasError %}
  {{ alerts.alert('danger', 'err.FormError'|trans) }}
{% endif %}

{% if not forgotPasswordHideForm %}
  <section id="forgotPasswordForm" class="profiles">
    <div class="bd">
      {% form forgotPassword %}
        <label for="email">{{ 'lbl.Email'|trans|capitalize }}<abbr title="{{ 'lbl.RequiredField'|trans|capitalize }}">*</abbr></label>
        <div class="input-group {% if txtEmailError %} has-error{% endif %}">
          {% form_field email %}
          <span class="input-group-btn">
            <input class="btn btn-primary" type="submit" value="{{ 'lbl.Send'|trans|capitalize }}" />
          </span>
        </div>
        {% form_field_error email %}
      {% endform %}
    </div>
  </section>
{% endif %}

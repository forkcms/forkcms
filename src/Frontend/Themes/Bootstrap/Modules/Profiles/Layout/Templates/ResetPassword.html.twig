{% import 'Core/Layout/Templates/Alerts.html.twig' as alerts %}
<section id="resetPasswordForm" class="profiles">
  <h1>{{ 'lbl.ResetPassword'|trans|ucfirst }}</h1>
  {% if resetPasswordSuccess %}
    {{ alerts.alert('success', 'msg.ResetPasswordIsSuccess'|trans) }}
  {% endif %}
  {% if resetPasswordHasError %}
    {{ alerts.alert('danger', 'err.FormError'|trans) }}
  {% endif %}

  {% if not resetPasswordHideForm %}
    {% form resetPassword %}
    <fieldset>
      <div class="form-group{% if txtPasswordError %} has-danger{% endif %}">
        <label class="form-control-label" for="password">{{ 'lbl.Password'|trans|ucfirst }}<abbr title="{{ 'lbl.RequiredField'|trans|ucfirst }}">*</abbr></label>
        {% form_field password %}
        {% form_field_error password %}
      </div>
      <div class="form-group">
          <div class="custom-control custom-checkbox">
            {% form_field show_password %}
            <label for="showPassword" class="form-check-label custom-control-label">
              {{ 'lbl.ShowPassword'|trans|ucfirst }}
            </label>
          </div>
      </div>
      <div class="form-group">
        <input class="btn btn-primary" type="submit" value="{{ 'lbl.Save'|trans|ucfirst }}" />
      </div>
    </fieldset>
    {% endform %}
  {% endif %}
</section>

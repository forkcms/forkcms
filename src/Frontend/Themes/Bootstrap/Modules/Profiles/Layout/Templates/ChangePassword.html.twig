{% import 'Core/Layout/Templates/Alerts.html.twig' as alerts %}
{% if updatePasswordSuccess %}
  {{ alerts.alert('success', 'msg.UpdatePasswordIsSuccess'|trans) }}
{% endif %}
{% if updatePasswordHasFormError %}
  {{ alerts.alert('danger', 'err.FormError'|trans) }}
{% endif %}

<section id="updatePasswordForm" class="profiles">
  <div class="bd">
    {% form updatePassword %}
      <fieldset class="form-horizontal">
        <div class="form-group{% if txtOldPasswordError %} has-error{% endif %}">
          <label class="control-label col-sm-2" for="oldPassword">{{ 'lbl.OldPassword'|trans|capitalize }}<abbr title="{{ 'lbl.RequiredField'|trans|capitalize }}">*</abbr></label>
          <div class="col-sm-6">
            {% form_field_error old_password %}{% form_field old_password %}
          </div>
        </div>
        <div class="control-group{% if txtNewPasswordError %} has-error{% endif %}">
          <label class="control-label col-sm-2" for="newPassword">{{ 'lbl.NewPassword'|trans|capitalize }}<abbr title="{{ 'lbl.RequiredField'|trans|capitalize }}">*</abbr></label>
          <div class="col-sm-6">
            {% form_field_error new_password %}{% form_field new_password %}
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-6">
            <label for="showPassword">{% form_field show_password %} {{ 'lbl.ShowPassword'|trans|capitalize }}</label>
            <input class="btn btn-primary" type="submit" value="{{ 'lbl.Save'|trans|capitalize }}" />
          </div>
        </div>
      </fieldset>
    {% endform %}
  </div>
</section>

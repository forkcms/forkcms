{% import 'Core/Layout/Templates/Alerts.html.twig' as alerts %}

<section id="updatePasswordForm" class="profiles">
  <h1>{{ 'lbl.ChangePassword'|trans|ucfirst }}</h1>
  {% if updatePasswordSuccess %}
    {{ alerts.alert('success', 'msg.UpdatePasswordIsSuccess'|trans) }}
  {% endif %}
  {% if updatePasswordHasFormError %}
    {{ alerts.alert('danger', 'err.FormError'|trans) }}
  {% endif %}

  {% form updatePassword %}
    <fieldset>
      <div class="form-group{% if txtOldPasswordError %} has-danger{% endif %}">
        <label class="form-label" for="oldPassword">{{ 'lbl.OldPassword'|trans|ucfirst }}<abbr title="{{ 'lbl.RequiredField'|trans|ucfirst }}">*</abbr></label>
        {% form_field old_password %}
        {% form_field_error old_password %}
      </div>
      <div class="form-group{% if txtNewPasswordError %} has-danger{% endif %}">
        <label class="form-label" for="newPassword">{{ 'lbl.NewPassword'|trans|ucfirst }}<abbr title="{{ 'lbl.RequiredField'|trans|ucfirst }}">*</abbr></label>
        {% form_field new_password %}
        {% form_field_error new_password %}
      </div>
      <div class="form-group">
        <div class="custom-control custom-checkbox">
          {% form_field show_password %}
          <label for="showPassword" class="custom-control-label">
            {{ 'lbl.ShowPassword'|trans|ucfirst }}
          </label>
        </div>
      </div>
      <div class="form-group">
        <input class="btn btn-primary" type="submit" value="{{ 'lbl.Save'|trans|ucfirst }}" />
      </div>
    </fieldset>
  {% endform %}
</section>

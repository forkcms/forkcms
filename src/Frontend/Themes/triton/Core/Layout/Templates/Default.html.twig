{% include "Core/Layout/Templates/Head.html.twig" %}

<body class="{{ LANGUAGE }}" itemscope itemtype="http://schema.org/WebPage">
	{% include "Core/Layout/Templates/Cookies.html.twig" %}

	<div id="topWrapper">
		<header id="header">
			<div class="container">

				{# Logo #}
				<div id="logo">
					<h2><a href="/">{{ siteTitle }}</a></h2>
				</div>

				{# Skip link #}
				<div id="skip">
					<p><a href="#main">{{ 'lbl.SkipToContent'|trans|capitalize }}</a></p>
				</div>

				{# Navigation #}
				<nav id="headerNavigation">
					<h4>{{ 'lbl.MainNavigation'|trans|capitalize }}</h4>
					{{ getnavigation('page', 0, 1)|raw }}
				</nav>

				{# Language #}
				<nav id="headerLanguage">
					<h4>{{ 'lbl.Language'|trans|capitalize }}</h4>
					{% include "Core/Layout/Templates/Languages.html.twig" %}
				</nav>

				{# Top positions #}
				{% for top in positions.top %}
					{% if top.html %}
						{{ top.html|raw }}
					{% elseif top.include_path %}
						{% include top.include_path %}
					{% endif %}
				{% endfor %}

				{# Breadcrumb #}
				<div id="breadcrumb">
					<h4>{{ 'lbl.Breadcrumb'|trans|capitalize }}</h4>
					{% include "Core/Layout/Templates/Breadcrumb.html.twig" %}
				</div>

				{# Advertisement positions #}
				{% for advertisement in positions.advertisement %}
					{% if advertisement.html %}
						<div id="headerAd">
							{{ advertisement.html|raw }}
						</div>
					{% elseif advertisement.include_path %}
						{% include advertisement.include_path %}
					{% endif %}
				{% endfor %}
			</div>

		</header>
		<div id="main">
			<div class="container">

				{# Left column #}
				<div class="col col-3">

					{# Subnavigation #}
					<nav class="sideNavigation">
						<h4>{{ 'lbl.Subnavigation'|trans|capitalize }}</h4>
						{{ var|getsubnavigation('page', page.id, 2)|raw }}
					</nav>

					{# Left positions #}
					{% for left in positions.left %}
						{% if left.html %}
							<section class="mod">
								<div class="inner">
									<div class="bd content">
										{{ left.html|raw }}
									</div>
								</div>
							</section>
						{% elseif left.include_path %}
							{% include left.include_path %}
						{% endif %}
					{% endfor %}

				</div>

				{# Main column #}
				<div class="col col-9 lastCol">

					{# Page title #}
					{% if not hideContentTitle %}
						<header class="mainTitle">
							<h1>{{ page.title }}</h1>
						</header>
					{% endif %}

					{# Main positions #}
					{% for main in positions.main %}
						{% if main.html %}
							<section class="mod">
								<div class="inner">
									<div class="bd content">
										{{ main.html|raw }}
									</div>
								</div>
							</section>
						{% else %}
							{% include main.include_path %}
						{% endif %}
					{% endfor %}
				</div>
			</div>
		</div>
		<noscript>
			<div class="message notice">
				<h4>{{ 'lbl.EnableJavascript'|trans|capitalize }}</h4>
				<p>{{ 'msg.EnableJavascript'|trans }}</p>
			</div>
		</noscript>
	</div>
	<div id="bottomWrapper">
		{% include "Core/Layout/Templates/Footer.html.twig" %}
	</div>

	{# General Javascript #}
	{% for js in jsFiles %}
		<script src="{{ js.file }}"></script>
	{% endfor %}

	{# Theme specific Javascript #}
	<script src="{{ THEME_URL }}/Core/Js/triton.js"></script>

	{# Site wide HTML #}
	{{ siteHTMLFooter|raw }}
</body>
</html>

{% extends '@Backend/base/base.html.twig' %}
{% import '@Backend/base/macros.html.twig' as macro %}
{% set crudIndexModule = null %}
{% set crudIndexParameters = [] %}
{% set crudIndexRelative = false %}
{% set crud_index_locale = null %}

{% block content %}
  {% if form_theme is defined %}
    {% form_theme backend_form with ['@Backend/base/formTheme.html.twig', form_theme] %}
  {% endif %}
  {{ form_start(backend_form) }}
  {{ form_widget(backend_form) }}
  {{ form_errors(backend_form) }}
  {{ form_rest(backend_form) }}

  <div class="btn-toolbar">
    {% if crudIndexAction is defined and is_allowed(crudIndexAction, crudIndexModule) %}
      <div class="btn-group" role="group">
        {{ macro.buttonIcon(action_path(crudIndexAction, crudIndexModule, crudIndexParameters, crudIndexRelative, crud_index_locale), 'times', 'lbl.Cancel'|trans|ucfirst, 'btn-default') }}
      </div>
    {% endif %}
    <div class="btn-group ms-auto" role="group">
      {{ macro.buttonIcon('', submitIcon|default('plus-square'), submitLabel|default('lbl.Add'|trans|ucfirst), submitClass|default('btn-primary')) }}
    </div>
  </div>
  {{ form_end(backend_form) }}
{% endblock %}

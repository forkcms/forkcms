<ol class="breadcrumb" itemscope itemtype="https://schema.org/BreadcrumbList" aria-label="breadcrumb">
  {% for breadcrumb in breadcrumbs %}
    <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem" {{ breadcrumbs.count == loop.index ? ' aria-current="page"' : '' }}>
      {% if not loop.first %}
        <i class="fas fa-chevron-right fa-xs"></i>
      {% endif %}
      {% if breadcrumb.url is null or breadcrumbs.count == loop.index %}
        <span itemprop="name">{{ breadcrumb.label|ucfirst }}</span>
      {% else %}
        <a href="{{ breadcrumb.url }}" itemtype="http://schema.org/Thing" itemprop="item">
          <span itemprop="name">{{ breadcrumb.label|ucfirst }}</span>
        </a>
      {% endif %}
    </li>
  {% endfor %}
</ol>

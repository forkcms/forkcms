{% macro buttonIcon(url, icon, label, buttonType, extra, iconRight=false, iconOnly=false) %}
  {% import _self as macro %}
  {# When url is an empty string, use a button, otherwise use a hyperlink/anchor #}
  {% if url %}
    <a href="{{ url }}" class="btn {{ buttonType|default('btn-default') }}{% if iconOnly %} btn-icon-only{% endif %}" title="{{ label }}" {% if extra is iterable %}{% for attr, value in extra %} {{ attr }}="{{ value }}"{% endfor %}{% else %}{{ extra }}{% endif %}>
    {% apply spaceless %}
      {% if not iconRight %}{{ macro.icon(icon) }}{% endif %}
      <span class="{% if iconOnly %}visually-hidden{% else %}btn-text{% endif %}">{{ label }}</span>
      {% if iconRight %}{{ macro.icon(icon) }}{% endif %}
    {% endapply %}
    </a>
  {% else %}
    {% if extra['data-bs-toggle'] is defined and extra['type'] is not defined %}
      {% set extra = extra|merge({'type': 'button'}) %}
    {% endif %}
    <button class="btn {{ buttonType|default('btn-default') }}{% if iconOnly %} btn-icon-only{% endif %}" title="{{ label }}" {% if extra is iterable %}{% for attr, value in extra %} {{ attr }}="{{ value }}"{% endfor %}{% else %}{{ extra }}{% endif %}>
    {% apply spaceless %}
      {% if not iconRight %}{{ macro.icon(icon) }}{% endif %}
      <span class="{% if iconOnly %}visually-hidden{% else %}btn-text{% endif %}">{{ label }}</span>
      {% if iconRight %}{{ macro.icon(icon) }}{% endif %}
    {% endapply %}
    </button>
  {% endif %}
{% endmacro %}

{%- macro required() -%}
  <abbr data-bs-toggle="tooltip" aria-label="{{ 'lbl.RequiredField'|trans|ucfirst }}" title="{{ 'lbl.RequiredField'|trans|ucfirst }}">*</abbr>
{%- endmacro -%}

{% macro icon(icon, icon_type='fas') %}
  <i class="{{ icon_type }} fa-{{ icon }}"></i>
{% endmacro %}

{% macro infoTooltip(title, icon='info-circle', icon_type='fas') %}
  {% import _self as macro %}
  <abbr tabindex="0" data-bs-toggle="tooltip" aria-label="{{ title }}" title="{{ title }}">{{ macro.icon(icon, icon_type) }}</abbr>
{% endmacro %}

{% macro dataGrid(data_grid, addItemLink, add_item_text, no_items_text) %}
  {% import _self as macro %}
  {% if data_grid %}
    <div class="table-responsive">
      {{ data_grid|raw }}
    </div>
  {% else %}
    {{ macro.emptyState(addItemLink, add_item_text, no_items_text) }}
  {% endif %}
{% endmacro %}

{% macro alert(type, message, dismissable=true, id, extra_attributes=[], active=true, showIcon=true) %}
  {% import _self as macro %}

  {% set extra_attributes = extra_attributes|merge({'class': 'toast toast-' ~ type ~ (extra_attributes.class is defined and extra_attributes.class|length > 0 ? ' ' ~ extra_attributes.class|default(''))}) %}

  {% if active %}
    {% set extra_attributes = extra_attributes|merge({'class': extra_attributes.class|default('') ~ ' to-show'}) %}
  {% else %}
    {% set extra_attributes = extra_attributes|merge({'class': extra_attributes.class|default('') ~ ' hide'}) %}
  {% endif %}

  {% set role = 'status' %}
  {% set live = 'polite' %}
  {% set autohide = false %}
  {% set dismissable_class = ' d-none' %}

  {% if type == 'success' or type == 'info' %}
    {% set autohide = true %}
  {% endif %}

  {% if type == 'danger' or type == 'warning' %}
    {% set role = 'alert' %}
    {% set live = 'assertive' %}
  {% endif %}

  {% if type == 'danger' %}
    {% set dismissable_class = '' %}
  {% endif %}

  {% if dismissable == true %}
    {% set dismissable_class = '' %}
  {% endif %}

  <div{% for attrname, attrvalue in extra_attributes %} {{ attrname }}="{{ attrvalue }}"{% endfor %} role="{{ role }}" data-role="toast" aria-live="{{ live }}" aria-atomic="true"{% if id %} id="{{ id }}"{% endif %} data-bs-autohide="{{ autohide ? 'true' : 'false' }}" data-bs-delay="5000">
    <div class="toast-body">
      {% if dismissable == true %}
        <div class="row justify-content-end">
          <div class="col-auto">
            <button type="button" class="btn-close {{ dismissable_class }}" data-bs-dismiss="toast" aria-label="{{ 'lbl.Close'|trans }}"></button>
          </div>
        </div>
      {% endif %}
      {% if message %}
        {% if showIcon == true and type == 'danger' %}
          {{ macro.icon('times-circle toast-icon', 'far') }}
        {% elseif showIcon == true and type == 'success' %}
          {{ macro.icon('check-circle toast-icon', 'far') }}
        {% elseif showIcon == true and type == 'info' %}
          {{ macro.icon('info-circle toast-icon') }}
        {% elseif showIcon == true and type == 'warning' %}
          {{ macro.icon('exclamation-triangle toast-icon') }}
        {% endif %}
        {% if '</p>' in message or '</ul>' in message %}
          {{ message|raw }}
        {% else %}
          <p>
            {{ message|raw }}
          </p>
        {% endif %}
      {% endif %}
    </div>
  {% if autohide %}
    <div class="toast-progress"><div class="toast-progress--inner"></div></div>
  {% endif %}
  </div>
{% endmacro %}

{% macro emptyState(addItemLink, add_item_text, no_items_text, add_item_link_extra_attributes) %}
  {% set add_item_text = add_item_text|default('msg.AddItem'|trans|raw) %}
  {% set no_items_text = no_items_text|default('msg.NoItems'|trans|raw) %}

  <div class="empty-state">
    <img class="empty-state-illustration mb-4" src="{{ BACKEND_CORE_URL }}/Layout/images/empty-state.svg" alt="">
    <p class="text-black mb-2"><strong>{{ no_items_text|raw }}</strong></p>
    {% if not addItemLink is null %}
      <a class="empty-state-add" href="{{ addItemLink }}"{% for attrname, attrvalue in add_item_link_extra_attributes %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>
        {{ add_item_text|trans|ucfirst }}
      </a>
    {% endif %}
  </div>
{% endmacro %}

<footer class="pt-3 mt-4 mt-auto">
  <ul class="nav justify-content-center border-top border-bottom py-3 my-3 bg-black">
    {% for footerLink in footerLinks %}
      <li class="nav-item">
        <a class="nav-link px-2 text-muted" href="{{ footerLink.url }}" title="{{ footerLink.navigation_title }}"{% if footerLink.rel %} rel="{{ footerLink.rel }}"{% endif %}>
          {{ footerLink.navigation_title }}
        </a>
      </li>
    {% endfor %}
  </ul>
  <p class="text-center text-muted"><span itemprop="copyrightYear">{{ date().format('Y') }}</span> {{ siteTitle }}</p>
</footer>

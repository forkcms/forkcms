{% if PRIVACY_CONSENT_ENABLED %}
  <div
    id="privacy-consent-dialog"
    tabindex="-1"
    role="dialog"
    aria-labelledby="privacy-consent-dialog-title"
    data-role="privacy_consent_dialog"
    data-backdrop="false"
    {% if PRIVACY_CONSENT_DIALOG_HIDE %}
      style="display: none"
    {% endif %}
  >
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <form data-role="privacy_consent_dialog_form">
          <div class="modal-header">
            <h5 id="privacy-consent-dialog-title">{{ 'lbl.PrivacyConsentDialogTitle'|trans|ucfirst }}</h5>
            <button type="button" class="btn-close" data-dismiss="modal" aria-label="{{ 'lbl.Close'|trans }}"></button>
          </div>
          <div class="modal-body">
            <p>
              {{ 'msg.PrivacyConsentDialogBefore'|trans|raw }}
            </p>

            <div class="form-group">
              <div class="form-check form-switch">
                <input name="privacyConsentLevelFunctionalCheckbox" id="privacyConsentLevelFunctionalCheckbox"
                  type="checkbox" checked disabled aria-describedby="privacyConsentLevelFunctionalHelpBlock"
                  data-role="privacy-level"
                  data-value="functional"
                  class="form-check-input"
                >
                <label id="privacyConsentLevelFunctionalCheckbox" class="form-check-label">
                  {{ 'lbl.PrivacyConsentLevelFunctional'|trans|ucfirst }}
                </label>
              </div>
              <small id="privacyConsentLevelFunctionalHelpBlock" class="text-muted form-text">
                {{ 'msg.PrivacyConsentLevelFunctional'|trans|raw }}
              </small>
            </div>

            {% for level in PRIVACY_CONSENT_DIALOG_LEVELS %}
              <div class="form-group mt-1">
                <div class="form-check form-switch">
                  <input name="privacyConsentLevel{{ level|ucfirst }}Checkbox"
                    id="privacyConsentLevel{{ level|ucfirst }}Checkbox" type="checkbox"
                    aria-describedby="privacyConsentLevel{{ level|ucfirst }}HelpBlock"
                    data-role="privacy-level"
                    data-value="{{ level }}"
                    class="form-check-input"
                  >
                  <label for="privacyConsentLevel{{ level|ucfirst }}Checkbox" id="privacyConsentLevel{{ level|ucfirst }}Checkbox" class="form-check-label">
                    {{ ('lbl.PrivacyConsentLevel' ~ level|ucfirst)|trans|ucfirst }}
                  </label>
                </div>
                <small id="privacyConsentLevel{{ level|ucfirst }}HelpBlock" class="text-muted form-text">
                  {{ ('msg.PrivacyConsentLevel' ~ level|ucfirst)|trans|raw }}
                </small>
              </div>
            {% endfor %}
            <p class="mt-3">
              {{ 'msg.PrivacyConsentDialogAfter'|trans|raw }}
            </p>
          </div>
          <div class="modal-footer">
            <button type="submit" data-role="privacy_consent_dialog_save_button" class="btn btn-sm btn-primary">
              {{ 'lbl.PrivacyConsentDialogSave'|trans|ucfirst }}
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
{% endif %}

  <div class="col-md-12">
    <h2>{{ 'lbl.Groups'|trans|capitalize }}</h2>
    {% if showProfilesAddGroup %}
    <div class="btn-toolbar pull-right">
      <div class="btn-group" role="group">
        <a href="{{ geturl('add_group' ) }}" class="btn btn-default" title="{{ 'lbl.AddGroup'|trans|capitalize }}">
          <span class="glyphicon glyphicon-plus"></span>&nbsp;

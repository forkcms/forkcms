{% include "/Layout/Templates/Head.html.twig" %}
{% include "/Layout/Templates/StructureStartModule.html.twig" %}
<div class="row fork-module-heading">
  <div class="col-md-12">
    <h2>{{ 'lbl.Profiles'|trans|capitalize }}: {{ lbl.Add }}</h2>
  </div>
</div>
{% form add %}
  {% if notifyProfile %}
  <p class="text-warning">{{ 'lbl.NewProfileWillBeNotified'|trans|capitalize }}</p>
  {% endif %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">{{ 'lbl.Profile'|trans|capitalize }}</h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <label for="email">
              {{ 'lbl.Email'|trans|capitalize }}
              <abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
            </label>
            {% form_field_error email %} {% form_field email %}
          </div>
          <div class="form-group">
            <label for="displayName">
              {{ 'lbl.DisplayName'|trans|capitalize }}
              <abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
            </label>
            {% form_field_error display_name %} {% form_field display_name %}
          </div>
          <div class="form-group">
            <label for="password">
              {{ 'lbl.Password'|trans|capitalize }}
              {% if not notifyProfile %}<abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>{% endif %}
            </label>
            {% form_field_error password %} {% form_field password %}
            {% if notifyProfile %}<span class="helpTxt">{{ msg.AutoGeneratedPasswordIfEmpty }}</span>{% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">{{ 'lbl.Settings'|trans|capitalize }}</h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <label for="firstName">{{ 'lbl.FirstName'|trans|capitalize }}</label>
            {% form_field_error first_name %} {% form_field first_name %}
          </div>
          <div class="form-group">
            <label for="lastName">{{ 'lbl.LastName'|trans|capitalize }}</label>
            {% form_field_error last_name %} {% form_field last_name %}
          </div>
          <div class="form-group">
            <label for="gender">{{ 'lbl.Gender'|trans|capitalize }}</label>
            {% form_field_error gender %} {% form_field gender %}
          </div>
          <div class="form-group">
            <label for="day">{{ 'lbl.BirthDate'|trans|capitalize }}</label>
            <div class="form-inline">
              <div class="form-group">{% form_field day %}</div>
              <div class="form-group">{% form_field month %}</div>
              <div class="form-group">{% form_field year %}</div>
              {% form_field_error year %}
            </div>
          </div>
          <div class="form-group">
            <label for="city">{{ 'lbl.City'|trans|capitalize }}</label>
            {% form_field_error city %} {% form_field city %}
          </div>
          <div class="form-group">
            <label for="country">{{ 'lbl.Country'|trans|capitalize }}</label>
            {% form_field_error country %} {% form_field country %}
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-module-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-right" role="group">
          <button id="addButton" type="submit" name="add" class="btn btn-primary">
            <span class="glyphicon glyphicon-plus"></span>&nbsp;
            {{ 'lbl.Add'|trans|capitalize }}
          </button>
        </div>
      </div>
    </div>
  </div>
{% endform %}

{% extends 'Layout/Templates/base.html.twig' %}
{% import "Layout/Templates/macros.html.twig" as macro %}

{% block actionbar %}

{% endblock %}

{% block content %}
  {% form edit %}
  {% if notifyProfile %}
    <p class="text-warning">{{ macro.icon('warning') }} {{ 'lbl.UpdatedProfileWillBeNotified'|trans|ucfirst }}</p>
  {% endif %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div>
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active">
            <a href="#tabGeneral" aria-controls="tabGeneral" role="tab" data-toggle="tab">{{ 'lbl.General'|trans|ucfirst }}</a>
          </li>
          <li role="presentation">
            <a href="#tabGroups" aria-controls="tabGroups" role="tab" data-toggle="tab">{{ 'lbl.Groups'|trans|ucfirst }}</a>
          </li>
        </ul>
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="tabGeneral">
            <div class="row">
              <div class="col-md-12">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h2 class="panel-title">{{ 'lbl.Profile'|trans|ucfirst }}</h2>
                  </div>
                  <div class="panel-body">
                    <div class="form-group">
                      <label>
                        {{ 'lbl.Email'|trans|ucfirst }}:
                      </label>
                      {{ profile.email }}
                    </div>
                    <div class="form-group">
                      <label for="displayName" class="control-label">
                        {{ 'lbl.DisplayName'|trans|ucfirst }}
                        {{ macro.required }}
                      </label>
                      {% form_field display_name %} {% form_field_error display_name %}
                    </div>
                    <div class="form-group">
                      <label>
                        {% form_field new_email %} {{ 'lbl.UpdateEmail'|trans|ucfirst }}
                      </label>
                      <span id="newEmailBox">
                        {% form_field_error email %}{% form_field email %}
                      </span>
                      <br>
                      <label>{% form_field new_password %} {{ 'lbl.NewPassword'|trans|ucfirst }}</label>
                      <span id="newPasswordBox">
                        {% form_field password %} {% form_field_error password %}
                        <label>{{ 'lbl.RepeatPassword'|trans|ucfirst }}</label>
                        {% form_field password_repeat %} {% form_field_error password_repeat %}
                        {% if notifyProfile %}
                          <span class="helpTxt">{{ 'msg.AutoGeneratedPasswordIfEmpty'|trans }}</span>
                        {% endif %}
                      </span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h2 class="panel-title">{{ 'lbl.Settings'|trans|ucfirst }}</h2>
                  </div>
                  <div class="panel-body">
                    <div class="form-group">
                      <label for="firstName" class="control-label">{{ 'lbl.FirstName'|trans|ucfirst }}</label>
                      {% form_field first_name %} {% form_field_error first_name %}
                    </div>
                    <div class="form-group">
                      <label for="lastName" class="control-label">{{ 'lbl.LastName'|trans|ucfirst }}</label>
                      {% form_field last_name %} {% form_field_error last_name %}
                    </div>
                    <div class="form-group">
                      <label for="gender" class="control-label">{{ 'lbl.Gender'|trans|ucfirst }}</label>
                      {% form_field gender %} {% form_field_error gender %}
                    </div>
                    <div class="form-group last">
                      <label for="day" class="control-label">{{ 'lbl.BirthDate'|trans|ucfirst }}</label>
                      <div class="form-inline">
                        <div class="form-group">
                          {% form_field day %}
                          {% form_field month %}
                          {% form_field year %}
                        </div>
                        {% form_field_error year %}
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="city" class="control-label">{{ 'lbl.City'|trans|ucfirst }}</label>
                      {% form_field city %} {% form_field_error city %}
                    </div>
                    <div class="form-group">
                      <label for="country" class="control-label">{{ 'lbl.Country'|trans|ucfirst }}</label>
                      {% form_field country %} {% form_field_error country %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div role="tabpanel" class="tab-pane" id="tabGroups">
            <div class="row">
              <div class="col-md-6">
                <div class="content-title">
                  <h2>{{ 'lbl.Groups'|trans|ucfirst }}</h2>
                </div>
              </div>
              <div class="col-md-6">
                {% if showProfilesAddProfileGroup %}
                  <div class="btn-toolbar pull-right">
                    <div class="btn-group" role="group">
                      {{ macro.buttonIcon(geturl('add_profile_group') ~ '&id=' ~  profile.id , 'plus-square', 'lbl.AddToGroup'|trans|ucfirst, 'btn-primary') }}
                    </div>
                  </div>
                {% endif %}
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="content-block content-block-pt">
                  {% if dgGroups %}
                    {{ dgGroups|raw }}
                  {% endif %}
                  {% if not dgGroups %}
                    <p>{{ 'msg.NoGroupsForThisProfile'|trans }}</p>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-page-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-left" role="group">
          {% if showProfilesDelete %}
            {% if deleted %}
              {{ macro.buttonIcon('', 'plus-square', 'lbl.Undelete'|trans|ucfirst, 'btn-primary', { "type":"button", "data-toggle":"modal", "data-target":"#confirmUndelete" }) }}
            {% endif %}
            {% if not deleted %}
              {{ macro.buttonIcon('', 'trash', 'lbl.Delete'|trans|ucfirst, 'btn-danger', { "type":"button", "data-toggle":"modal", "data-target":"#confirmDelete" }) }}
            {% endif %}
          {% endif %}
          {% if showProfilesBlock %}
            {% if blocked %}
              {{ macro.buttonIcon('', 'check', 'lbl.Unblock'|trans|ucfirst, 'btn-primary', { "type":"button", "data-toggle":"modal", "data-target":"#confirmUnblock" }) }}
            {% endif %}
            {% if not blocked %}
              {{ macro.buttonIcon('', 'ban', 'lbl.Block'|trans|ucfirst, 'btn-warning', { "type":"button", "data-toggle":"modal", "data-target":"#confirmBlock" }) }}
            {% endif %}
          {% endif %}
          {{ macro.buttonIcon(geturl('Index'), 'times', 'lbl.Cancel'|trans|ucfirst, 'btn-default') }}
        </div>
        <div class="btn-group pull-right" role="group">
          {{ macro.buttonIcon('', 'floppy-o', 'lbl.Save'|trans|ucfirst, 'btn-primary', { "type":"submit", "id":"saveButton", "name":"edit" }) }}
        </div>
      </div>
      {% if showProfilesBlock %}
        <div class="modal fade" id="{% if blocked %}confirmUnblock{% else %}confirmBlock{% endif %}" role="dialog" tabindex="-1" aria-hidden="true" aria-labelledby="{% if blocked %}confirmUnblock{% else %}confirmBlock{% endif %}Title">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title" id="{% if blocked %}confirmUnblock{% else %}confirmBlock{% endif %}Title">{% if blocked %}{{ 'lbl.Unblock'|trans|ucfirst }}{% else %}{{ 'lbl.Block'|trans|ucfirst }}{% endif %}</h4>
              </div>
              <div class="modal-body">
                {% if blocked %}
                  <p>{{ 'msg.ConfirmUnblock'|trans|format(profile.email)|raw }}</p>
                {% endif %}
                {% if not blocked %}
                  <p>{{ 'msg.ConfirmBlock'|trans|format(profile.email)|raw }}</p>
                {% endif %}
              </div>
              <div class="modal-footer">
                {{ macro.buttonIcon('', 'times', 'lbl.Cancel'|trans|ucfirst, 'btn-default', { "type":"button", "data-dismiss":"modal" }) }}
                {% if not blocked %}
                  {{ macro.buttonIcon(geturl('block') ~ '&id=' ~ profile.id, 'ban', 'lbl.Block'|trans|ucfirst, 'btn-warning') }}
                {% endif %}
                {% if blocked %}
                  {{ macro.buttonIcon(geturl('block') ~ '&id=' ~ profile.id, 'check', 'lbl.Unblock'|trans|ucfirst, 'btn-primary') }}
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
  {% endform %}

  {% if showProfilesDelete %}
    {{ form_start(deleteForm) }}
    {{ form_row(deleteForm._token) }}
    {{ form_row(deleteForm.id) }}
    <div class="modal fade" id="{% if deleted %}confirmUndelete{% else %}confirmDelete{% endif %}" role="dialog" tabindex="-1" aria-hidden="true" aria-labelledby="{% if deleted %}confirmUndelete{% else %}confirmDelete{% endif %}Title">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title" id="{% if deleted %}confirmUndelete{% else %}confirmDelete{% endif %}Title">{% if deleted %}{{ 'lbl.Undelete'|trans|ucfirst }}{% else %}{{ 'lbl.Delete'|trans|ucfirst }}{% endif %}</h4>
          </div>
          <div class="modal-body">
            {% if deleted %}
              <p>{{ 'msg.ConfirmUndelete'|trans|format(profile.email)|raw }}</p>
            {% endif %}
            {% if not deleted %}
              <p>{{ 'msg.ConfirmDelete'|trans|format(profile.email)|raw }}</p>
            {% endif %}
          </div>
          <div class="modal-footer">
            {{ macro.buttonIcon('', 'times', 'lbl.Cancel'|trans|ucfirst, 'btn-default', { "type":"button", "data-dismiss":"modal" }) }}

            {% set macroText = 'lbl.Delete'|trans|ucfirst %}
            {% set macroIcon = 'trash' %}
            {% if deleted %}
              {% set macroText = 'lbl.Undelete'|trans|ucfirst %}
              {% set macroIcon = 'check' %}
            {% endif %}

            {{ macro.buttonIcon('', macroIcon, macroText, 'btn-danger', { "type":"submit" }) }}
          </div>
        </div>
      </div>
    </div>
    {{ form_end(deleteForm) }}
  {% endif %}
{% endblock %}


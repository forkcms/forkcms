{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}

{% endblock %}

{% block content %}
  {% form edit %}
  {% if notifyProfile %}
    <p class="text-warning">
      <span class="fa fa-warning"></span> {{ 'lbl.UpdatedProfileWillBeNotified'|trans|capitalize }}</p>
  {% endif %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div role="tabpanel">
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active">
            <a href="#tabGeneral" aria-controls="general" role="tab" data-toggle="tab">{{ 'lbl.General'|trans|capitalize }}</a>
          </li>
          <li role="presentation">
            <a href="#tabGroups" aria-controls="groups" role="tab" data-toggle="tab">{{ 'lbl.Groups'|trans|capitalize }}</a>
          </li>
        </ul>
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="tabGeneral">
            <div class="row">
              <div class="col-md-12">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h3 class="panel-title">{{ 'lbl.Profile'|trans|capitalize }}</h3>
                  </div>
                  <div class="panel-body">
                    <div class="form-group">
                      <label>
                        {{ 'lbl.Email'|trans|capitalize }}:
                      </label>
                      {{ profile.email }}
                    </div>
                    <div class="form-group">
                      <label for="displayName" class="control-label">
                        {{ 'lbl.DisplayName'|trans|capitalize }}
                        <abbr data-toggle="tooltip" title="{{ 'lbl.RequiredField'|trans|capitalize }}">*</abbr>
                      </label>
                      {% form_field_error display_name %} {% form_field display_name %}
                    </div>
                    <div class="form-group">
                      <label>
                        {% form_field new_email %} {{ 'lbl.UpdateEmail'|trans|capitalize }}
                      </label>
                        <span id="newEmailBox">
                            {% form_field_error email %}{% form_field email %}
                        </span>
                      <br>
                      <label>{% form_field new_password %} {{ 'lbl.NewPassword'|trans|capitalize }}</label>
                        <span id="newPasswordBox">
                            {% form_field_error password %} {% form_field password %}
                          {% if notifyProfile %}
                            <span class="helpTxt">{{ 'msg.AutoGeneratedPasswordIfEmpty'|trans }}</span>{% endif %}
                        </span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h3 class="panel-title">{{ 'lbl.Settings'|trans|capitalize }}</h3>
                  </div>
                  <div class="panel-body">
                    <div class="form-group">
                      <label for="firstName" class="control-label">{{ 'lbl.FirstName'|trans|capitalize }}</label>
                      {% form_field_error first_name %} {% form_field first_name %}
                    </div>
                    <div class="form-group">
                      <label for="lastName" class="control-label">{{ 'lbl.LastName'|trans|capitalize }}</label>
                      {% form_field_error last_name %} {% form_field last_name %}
                    </div>
                    <div class="form-group">
                      <label for="gender" class="control-label">{{ 'lbl.Gender'|trans|capitalize }}</label>
                      {% form_field_error gender %} {% form_field gender %}
                    </div>
                    <div class="form-group last">
                      <label for="day" class="control-label">{{ 'lbl.BirthDate'|trans|capitalize }}</label>
                      <div class="form-inline">
                        <div class="form-group">
                          {% form_field day %}
                          {% form_field month %}
                          {% form_field year %}
                        </div>
                        {% form_field_error year %}
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="city" class="control-label">{{ 'lbl.City'|trans|capitalize }}</label>
                      {% form_field_error city %} {% form_field city %}
                    </div>
                    <div class="form-group">
                      <label for="country" class="control-label">{{ 'lbl.Country'|trans|capitalize }}</label>
                      {% form_field_error country %} {% form_field country %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div role="tabpanel" class="tab-pane" id="tabGroups">
            <div class="row">
              <div class="col-md-6">
                <div class="content-title">
                  <p>{{ 'lbl.Groups'|trans|capitalize }}</p>
                </div>
              </div>
              <div class="col-md-6">
                {% if showProfilesAddProfileGroup %}
                  <div class="btn-toolbar pull-right">
                    <div class="btn-group" role="group">
                      {{ macro.buttonIcon(geturl('add_profile_group') ~ '&id=' ~  profile.id , 'plus-square', 'lbl.AddGroup'|trans|capitalize, 'btn-primary' ) }}
                    </div>
                  </div>
                {% endif %}
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="content-block content-block-pt">
                  {% if dgGroups %}
                    {{ dgGroups|raw }}
                  {% endif %}
                  {% if not dgGroups %}
                    <p>{{ 'msg.NoGroups'|trans }}</p>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-page-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-left" role="group">
          {% if showProfilesDelete %}
            {% if deleted %}
              <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#confirmUndelete">
                {{ 'lbl.Undelete'|trans|capitalize }}
              </button>
            {% endif %}
            {% if not deleted %}
              <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmDelete">
                <span class="fa fa-trash"></span>{{ 'lbl.Delete'|trans|capitalize }}
              </button>
            {% endif %}
          {% endif %}
          {% if showProfilesBlock %}
            {% if blocked %}
              <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#confirmUnblock">
                <span class="fa fa-check"></span>{{ 'lbl.Unblock'|trans|capitalize }}
              </button>
            {% endif %}
            {% if not blocked %}
              <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#confirmBlock">
                <span class="fa fa-ban"></span>{{ 'lbl.Block'|trans|capitalize }}
              </button>
            {% endif %}
          {% endif %}
        </div>
        <div class="btn-group pull-right" role="group">
          <button id="saveButton" type="submit" name="edit" class="btn btn-primary">
            <span class="fa fa-floppy-o"></span>{{ 'lbl.Save'|trans|capitalize }}
          </button>
        </div>
      </div>
      {% if showProfilesDelete %}
        <div class="modal fade" id="{% if deleted %}confirmUndelete{% endif %}{% if not deleted %}confirmDelete{% endif %}" tabindex="-1" role="dialog" aria-labelledby="{% if deleted %}{{ 'lbl.Undelete'|trans|capitalize }}{% endif %}{% if not deleted %}{{ 'lbl.Delete'|trans|capitalize }}{% endif %}" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                {% if deleted %}
                  <span class="modal-title h4">{{ 'lbl.Undelete'|trans|capitalize }}</span>
                {% endif %}
                {% if not deleted %}
                  <span class="modal-title h4">{{ 'lbl.Delete'|trans|capitalize }}</span>
                {% endif %}
              </div>
              <div class="modal-body">
                {% if deleted %}
                  <p>{{ 'msg.ConfirmUndelete'|trans|sprintf(profile.email ) }}</p>
                {% endif %}
                {% if not deleted %}
                  <p>{{ 'msg.ConfirmDelete'|trans|sprintf(profile.email ) }}</p>
                {% endif %}
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                  <span class="fa fa-times"></span>{{ 'lbl.Cancel'|trans|capitalize }}
                </button>
                {% if deleted %}
                  <a href="{{ geturl('delete' ) }}&amp;id={{ profile.id }}" class="btn btn-primary">
                    {{ 'lbl.Undelete'|trans|capitalize }}
                  </a>
                {% endif %}
                {% if not deleted %}
                  <a href="{{ geturl('delete' ) }}&amp;id={{ profile.id }}" class="btn btn-danger">
                    <span class="fa fa-trash"></span>{{ 'lbl.Delete'|trans|capitalize }}
                  </a>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      {% endif %}
      {% if showProfilesBlock %}
        <div class="modal fade" id="{% if blocked %}confirmUnblock{% endif %}{% if not blocked %}confirmBlock{% endif %}" tabindex="-1" role="dialog" aria-labelledby="{% if blocked %}{{ 'lbl.Unblock'|trans|capitalize }}{% endif %}{% if not blocked %}{{ 'lbl.Block'|trans|capitalize }}{% endif %}" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                {% if blocked %}
                  <span class="modal-title h4">{{ 'lbl.Unblock'|trans|capitalize }}</span>
                {% endif %}
                {% if not blocked %}
                  <span class="modal-title h4">{{ 'lbl.Block'|trans|capitalize }}</span>
                {% endif %}
              </div>
              <div class="modal-body">
                {% if blocked %}
                  <p>{{ 'msg.ConfirmUnblock'|trans|sprintf(profile.email ) }}</p>
                {% endif %}
                {% if not blocked %}
                  <p>{{ 'msg.ConfirmBlock'|trans|sprintf(profile.email ) }}</p>
                {% endif %}
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                  <span class="fa fa-times"></span>{{ 'lbl.Cancel'|trans|capitalize }}
                </button>
                {% if not blocked %}
                  <a href="{{ geturl('block' ) }}&amp;id={{ profile.id }}" class="btn btn-warning">
                    <span class="fa fa-ban"></span>{{ 'lbl.Block'|trans|capitalize }}
                  </a>
                {% endif %}
                {% if blocked %}
                  <a href="{{ geturl('block' ) }}&amp;id={{ profile.id }}" class="btn btn-primary">
                    <span class="fa fa-check"></span>{{ 'lbl.Unblock'|trans|capitalize }}
                  </a>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
  {% endform %}
{% endblock %}


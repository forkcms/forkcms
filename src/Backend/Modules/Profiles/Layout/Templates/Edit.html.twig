{% extends 'Layout/Templates/base.html.twig' %}
{% import 'Layout/Templates/macros.html.twig' as macro %}

{% block actionbar %}

{% endblock %}

{% block content %}
  {% form edit %}
  {% if notifyProfile %}
    <p class="text-warning">{{ macro.icon('warning') }} {{ 'lbl.UpdatedProfileWillBeNotified'|trans|ucfirst }}</p>
  {% endif %}
  <div>
    <ul class="nav nav-tabs" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" href="#tabGeneral" aria-controls="tabGeneral" role="tab" data-bs-toggle="tab" aria-selected="true" id="general-tab">{{ 'lbl.General'|trans|ucfirst }}</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#tabGroups" aria-controls="tabGroups" role="tab" data-bs-toggle="tab" aria-selected="false" id="groups-tab">{{ 'lbl.Groups'|trans|ucfirst }}</a>
      </li>
    </ul>
    <div class="tab-content">
      <div role="tabpanel" class="tab-pane show active" id="tabGeneral" aria-labelledby="general-tab">
        <div class="card card-default">
          <div class="card-heading">
            <h2 class="card-title">{{ 'lbl.Profile'|trans|ucfirst }}</h2>
          </div>
          <div class="card-body">
            <div class="row gx-3">
              <div class="col-lg-6">
                <div class="form-group">
                  <label for="displayName" class="control-label">
                    {{ 'lbl.DisplayName'|trans|ucfirst }}
                    {{ macro.required }}
                  </label>
                  {% form_field display_name %} {% form_field_error display_name %}
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group mb-2">
                  <div class="form-check">
                    {% form_field new_email %}
                    <label class="form-check-label font-weight-bold" for="newEmail">{{ 'lbl.UpdateEmail'|trans|ucfirst }}</label>
                  </div>
                </div>
                <div class="form-group" id="newEmailBox">
                  {% form_field email %}
                  {% form_field_error email %}
                </div>
              </div>
              <div class="col-12">
                <div class="form-group">
                  <div class="form-check">
                    {% form_field new_password %}
                    <label class="form-check-label" for="newPassword">{{ 'lbl.ChangePassword'|trans|ucfirst }}</label>
                  </div>
                </div>

                <div id="newPasswordBox">
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label for="password">{{ 'lbl.NewPassword'|trans|ucfirst }}</label>
                        {% form_field password %} {% form_field_error password %}
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label for="passwordRepeat">{{ 'lbl.RepeatPassword'|trans|ucfirst }}</label>
                        {% form_field password_repeat %} {% form_field_error password_repeat %}
                        {% if notifyProfile %}
                          <small class="form-text text-muted">{{ 'msg.AutoGeneratedPasswordIfEmpty'|trans }}</small>
                        {% endif %}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="card card-default">
          <div class="card-heading">
            <h2 class="card-title">{{ 'lbl.PersonalInformation'|trans|ucfirst }}</h2>
          </div>
          <div class="card-body">
            <div class="row gx-3">
              <div class="col-lg-6">
                <div class="form-group">
                  <label for="firstName" class="control-label">{{ 'lbl.FirstName'|trans|ucfirst }}</label>
                  {% form_field first_name %} {% form_field_error first_name %}
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                  <label for="lastName" class="control-label">{{ 'lbl.LastName'|trans|ucfirst }}</label>
                  {% form_field last_name %} {% form_field_error last_name %}
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                  <label for="gender" class="control-label">{{ 'lbl.Gender'|trans|ucfirst }}</label>
                  {% form_field gender %} {% form_field_error gender %}
                </div>
              </div>
            </div>
            <div class="form-group">
              <label for="day" class="control-label">{{ 'lbl.BirthDate'|trans|ucfirst }}</label>
              <div class="row gx-3">
                <div class="col-4">
                  {% form_field day %}
                </div>
                <div class="col-4">
                  {% form_field month %}
                </div>
                <div class="col-4">
                  {% form_field year %}
                </div>
              </div>
              {% form_field_error year %}
            </div>
            <div class="row gx-3">
              <div class="col-lg-6">
                <div class="form-group">
                  <label for="city" class="control-label">{{ 'lbl.City'|trans|ucfirst }}</label>
                  {% form_field city %} {% form_field_error city %}
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                  <label for="country" class="control-label">{{ 'lbl.Country'|trans|ucfirst }}</label>
                  {% form_field country %} {% form_field_error country %}
                </div>
              </div>
            </div>

            <div class="form-group last">
              <label for="about">{{ 'lbl.About'|trans|ucfirst }}</label>
              {% form_field about %}
              {% form_field_error about %}
            </div>
          </div>
        </div>
      </div>
      <div role="tabpanel" class="tab-pane" id="tabGroups" aria-labelledby="groups-tab">
        <div class="d-flex">
          {% if isAllowedAction('AddProfileGroup') %}
            <div class="btn-toolbar ms-auto">
              <div class="btn-group" role="group">
                {{ macro.buttonIcon(geturl('add_profile_group') ~ '&id=' ~  profile.id , 'plus-square', 'lbl.AddToGroup'|trans|ucfirst, 'btn-primary') }}
              </div>
            </div>
          {% endif %}
        </div>
        <div class="content-block content-block-pt">
          {% if dgGroups %}
            {{ dgGroups|raw }}
          {% endif %}
          {% if not dgGroups %}
            <p class="mb-0">{{ 'msg.NoGroupsForThisProfile'|trans }}</p>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
  <div class="fork-page-actions">
    <div class="btn-toolbar d-flex">
      <div class="btn-group" role="group">
        {% if isAllowedAction('Delete') %}
          {% if deleted %}
            {{ macro.buttonIcon('', 'plus-square', 'lbl.Undelete'|trans|ucfirst, 'btn-primary', { "type":"button", "data-bs-toggle":"modal", "data-bs-target":"#confirmUndelete" }) }}
          {% endif %}
          {% if not deleted %}
            {{ macro.buttonIcon('', 'trash', 'lbl.Delete'|trans|ucfirst, 'btn-danger', { "type":"button", "data-bs-toggle":"modal", "data-bs-target":"#confirmDelete" }) }}
          {% endif %}
        {% endif %}
          {% if isAllowedAction('Block') %}
          {% if blocked %}
            {{ macro.buttonIcon('', 'check', 'lbl.Unblock'|trans|ucfirst, 'btn-primary', { "type":"button", "data-bs-toggle":"modal", "data-bs-target":"#confirmUnblock" }) }}
          {% endif %}
          {% if not blocked %}
            {{ macro.buttonIcon('', 'ban', 'lbl.Block'|trans|ucfirst, 'btn-warning', { "type":"button", "data-bs-toggle":"modal", "data-bs-target":"#confirmBlock" }) }}
          {% endif %}
        {% endif %}
        {{ macro.buttonIcon(geturl('Index'), 'times', 'lbl.Cancel'|trans|ucfirst, 'btn-default') }}
      </div>
      <div class="btn-group ms-auto" role="group">
        {{ macro.buttonIcon('', 'save', 'lbl.Save'|trans|ucfirst, 'btn-primary', { "type":"submit", "id":"saveButton", "name":"edit" }) }}
      </div>
    </div>
      {% if isAllowedAction('Block') %}
      <div class="modal fade" id="{% if blocked %}confirmUnblock{% else %}confirmBlock{% endif %}" role="dialog" tabindex="-1" aria-hidden="true" aria-labelledby="{% if blocked %}confirmUnblock{% else %}confirmBlock{% endif %}Title">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title" id="{% if blocked %}confirmUnblock{% else %}confirmBlock{% endif %}Title">{% if blocked %}{{ 'lbl.Unblock'|trans|ucfirst }}{% else %}{{ 'lbl.Block'|trans|ucfirst }}{% endif %}</h4>
            </div>
            <div class="modal-body">
              {% if blocked %}
                  <p>{{ 'msg.ConfirmUnblock'|trans|format(profile.email|e)|raw }}</p>
              {% endif %}
              {% if not blocked %}
                  <p>{{ 'msg.ConfirmBlock'|trans|format(profile.email|e)|raw }}</p>
              {% endif %}
            </div>
            <div class="modal-footer">
              {{ macro.buttonIcon('', 'times', 'lbl.Cancel'|trans|ucfirst, 'btn-default', { "type":"button", "data-dismiss":"modal" }) }}
              {% if not blocked %}
                {{ macro.buttonIcon(geturl('block') ~ '&id=' ~ profile.id, 'ban', 'lbl.Block'|trans|ucfirst, 'btn-warning') }}
              {% endif %}
              {% if blocked %}
                {{ macro.buttonIcon(geturl('block') ~ '&id=' ~ profile.id, 'check', 'lbl.Unblock'|trans|ucfirst, 'btn-primary') }}
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    {% endif %}
  </div>
  {% endform %}

  {% if isAllowedAction('Delete') %}
    {{ form_start(deleteForm) }}
    {{ form_row(deleteForm._token) }}
    {{ form_row(deleteForm.id) }}
    <div class="modal fade" id="{% if deleted %}confirmUndelete{% else %}confirmDelete{% endif %}" role="dialog" tabindex="-1" aria-hidden="true" aria-labelledby="{% if deleted %}confirmUndelete{% else %}confirmDelete{% endif %}Title">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title" id="{% if deleted %}confirmUndelete{% else %}confirmDelete{% endif %}Title">{% if deleted %}{{ 'lbl.Undelete'|trans|ucfirst }}{% else %}{{ 'lbl.Delete'|trans|ucfirst }}{% endif %}</h4>
          </div>
          <div class="modal-body">
            {% if deleted %}
              <p>{{ 'msg.ConfirmUndelete'|trans|format(profile.email|e)|raw }}</p>
            {% endif %}
            {% if not deleted %}
              <p>{{ 'msg.ConfirmDelete'|trans|format(profile.email|e)|raw }}</p>
            {% endif %}
          </div>
          <div class="modal-footer">
            {{ macro.buttonIcon('', 'times', 'lbl.Cancel'|trans|ucfirst, 'btn-default', { "type":"button", "data-dismiss":"modal" }) }}

            {% set macroText = 'lbl.Delete'|trans|ucfirst %}
            {% set macroIcon = 'trash' %}
            {% if deleted %}
              {% set macroText = 'lbl.Undelete'|trans|ucfirst %}
              {% set macroIcon = 'check' %}
            {% endif %}

            {{ macro.buttonIcon('', macroIcon, macroText, 'btn-danger', { "type":"submit" }) }}
          </div>
        </div>
      </div>
    </div>
    {{ form_end(deleteForm) }}
  {% endif %}
{% endblock %}


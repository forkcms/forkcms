{% extends 'Layout/Templates/base.html.twig' %}
{% import 'Layout/Templates/macros.html.twig' as macro %}

{% block actionbar %}

{% endblock %}

{% block content %}

  {% form settings %}
    <div class="card card-default">
      <div class="card-heading">
        <h2 class="card-title">
          {{ 'lbl.DisplayNameChanges'|trans|ucfirst }}
        </h2>
      </div>
      <div class="card-body">
        <div class="form-group">
          <div class="form-check">
            {% form_field limit_display_name_changes %}
            <label for="limitDisplayNameChanges" class="control-label">{{ 'lbl.LimitDisplayNameChanges'|trans|ucfirst }}</label>
            <span id="maxDisplayNameChangesBox">
              {{ macro.required }} {% form_field max_display_name_changes %}
              {% form_field_error max_display_name_changes %}
            </span>
          </div>
        </div>
      </div>
    </div>
    <div class="card card-default">
      <div class="card-heading">
        <h2 class="card-title">
          {{ 'lbl.Notifications'|trans|ucfirst }}
        </h2>
      </div>
      <div class="card-body">
        <div class="form-group">
          <div class="form-check">
            {% form_field send_new_profile_admin_mail %}
            <label for="sendNewProfileAdminMail" class="form-check-label">{{ 'lbl.SendNewProfileAdminMail'|trans|ucfirst }}</label>
          </div>
          <div class="form-check" id="overwriteProfileNotificationEmailBox">
            {% form_field overwrite_profile_notification_email %}
            <label for="overwriteProfileNotificationEmail" class="form-check-label">{{ 'lbl.OverwriteProfileNotificationEmail'|trans|ucfirst }}</label>
          </div>
          <div class="form-group" id="profileNotificationEmailBox">
            <label for="profileNotificationEmail">{{ 'lbl.Email'|trans|ucfirst }} {{ macro.required }}</label>
            {% form_field profile_notification_email %}
            {% form_field_error profile_notification_email %}
          </div>
        </div>
        <div class="form-group">
          <div class="form-check">
            {% form_field send_new_profile_mail %}
            <label for="sendNewProfileMail" class="form-check-label">{{ 'lbl.SendNewProfileMail'|trans|ucfirst }}</label>
          </div>
        </div>
      </div>
    </div>
    <div class="fork-module-actions">
      <div class="btn-toolbar">
        <div class="btn-group ms-auto" role="group">
          {{ macro.buttonIcon('', 'save', 'lbl.Save'|trans|ucfirst, 'btn-primary', { "type":"submit", "id":"save", "name":"save"}) }}
        </div>
      </div>
    </div>
  {% endform %}
{% endblock %}



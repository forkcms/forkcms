{% extends 'Layout/Templates/base.html.twig' %}
{% import 'Layout/Templates/macros.html.twig' as macro %}

{% block actionbar %}
  <div class="btn-toolbar justify-content-end">
    <div class="btn-group" role="group">
      {{ macro.buttonIcon(geturl('export_template'), 'download', 'lbl.ExportTemplate'|trans|ucfirst) }}
    </div>
  </div>
{% endblock %}

{% block content %}
  {% form import %}
  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
        <label for="file" class="form-label">{{ 'lbl.File'|trans|ucfirst }}{{ macro.required }}</label>
        {% form_field file %}
        {% form_field_error file %}
      </div>
      <div class="form-group">
        <div class="form-check">
          {% form_field overwrite_existing %}
          <label for="overwriteExisting" class="form-check-label">{{ 'msg.OverwriteExisting'|trans }}</label>
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="form-group">
        <label for="group" class="control-label">{{ 'lbl.Group'|trans|ucfirst }}</label>
        {% form_field group %} {% form_field_error group %}
      </div>
    </div>
  </div>
  <div class="fork-module-actions">
    <div class="btn-toolbar">
      <div class="btn-group">
        {% if showProfilesIndex %}
          {{ macro.buttonIcon(geturl('index'), 'times', 'lbl.Cancel'|trans|ucfirst) }}
        {% endif %}
      </div>
      <div class="btn-group ms-auto" role="group">
        {{ macro.buttonIcon('', 'upload', 'lbl.Import'|trans|ucfirst, 'btn-primary', { "id":"importButton", "type":"submit", "name":"add" }) }}
      </div>
    </div>
  </div>
  {% endform %}
{% endblock %}

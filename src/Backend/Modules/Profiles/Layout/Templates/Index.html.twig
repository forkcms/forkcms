{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}
  <div class="row fork-module-heading">
    <div class="col-md-6">
      <h2>{{ 'lbl.Profiles'|trans|capitalize }}</h2>
    </div>
    <div class="col-md-6">

      <div class="btn-toolbar pull-right">
        <div class="btn-group" role="group">
          <a href="{{ geturl('add' ) }}" class="btn btn-default" title="{{ 'lbl.Add'|trans|capitalize }}">
            <span class="fa fa-plus"></span>&nbsp;
            {{ 'lbl.Add'|trans|capitalize }}
          </a>
          {% if showProfilesImport %}
          <a href="{{ geturl('import' ) }}" class="btn btn-default" title="{{ 'lbl.Import'|trans|capitalize }}">
            <span class="fa fa-upload"></span>&nbsp;
            {{ 'lbl.Import'|trans|capitalize }}
          </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block content %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      {% form filter %}
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                  <label for="email" class="control-label">{{ 'lbl.Email'|trans|capitalize }}</label>
                  {% form_field_error email %} {% form_field email %}
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label for="status" class="control-label">{{ 'lbl.Status'|trans|capitalize }}</label>
                  {% form_field_error status %} {% form_field status %}
                </div>
              </div>
              <div class="col-md-4">
                {% if ddmGroup %}
                <div class="form-group">
                  <label for="group" class="control-label">{{ 'lbl.Group'|trans|capitalize }}</label>
                  {% form_field_error group %} {% form_field group %}
                </div>
                {% endif %}
              </div>
            </div>
          </div>
          <div class="panel-footer">
            <div class="btn-toolbar">
              <div class="btn-group pull-right">
                <button id="search" type="submit" class="btn btn-primary" name="search">
                  <span class="fa fa-refresh"></span>&nbsp;
                  {{ 'lbl.UpdateFilter'|trans|capitalize }}
                </button>
              </div>
            </div>
          </div>
        </div>
      {% endform %}
    </div>
  </div>
  <div class="row fork-module-content">
    <div class="col-md-12">
      {% if dgProfiles %}
      <form 'act.on="{{  geturl('mass_action' ) }}" method="get" class="forkForms submitWithLink">
        <div>
          <input type="hidden" name="offset" value="{{ offset }}" />
          <input type="hidden" name="order" value="{{ order }}" />
          <input type="hidden" name="sort" value="{{ sort }}" />
          <input type="hidden" name="email" value="{{ email }}" />
          <input type="hidden" name="status" value="{{ status }}" />
          <input type="hidden" name="newGroup" value="" />
        </div>
        {{ dgProfiles|raw }}
        <div class="modal fade" id="confirmDelete" tabindex="-1" role="dialog" aria-labelledby="{{ 'lbl.Delete'|trans|capitalize }}" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <span class="modal-title h4">{{ 'lbl.Delete'|trans|capitalize }}</span>
              </div>
              <div class="modal-body">
                <p>{{ msg.ConfirmMassDelete }}</p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'lbl.Cancel'|trans|capitalize }}</button>
                <button type="submit" class="btn btn-primary">{{ 'lbl.OK'|trans|capitalize }}</button>
              </div>
            </div>
          </div>
        </div>
        <div class="modal fade" id="confirmAddToGroup" tabindex="-1" role="dialog" aria-labelledby="{{ 'lbl.AddToGroup'|trans|capitalize }}" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <span class="modal-title h4">{{ 'lbl.AddToGroup'|trans|capitalize }}</span>
              </div>
              <div class="modal-body">
                <p>{{ msg.ConfirmMassAddToGroup }}</p>
                <div class="form-group">
                  <div class="jsMassActionAddToGroupSelectGroup"></div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'lbl.Cancel'|trans|capitalize }}</button>
                <button type="submit" class="btn btn-primary">{{ 'lbl.OK'|trans|capitalize }}</button>
              </div>
            </div>
          </div>
        </div>
      </form>
      {% endif %}
      {% if not dgProfiles %}
      <p>{{ msg.NoItems }}</p>
      {% endif %}
    </div>
  </div>
{% endblock %}

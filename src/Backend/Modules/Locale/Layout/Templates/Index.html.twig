{% include "/Layout/Templates/Head.html.twig" %}
{% include "/Layout/Templates/StructureStartModule.html.twig" %}
<div class="row fork-module-heading">
  <div class="col-md-6">
    <h2>{{ 'lbl.Translations'|trans|capitalize }}</h2>
  </div>
  <div class="col-md-6">

    <div class="btn-toolbar pull-right">
      <div class="btn-group" role="group">
        {% if showLocaleAdd %}
        <a href="{{ geturl('add' ) }}{{ filter }}" class="btn btn-default jsButtonAdd">
          <span class="fa fa-plus"></span>&nbsp;
          <span>{{ 'lbl.Add'|trans|capitalize }}</span>
        </a>
        {% endif %}
        {% if showLocaleExport %}
        <a href="{{ geturl('export' ) }}{{ filter }}" class="btn btn-default jsButtonExport">
          <span class="fa fa-download"></span>&nbsp;
          <span>{{ 'lbl.Export'|trans|capitalize }}</span>
        </a>
        {% endif %}
        {% if showLocaleImport %}
        <a href="{{ geturl('import' ) }}{{ filter }}" class="btn btn-default jsButtonImport">
          <span class="fa fa-upload"></span>&nbsp;
          <span>{{ 'lbl.Import'|trans|capitalize }}</span>
        </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>
<div class="row fork-module-content">
  <div class="col-md-12">
    {% form filter %}
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="row">
            <div class="col-md-3">
              <div class="form-group">
                <label for="application" class="control-label">{{ 'lbl.Application'|trans|capitalize }}</label>
                {% form_field_error application %} {% form_field application %}
              </div>
              <div class="form-group">
                <label for="module" class="control-label">{{ 'lbl.Module'|trans|capitalize }}</label>
                {% form_field_error module %} {% form_field module %}
              </div>
            </div>
            <div class="col-md-3">
              <div class="form-group">
                <label>{{ 'lbl.Types'|trans|capitalize }}</label>
                {% if type %}
                  <ul class="list-unstyled">
                    {% for item in type %}
                      <li class="checkbox">
                        <label for="{{ item.id }}">{{ item.chkType | raw }} {{ item.label|capitalize }}</label>
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </div>
            </div>
            <div class="col-md-3">
              <div class="form-group">
                <label>{{ 'lbl.Languages'|trans|capitalize }}</label>
                {% if language %}
                  <ul class="list-unstyled">
                    {% for item in language %}
                      <li class="checkbox">
                        <label for="{{ item.id }}">{{ item.chkLanguage | raw }} {{ item.label|capitalize }}</label>
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </div>
            </div>
            <div class="col-md-3">
              <div class="form-group">
                <label for="name" class="control-label">
                  {{ 'lbl.ReferenceCode'|trans|capitalize }}&nbsp;
                  <abbr class="fa fa-info-circle" data-toggle="tooltip" title="{{ msg.HelpName }}"></abbr>
                </label>
                {% form_field_error name %} {% form_field name %}
              </div>
              <div class="form-group">
                <label for="value" class="control-label">
                  {{ 'lbl.Value'|trans|capitalize }}&nbsp;
                  <abbr class="fa fa-info-circle" data-toggle="tooltip" title="{{ msg.HelpValue }}"></abbr>
                </label>
                {% form_field_error value %} {% form_field value %}
              </div>
            </div>
          </div>
        </div>
        <div class="panel-footer">
          <div class="btn-toolbar">
            <div class="btn-group pull-right">
              <button id="search" class="btn btn-primary" type="submit" name="search">
                <span class="fa fa-refresh"></span>&nbsp;
                {{ 'lbl.UpdateFilter'|trans|capitalize }}
              </button>
            </div>
          </div>
        </div>
      </div>
    {% endform %}
  </div>
</div>

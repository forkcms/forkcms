{% extends 'Layout/Templates/base.html.twig' %}
{% import "Layout/Templates/macros.html.twig" as macro %}

{% block actionbar %}
  {% if showLocaleExportAnalyse %}
    <div class="btn-toolbar pull-right">
      <div class="btn-group" role="group">
        {{ macro.buttonIcon(geturl('ExportAnalyse') ~ '&language=' ~ language, 'plus-square', 'lbl.Export'|trans|ucfirst) }}
      </div>
    </div>
  {% endif %}
{% endblock %}

{% block content %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="content-block content-block-pb">
        <div class="content-title">
          <h2>{{ 'lbl.Frontend'|trans|ucfirst }}</h2>
        </div>
        {% if dgFrontend %}
          {{ dgFrontend|raw }}
        {% endif %}
        {% if not dgFrontend %}
          <p>{{ 'msg.NoItemsAnalyse'|trans|ucfirst }}</p>
        {% endif %}
      </div>
      <div class="content-block content-block-pb">
        <div class="content-title">
          <h2>{{ 'lbl.Backend'|trans|ucfirst }}</h2>
        </div>
        {% if dgBackend %}
          {{ dgBackend|raw }}
        {% endif %}
        {% if not dgBackend %}
          <p>{{ 'msg.NoItemsAnalyse'|trans|ucfirst }}</p>
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}

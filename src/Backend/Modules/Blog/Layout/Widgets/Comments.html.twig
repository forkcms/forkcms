<div id="widgetBlogComments" class="panel panel-primary">
  <div class="panel-heading">
    <h2 class="panel-title">
      <a href="{{ geturl('comments','blog' ) }}">{{ 'lbl.Blog'|trans|capitalize }}: {{ 'lbl.LatestComments'|trans|capitalize }}</a>
    </h2>
  </div>
  {% if blogNumCommentsToModerate %}
  <div class="panel-body">
    <div class="pull-left">
      {{ 'msg.CommentsToModerate'|trans|sprintf(blogNumCommentsToModerate ) }}
    </div>
    <div class="pull-right">
      <a href="{{ geturl('comments','blog' ) }}#tabModeration"><span>{{ 'lbl.Moderate'|trans|capitalize }}</span></a>
    </div>
  </div>
  {% endif %}
  {% if blogComments %}
  <table class="table table-striped dataGrid">
    <tbody>
    {% for blogComment in blogComments %}
      <tr class="{{ cycle(['odd', 'even'], loop.index0) }}">
        <td><a href="{{ blogComment.full_url }}">{{ blogComment.title }}</a></td>
        <td class="name">{{ blogComment.author }}</td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
  {% endif %}
  {% if not blogComments %}
  <div class="panel-body">
    <p>{{ msg.NoPublishedComments }}</p>
  </div>
  {% endif %}
  <div class="panel-footer">
    <div class="btn-toolbar">
      <div class="btn-group">
        <a href="{{ geturl('comments','blog' ) }}" class="btn">{{ 'lbl.AllComments'|trans|capitalize }}</a>
      </div>
    </div>
  </div>
</div>

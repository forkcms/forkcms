{% include "/Layout/Templates/Head.html.twig" %}
{% include "/Layout/Templates/StructureStartModule.html.twig" %}
<div class="row fork-module-heading">
  <div class="col-md-12">
    <h2>
      {% if not filterCategory %}
      {{ 'lbl.Articles'|trans|capitalize }}
      {% endif %}
      {% if filterCategory %}
      {{ 'msg.ArticlesFor'|trans|sprintf(filterCategory.title|capitalize) }}
      {% endif %}
    </h2>
    <div class="btn-toolbar pull-right">
      <div class="btn-group" role="group">
        {% if showBlogAdd %}
        {% if filterCategory %}
        <a href="{{ geturl('add', null, '&category=#{filterCategory.id}') }}" class="btn btn-default" title="{{ 'lbl.Add'|trans|capitalize }}">
        {% endif %}
        {% if not filterCategory %}
        <a href="{{ geturl('add') }}" class="btn btn-default" title="{{ 'lbl.Add'|trans|capitalize }}">
        {% endif %}
          <span class="glyphicon glyphicon-plus"></span>&nbsp;
          {{ 'lbl.Add'|trans|capitalize }}
        </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% if hasMultipleCategories %}
    {% form filter %}
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <label for="category">{{ 'msg.ShowOnlyItemsInCategory'|trans }}</label>
                {% form_field_error category %} {% form_field category %}
              </div>
            </div>
          </div>
        </div>
        <div class="panel-footer">
          <div class="btn-toolbar">
            <div class="btn-group pull-right">
              <button id="search" type="submit" class="btn btn-primary" name="search">
                <span class="glyphicon glyphicon-refresh"></span>&nbsp;
                {{ 'lbl.UpdateFilter'|trans|capitalize }}
              </button>
            </div>
          </div>
        </div>
      </div>
    {% endform %}
{% endif %}

{% if dgRecent %}
<div class="row fork-module-content">
  <div class="col-md-12">
    <div class="panel panel-default jsDataGridHolder">
      <div class="panel-heading">
        <h3 class="panel-title">{{ 'lbl.RecentlyEdited'|trans|capitalize }}</h3>
      </div>
      {{ dgRecent|raw }}
    </div>
  </div>
</div>
{% endif %}
{% if dgDrafts %}
<div class="row fork-module-content">
  <div class="col-md-12">
    <div class="panel panel-default jsDataGridHolder">
      <div class="panel-heading">
        <h3 class="panel-title">{{ 'lbl.Drafts'|trans|capitalize }}</h3>
      </div>
      {{ dgDrafts|raw }}
    </div>
  </div>
</div>
{% endif %}
<div class="row fork-module-content">
  <div class="col-md-12">
    {% if dgPosts %}
    <div class="panel panel-default jsDataGridHolder">
      <div class="panel-heading">
        <h3 class="panel-title">{{ 'lbl.PublishedArticles'|trans|capitalize }}</h3>
      </div>
      {{ dgPosts|raw }}
    </div>
    {% endif %}
    {% if not dgPosts %}
    {% if filterCategory %}
    <p>{{ 'msg.NoItems'|trans|sprintf(geturl('add', null, '&category=#{filterCategory.id}')) }}</p>
    {% endif %}
    {% if not filterCategory %}
    <p>{{ 'msg.NoItems'|trans|sprintf(geturl('add')) }}</p>
    {% endif %}
    {% endif %}
  </div>
</div>

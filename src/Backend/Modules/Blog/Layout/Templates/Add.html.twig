{% include "/Layout/Templates/Head.html.twig" %}
{% include "/Layout/Templates/StructureStartModule.html.twig" %}
<div class="row fork-module-heading">
  <div class="col-md-6">
    <h2>{{ 'lbl.Add'|trans|capitalize }}</h2>
  </div>
  <div class="col-md-6">

  </div>
</div>
{% form add %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="form-group">
        <label for="title" class="control-label">{{ 'lbl.Title'|trans|capitalize }}</label>
        {% form_field_error title %} {% form_field title %}
      </div>
      {% if detailURL %}
      <a href="{{ detailURL }}"><small>{{ detailURL }}/<span id="generatedUrl"></span></small></a>      {% endif %}
      {% if not detailURL %}
      <p class="text-warning"><span class="fa fa-warning"></span> {{ 'err.NoModuleLinked'|trans|capitalize }}</p>
      {% endif %}
    </div>
  </div>
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div role="tabpanel">
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active">
            <a href="#tabContent" aria-controls="content" role="tab" data-toggle="tab">{{ 'lbl.Content'|trans|capitalize }}</a>
          </li>
          <li role="presentation">
            <a href="#tabComments" aria-controls="comments" role="tab" data-toggle="tab">{{ 'lbl.Comments'|trans|capitalize }}</a>
          </li>
          <li role="presentation">
            <a href="#tabSEO" aria-controls="seo" role="tab" data-toggle="tab">{{ 'lbl.SEO'|trans|capitalize }}</a>
          </li>
        </ul>
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="tabContent">
            <div class="row">
              <div class="col-md-8">
                <div class="form-group">
                  <label for="text" class="control-label">
                    {{ 'lbl.MainContent'|trans|capitalize }}
                    <abbr data-toggle="tooltip" title="{{ 'lbl.RequiredField'|trans|capitalize }}">*</abbr>
                  </label>
                  {% form_field_error text %} {% form_field text %}
                </div>
                {% if imageIsAllowed %}
                <div class="form-group">
                  <label for="image" class="control-label">{{ 'lbl.Image'|trans|capitalize }}</label>
                  {% form_field_error image %} {% form_field image %}
                </div>
                {% endif %}
                <div class="form-group">
                  <label for="introduction" class="control-label">
                    {{ 'lbl.Summary'|trans|capitalize }}
                    <abbr class="fa fa-info-circle" data-toggle="tooltip" title="{{ msg.HelpSummary }}"></abbr>
                  </label>
                  {% form_field_error introduction %} {% form_field introduction %}
                </div>
              </div>
              <div class="col-md-4">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h3 class="panel-title">{{ 'lbl.Status'|trans|capitalize }}</h3>
                  </div>
                  <div class="panel-body">
                    <div class="form-group">
                      <ul class="list-unstyled">
                        {% for _itr_4 in hidden %}
                        <li class="radio">
                          <label for="{{ _itr_4.id }}">{{ _itr_4.rbtHidden|raw }} {{ _itr_4.label }}</label>
                        </li>
                        {% endfor %}
                      </ul>
                    </div>
                    <div class="form-group">
                      <label for="publishOnDate" class="control-label">{{ 'lbl.PublishOn'|trans|capitalize }}</label>
                      {% form_field_error publish_on_date %} {% form_field publish_on_date %}
                      <label for="publishOnTime" class="control-label">{{ lbl.At }}</label>
                      {% form_field_error publish_on_time %} {% form_field publish_on_time %}
                    </div>
                  </div>
                </div>
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h3 class="panel-title">{{ 'lbl.MetaData'|trans|capitalize }}</h3>
                  </div>
                  <div class="panel-body">
                    <div class="form-group">
                      <label for="categoryId" class="control-label">{{ 'lbl.Category'|trans|capitalize }}</label>
                      {% form_field_error category_id %} {% form_field category_id %}
                    </div>
                    <div class="form-group">
                      <label for="userId" class="control-label">{{ 'lbl.Author'|trans|capitalize }}</label>
                      {% form_field_error user_id %} {% form_field user_id %}
                    </div>
                    {% if showTagsIndex %}
                    <div class="form-group">
                      <label for="tags" class="control-label">{{ 'lbl.Tags'|trans|capitalize }}</label>
                      {% form_field_error tags %} {% form_field tags %}
                    </div>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div role="tabpanel" class="tab-pane" id="tabComments">
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <ul class="list-unstyled">
                    <li class="checkbox">
                      <label for="allowComments" class="control-label">{% form_field allow_comments %} {{ 'lbl.AllowComments'|trans|capitalize }}</label>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
          <div role="tabpanel" class="tab-pane" id="tabSEO">
            {% seo %}
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-module-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-right" role="group">
          <a href="#" id="saveAsDraft" class="btn btn-primary">
            <span class="fa fa-file-o"></span>&nbsp;
            {{ 'lbl.SaveDraft'|trans|capitalize }}
          </a>
          <button id="addButton" type="submit" name="add" class="btn btn-primary">
            <span class="fa fa-plus"></span>&nbsp;
            {{ 'lbl.Add'|trans|capitalize }}
          </button>
        </div>
      </div>
    </div>
  </div>
  <div class="modal fade" id="addCategoryDialog" tabindex="-1" role="dialog" aria-labelledby="{{ 'lbl.AddCategory'|trans|capitalize }}" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <span class="modal-title h4">{{ 'lbl.AddCategory'|trans|capitalize }}</span>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="categoryTitle" class="control-label">
              {{ 'lbl.Title'|trans|capitalize }}
              <abbr title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
            </label>
            <input type="text" name="categoryTitle" id="categoryTitle" class="form-control" maxlength="255" />
            <p class="text-danger" id="categoryTitle'err.r" style="display: none;">{{ 'err.FieldIsRequired'|trans|capitalize }}</p>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'lbl.Cancel'|trans|capitalize }}</button>
          <button id="addCategorySubmit" type="button" class="btn btn-primary">{{ 'lbl.OK'|trans|capitalize }}</button>
        </div>
      </div>
    </div>
  </div>
{% endform %}


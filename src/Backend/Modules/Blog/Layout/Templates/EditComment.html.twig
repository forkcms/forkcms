{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}
  <div class="btn-toolbar pull-right">
    <div class="btn-group" role="group">
      {{ macro.buttonIcon( SITE_URL ~ itemURL, 'eye', 'lbl.View'|trans|ucfirst, '', "target=_blank") }}
    </div>
  </div>
{% endblock %}

{% block content %}
  {% form editComment %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="form-group">
        <label for="author" class="control-label">
          {{ 'lbl.Author'|trans|ucfirst }}
          {{ macro.required }}
        </label>
        {% form_field author %} {% form_field_error author %}
      </div>
      <div class="form-group">
        <label for="email" class="control-label">
          {{ 'lbl.Email'|trans|ucfirst }}
          {{ macro.required }}
        </label>
        {% form_field email %} {% form_field_error email %}
      </div>
      <div class="form-group">
        <label for="website" class="control-label">{{ 'lbl.Website'|trans|ucfirst }}</label>
        {% form_field website %} {% form_field_error website %}
      </div>
      <div class="form-group">
        <label for="text" class="control-label">
          {{ 'lbl.Text'|trans|ucfirst }}
          {{ macro.required }}
        </label>
        {% form_field text %} {% form_field_error text %}
      </div>
    </div>
  </div>
  <div class="row fork-module-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-right" role="group">
          <button id="editButton" type="submit" name="edit" class="btn btn-primary">
            <span class="fa fa-floppy-o"></span>{{ 'lbl.Save'|trans|ucfirst }}</button>
        </div>
      </div>
    </div>
  </div>
  {% endform %}

{% endblock %}

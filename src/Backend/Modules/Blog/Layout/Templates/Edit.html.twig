{% include "/Layout/Templates/Head.html.twig" %}
{% include "/Layout/Templates/StructureStartModule.html.twig" %}
<div class="row fork-module-heading">
  <div class="col-md-12">
    <h2>{{ 'msg.EditArticle'|trans|sprintf(item.title|capitalize) }}</h2>
    <div class="btn-toolbar pull-right">
      <div class="btn-group" role="group">
        <a href="{{ detailURL }}/{{ item.url }}{% if item.revision_id %}?revision={{ item.revision_id }}{% endif %}" class="btn btn-default" target="_blank">
          <span class="glyphicon glyphicon-search"></span>
          <span>{{ 'lbl.View'|trans|capitalize }}</span>
        </a>
      </div>
    </div>
  </div>
</div>
{% form edit %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="form-group">
        <label for="title">{{ 'lbl.Title'|trans|capitalize }}</label>
        {% form_field_error title %} {% form_field title %}
      </div>
      {% if detailURL %}
      <p><a href="{{ detailURL }}/{{ item.url }}">{{ detailURL }}/<span id="generatedUrl">{{ item.url }}</span></a></p>
      {% endif %}
      {% if not detailURL %}
      <p class="text-warning">{{ err.NoModuleLinked }}</p>
      {% endif %}
    </div>
  </div>
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div role="tabpanel">
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active">
            <a href="#tabContent" aria-controls="content" role="tab" data-toggle="tab">{{ 'lbl.Content'|trans|capitalize }}</a>
          </li>
          <li role="presentation">
            <a href="#tabVersions" aria-controls="versions" role="tab" data-toggle="tab">{{ 'lbl.Versions'|trans|capitalize }}</a>
          </li>
          <li role="presentation">
            <a href="#tabComments" aria-controls="comments" role="tab" data-toggle="tab">{{ 'lbl.Comments'|trans|capitalize }}</a>
          </li>
          <li role="presentation">
            <a href="#tabSEO" aria-controls="seo" role="tab" data-toggle="tab">{{ 'lbl.SEO'|trans|capitalize }}</a>
          </li>
        </ul>
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="tabContent">
            <div class="row">
              <div class="col-md-12">
                <h3>{{ 'lbl.Content'|trans|capitalize }}</h3>
              </div>
            </div>
            <div class="row">
              <div class="col-md-8">
                <div class="form-group">
                  <label for="text">
                    {{ 'lbl.MainContent'|trans|capitalize }}
                    <abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
                  </label>
                  {% form_field_error text %} {% form_field text %}
                </div>
                {% if imageIsAllowed %}
                <div class="form-group">
                  <label for="image">{{ 'lbl.Image'|trans|capitalize }}</label>
                  {% if item.image %}
                  <div>
                    <img src="{{ FRONTEND_FILES_URL }}/blog/images/128x128/{{ item.image }}" class="img-thumbnail" width="128" height="128" alt="{{ 'lbl.Image'|trans|capitalize }}" />
                  </div>
                  <ul class="list-unstyled">
                    <li class="checkbox">
                      <label for="deleteImage">{% form_field delete_image %} {{ 'lbl.Delete'|trans|capitalize }}</label>
                      {% form_field_error delete_image %}
                    </li>
                  </ul>
                  {% endif %}
                  {% form_field_error image %} {% form_field image %}
                </div>
                {% endif %}
                <div class="form-group">
                  <label for="introduction">
                    {{ 'lbl.Summary'|trans|capitalize }}
                    <abbr class="glyphicon glyphicon-info-sign" title="{{ msg.HelpSummary }}"></abbr>
                  </label>
                  {% form_field_error introduction %} {% form_field introduction %}
                </div>
              </div>
              <div class="col-md-4">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h3 class="panel-title">{{ 'lbl.Status'|trans|capitalize }}</h3>
                  </div>
                  <div class="panel-body">
                    <div class="form-group">
                      <ul class="list-unstyled">
                        {% for rbtn in hidden %}
                        <li class="radio">
                          <label for="{{ rbtn.id }}">{{ rbtn.rbtHidden|raw }} {{ rbtn.label }}</label>
                        </li>
                        {% endfor %}
                      </ul>
                    </div>
                    <div class="form-group">
                      <label for="publishOnDate">{{ 'lbl.PublishOn'|trans|capitalize }}</label>
                      {% form_field_error publish_on_date %} {% form_field publish_on_date %}
                      <label for="publishOnTime">{{ lbl.At }}</label>
                      {% form_field_error publish_on_time %} {% form_field publish_on_time %}
                    </div>
                  </div>
                </div>
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h3 class="panel-title">{{ 'lbl.MetaData'|trans|capitalize }}</h3>
                  </div>
                  <div class="panel-body">
                    <div class="form-group">
                      <label for="categoryId">{{ 'lbl.Category'|trans|capitalize }}</label>
                      {% form_field_error category_id %} {% form_field category_id %}
                    </div>
                    <div class="form-group">
                      <label for="userId">{{ 'lbl.Author'|trans|capitalize }}</label>
                      {% form_field_error user_id %} {% form_field user_id %}
                    </div>
                    {% if showTagsIndex %}
                    <div class="form-group">
                      <label for="tags">{{ 'lbl.Tags'|trans|capitalize }}</label>
                      {% form_field_error tags %} {% form_field tags %}
                    </div>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div role="tabpanel" class="tab-pane" id="tabVersions">
            <div class="row">
              <div class="col-md-12">
                <h3>{{ 'lbl.Versions'|trans|capitalize }}</h3>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                {% if drafts %}
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h3 class="panel-title">
                      {{ 'lbl.Drafts'|trans|capitalize }}
                      <abbr class="glyphicon glyphicon-info-sign" title="{{ 'msg.HelpDrafts'|trans|capitalize }}"></abbr>
                    </h3>
                  </div>
                  {{ drafts|raw }}
                </div>
                {% endif %}
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h3 class="panel-title">
                      {{ 'lbl.PreviousVersions'|trans|capitalize }}
                      <abbr class="glyphicon glyphicon-info-sign" title="{{ 'msg.HelpRevisions'|trans|capitalize }}"></abbr>
                    </h3>
                  </div>
                  {% if revisions %}
                  {{ revisions|raw }}
                  {% endif %}
                  {% if not revisions %}
                  <div class="panel-body">
                    <p>{{ 'msg.NoRevisions'|trans|capitalize }}</p>
                  </div>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
          <div role="tabpanel" class="tab-pane" id="tabComments">
            <div class="row">
              <div class="col-md-12">
                <h3>{{ 'lbl.Comments'|trans|capitalize }}</h3>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <ul class="list-unstyled">
                    <li class="checkbox">
                      <label for="allowComments">{% form_field allow_comments %} {{ 'lbl.AllowComments'|trans|capitalize }}</label>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
          <div role="tabpanel" class="tab-pane" id="tabSEO">
            {% seo %}
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-module-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-left" role="group">
          {% if showContentBlocksDelete %}
          <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmDelete">
            <span class="glyphicon glyphicon-trash"></span>
            {{ 'lbl.Delete'|trans|capitalize }}
          </button>
          {% endif %}
        </div>
        <div class="btn-group pull-right" role="group">
          <a href="#" id="saveAsDraft" class="btn btn-primary">
            <span class="glyphicon glyphicon-save"></span>&nbsp;
            {{ 'lbl.SaveDraft'|trans|capitalize }}
          </a>
          <button id="editButton" type="submit" name="edit" class="btn btn-primary">
            {{ 'lbl.Publish'|trans|capitalize }}
          </button>
        </div>
      </div>
    </div>
  </div>
  {% if showContentBlocksDelete %}
  <div class="modal fade" id="confirmDelete" tabindex="-1" role="dialog" aria-labelledby="{{ 'lbl.Delete'|trans|capitalize }}" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <span class="modal-title h4">{{ 'lbl.Delete'|trans|capitalize }}</span>
        </div>
        <div class="modal-body">
          <p>{{ 'msg.ConfirmDelete'|trans|sprintf(item.title) }}</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'lbl.Cancel'|trans|capitalize }}</button>
          <a href="{{ geturl('delete' ) }}&amp;id={{ item.id }}{% if categoryId %}&amp;category={{ categoryId }}{% endif %}" class="btn btn-primary">
            {{ 'lbl.OK'|trans|capitalize }}
          </a>
        </div>
      </div>
    </div>
  </div>
  {% endif %}
  <div class="modal fade" id="addCategoryDialog" tabindex="-1" role="dialog" aria-labelledby="{{ 'lbl.AddCategory'|trans|capitalize }}" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <span class="modal-title h4">{{ 'lbl.AddCategory'|trans|capitalize }}</span>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="categoryTitle">
              {{ 'lbl.Title'|trans|capitalize }}
              <abbr title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
            </label>
            <input type="text" name="categoryTitle" id="categoryTitle" class="form-control" maxlength="255" />
            <p class="text-danger" id="categoryTitle'err.r" style="display: none;">{{ 'err.FieldIsRequired'|trans|capitalize }}</p>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'lbl.Cancel'|trans|capitalize }}</button>
          <button id="addCategorySubmit" type="button" class="btn btn-primary">{{ 'lbl.OK'|trans|capitalize }}</button>
        </div>
      </div>
    </div>
  </div>
{% endform %}

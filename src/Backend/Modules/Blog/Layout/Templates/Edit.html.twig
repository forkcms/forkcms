{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}
    <div class="btn-toolbar pull-right">
      <div class="btn-group" role="group">
        {% set url = (SITE_URL ~ '/' ~ item.url) %}
        {% if item.revision_id %}
          {% set url = (url ~ '?revision=' ~ item.revision_id) %}
        {% endif %}

        {{ macro.buttonIcon( url, 'eye', 'lbl.View'|trans|capitalize) }}
      </div>
    </div>
{% endblock %}

{% block content %}
  {% form edit %}
    <div class="row fork-module-content">
      <div class="col-md-12">
        <div class="form-group">
          <label for="title" class="control-label">{{ 'lbl.Title'|trans|capitalize }}</label>
          {% form_field_error title %} {% form_field title %}
          {% if detailURL %}
          <a class="site-url" href="{{ detailURL }}/{{ item.url }}">{{ detailURL }}/<span id="generatedUrl">{{ item.url }}</span></a>
          {% endif %}
          {% if not detailURL %}
          <p class="alert alert-warning alert-xs"><span class="fa fa-exclamation-triangle"></span>{{ 'err.NoModuleLinked'|trans|capitalize }}</p>
          {% endif %}
        </div>
      </div>
    </div>
    <div class="row fork-module-content">
      <div class="col-md-12">
        <div role="tabpanel">
          <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active">
              <a href="#tabContent" aria-controls="content" role="tab" data-toggle="tab">{{ 'lbl.Content'|trans|capitalize }}</a>
            </li>
            <li class="pull-right" role="presentation">
              <a href="#tabSEO" aria-controls="seo" role="tab" data-toggle="tab">{{ 'lbl.SEO'|trans|capitalize }}</a>
            </li>
            <li class="pull-right" role="presentation">
              <a href="#tabComments" aria-controls="comments" role="tab" data-toggle="tab">{{ 'lbl.Comments'|trans|capitalize }}</a>
            </li>
            <li class="pull-right" role="presentation">
              <a href="#tabVersions" aria-controls="versions" role="tab" data-toggle="tab">{{ 'lbl.Versions'|trans|capitalize }}</a>
            </li>
          </ul>
          <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="tabContent">
              <div class="row">
                <div class="col-md-8">
                  <div class="panel panel-default panel-editor">
                    <div class="panel-heading">
                      <p>{{ 'lbl.MainContent'|trans|capitalize }}<abbr data-toggle="tooltip" title="{{ 'lbl.RequiredField'|trans|capitalize }}">*</abbr></p>
                    </div>
                    <div class="panel-body">
                      {% form_field_error text %} {% form_field text %}
                    </div>
                  </div>
                  {% if imageIsAllowed %}
                  <div class="panel panel-default">
                    <div class="panel-heading">
                      <p>{{ 'lbl.Image'|trans|capitalize }}</p>
                    </div>
                    <div class="panel-body">
                      {% if item.image %}
                      <div>
                        <img src="{{ FRONTEND_FILES_URL }}/blog/images/128x128/{{ item.image }}" class="img-thumbnail" width="128" height="128" alt="{{ 'lbl.Image'|trans|capitalize }}" />
                      </div>
                      <ul class="list-unstyled">
                        <li class="checkbox">
                          <label for="deleteImage" class="control-label">{% form_field delete_image %} {{ 'lbl.Delete'|trans|capitalize }}</label>
                          {% form_field_error delete_image %}
                        </li>
                      </ul>
                      {% endif %}
                      {% form_field_error image %} {% form_field image %}
                    </div>
                  </div>
                  {% endif %}
                  <div class="panel panel-default panel-editor last">
                    <div class="panel-heading">
                      <p>{{ 'lbl.Summary'|trans|capitalize }} <abbr class="fa fa-info-circle" data-toggle="tooltip" title="{{ 'msg.HelpSummary'|trans|capitalize }}"></abbr></p>
                    </div>
                    <div class="panel-body">
                      {% form_field_error introduction %} {% form_field introduction %}
                    </div>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="panel panel-default">
                    <div class="panel-heading">
                      <p>{{ 'lbl.Status'|trans|capitalize }}</p>
                    </div>
                    <div class="panel-body">
                      <div class="form-group">
                        <ul class="list-unstyled">
                          {% for rbtn in hidden %}
                          <li class="radio">
                            <label for="{{ rbtn.id }}">{{ rbtn.rbtHidden|raw }} {{ rbtn.label }}</label>
                          </li>
                          {% endfor %}
                        </ul>
                      </div>
                      <div class="form-group last">
                        <label for="publishOnDate" class="control-label">{{ 'lbl.PublishOn'|trans|capitalize }}</label>
                        {% form_field_error publish_on_date %} {% form_field publish_on_date %}
                        <label for="publishOnTime" class="control-label">{{ lbl.At }}</label>
                        {% form_field_error publish_on_time %} {% form_field publish_on_time %}
                      </div>
                    </div>
                  </div>
                  <div class="panel panel-default">
                    <div class="panel-heading">
                      <p>{{ 'lbl.MetaData'|trans|capitalize }}</p>
                    </div>
                    <div class="panel-body">
                      <div class="form-group">
                        <label for="categoryId" class="control-label">{{ 'lbl.Category'|trans|capitalize }}</label>
                        {% form_field_error category_id %} {% form_field category_id %}
                      </div>
                      <div class="form-group">
                        <label for="userId" class="control-label">{{ 'lbl.Author'|trans|capitalize }}</label>
                        {% form_field_error user_id %} {% form_field user_id %}
                      </div>
                      {% if showTagsIndex %}
                      <div class="form-group last">
                        <label for="tags" class="control-label">{{ 'lbl.Tags'|trans|capitalize }}</label>
                        {% form_field_error tags %} {% form_field tags %}
                      </div>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="tabVersions">
              <div class="row">
                <div class="col-md-12">
                  {% if drafts %}
                    <div class="content-block">
                      <div class="content-title">
                        <p>{{ 'lbl.Drafts'|trans|capitalize }}
                          <abbr class="fa fa-info-circle" data-toggle="tooltip" title="{{ 'msg.HelpDrafts'|trans|capitalize }}"></abbr>
                        </p>
                      </div>
                      {{ drafts|raw }}
                    </div>
                  {% endif %}
                  <div class="content-block">
                    <div class="content-title">
                      <p>
                        {{ 'lbl.PreviousVersions'|trans|capitalize }}
                        <abbr class="fa fa-info-circle" data-toggle="tooltip" title="{{ 'msg.HelpRevisions'|trans|capitalize }}"></abbr>
                      </p>
                    </div>
                    {% if revisions %}
                      {{ revisions|raw }}
                    {% endif %}
                    {% if not revisions %}
                      <p>{{ 'msg.NoRevisions'|trans|capitalize }}</p>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="tabComments">
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group last">
                    <ul class="list-unstyled">
                      <li class="checkbox">
                        <label for="allowComments" class="control-label">{% form_field allow_comments %} {{ 'lbl.AllowComments'|trans|capitalize }}</label>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="tabSEO">
              {% seo %}
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row fork-module-actions">
      <div class="col-md-12">
        <div class="btn-toolbar">
          <div class="btn-group pull-left" role="group">
            {% if showContentBlocksDelete %}
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmDelete">
              <span class="fa fa-trash-o"></span>
              {{ 'lbl.Delete'|trans|capitalize }}
            </button>
            {% endif %}
          </div>
          <div class="btn-group pull-right" role="group">
            <a href="#" id="saveAsDraft" class="btn btn-default">
              <span class="fa fa-file-o"></span>{{ 'lbl.SaveDraft'|trans|capitalize }}
            </a>
            <button id="editButton" type="submit" name="edit" class="btn btn-success">
              <span class="fa fa-check"></span>{{ 'lbl.Publish'|trans|capitalize }}
            </button>
          </div>
        </div>
      </div>
    </div>
    {% if showContentBlocksDelete %}
    <div class="modal fade" id="confirmDelete" tabindex="-1" role="dialog" aria-labelledby="{{ 'lbl.Delete'|trans|capitalize }}" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <span class="modal-title h4">{{ 'lbl.Delete'|trans|capitalize }}</span>
          </div>
          <div class="modal-body">
            <p>{{ 'msg.ConfirmDelete'|trans|sprintf(item.title) }}</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">
              <span class="fa fa-times"></span>{{ 'lbl.Cancel'|trans|capitalize }}
            </button>
            <a href="{{ geturl('delete' ) }}&amp;id={{ item.id }}{% if categoryId %}&amp;category={{ categoryId }}{% endif %}" class="btn btn-danger">
              <span class="fa fa-trash"></span>{{ 'lbl.Delete'|trans|capitalize }}
            </a>
          </div>
        </div>
      </div>
    </div>
    {% endif %}
    <div class="modal fade" id="addCategoryDialog" tabindex="-1" role="dialog" aria-labelledby="{{ 'lbl.AddCategory'|trans|capitalize }}" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <span class="modal-title h4">{{ 'lbl.AddCategory'|trans|capitalize }}</span>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <label for="categoryTitle" class="control-label">
                {{ 'lbl.Title'|trans|capitalize }}
                <abbr title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
              </label>
              <input type="text" name="categoryTitle" id="categoryTitle" class="form-control" maxlength="255" />
              <p class="text-danger" id="categoryTitle'err.r" style="display: none;">{{ 'err.FieldIsRequired'|trans|capitalize }}</p>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">
              <span class="fa fa-times"></span>{{ 'lbl.Cancel'|trans|capitalize }}
            </button>
            <button id="addCategorySubmit" type="button" class="btn btn-success">
              <span class="fa fa-plus"></span>{{ 'lbl.AddCategory'|trans|capitalize }}
            </button>
          </div>
        </div>
      </div>
    </div>
  {% endform %}
{% endblock %}

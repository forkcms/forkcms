<div class="row fork-module-heading">
  <div class="col-md-12">
    <h2>{{ 'lbl.Settings'|trans|capitalize }}</h2>
  </div>
</div>
{% form settings %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            {{ 'lbl.Pagination'|trans|capitalize }}
          </h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <label for="overviewNumberOfItems">{{ 'lbl.ItemsPerPage'|trans|capitalize }}</label>
            {% form_field_error overview_number_of_items %} {% form_field overview_number_of_items %}
          </div>
          <div class="form-group">
            <label for="recentArticlesFullNumberOfItems">{{ 'msg.NumItemsInRecentArticlesFull'|trans|capitalize }}</label>
            {% form_field_error recent_articles_full_number_of_items %} {% form_field recent_articles_full_number_of_items %}
          </div>
          <div class="form-group">
            <label for="recentArticlesListNumberOfItems">{{ 'msg.NumItemsInRecentArticlesList'|trans|capitalize }}</label>
            {% form_field_error recent_articles_list_number_of_items %} {% form_field recent_articles_list_number_of_items %}
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            {{ 'lbl.Comments'|trans|capitalize }}
          </h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <ul class="list-unstyled">
              <li class="checkbox">
                <label for="allowComments">
                  {% form_field allow_comments %} {{ 'lbl.AllowComments'|trans|capitalize }}
                </label>
              </li>
              <li class="checkbox">
                <label for="moderation">
                  {% form_field moderation %} {{ 'lbl.EnableModeration'|trans|capitalize }}
                </label>
              </li>
              <li class="checkbox">
                <label for="spamfilter">
                  {% form_field spamfilter %} {{ 'lbl.FilterCommentsForSpam'|trans|capitalize }}
                </label>
                <p class="text-info">
                  {{ msg.HelpSpamFilter }}
                  {% if noAkismetKey %}
                  <br />
                  <span class="text-warning">
                    {{ 'msg.NoAkismetKey'|trans|sprintf(geturl('index','settings' ) ) }}
                  </span>
                  {% endif %}
                </p>
              </li>
            </ul>
            <p class="text-info">{{ 'msg.FollowAllCommentsInRSS'|trans|sprintf(commentsRSSURL ) }}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  {% if isGod %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            {{ 'lbl.Image'|trans|capitalize }}
          </h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <ul class="list-unstyled">
              <li class="checkbox">
                <label for="showImageForm">
                  {% form_field show_image_form %} {{ msg.ShowImageForm }}
                </label>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  {% endif %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            {{ 'lbl.Notifications'|trans|capitalize }}
          </h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <ul class="list-unstyled">
              <li class="checkbox">
                <label for="notifyByEmailOnNewCommentToModerate">
                  {% form_field notify_by_email_on_new_comment_to_moderate %} {{ 'msg.NotifyByEmailOnNewCommentToModerate'|trans|capitalize }}
                </label>
              </li>
              <li class="checkbox">
                <label for="notifyByEmailOnNewComment">
                  {% form_field notify_by_email_on_new_comment %} {{ 'msg.NotifyByEmailOnNewComment'|trans|capitalize }}
                </label>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            {{ 'lbl.SEO'|trans|capitalize }}
          </h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <p>{{ msg.HelpPingServices }}:</p>
            <ul class="list-unstyled">
              <li class="checkbox">
                <label for="pingServices">
                  {% form_field ping_services %} {{ 'lbl.PingBlogServices'|trans|capitalize }}
                </label>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            {{ 'lbl.RSSFeed'|trans|capitalize }}
          </h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <label for="rssTitle">
              {{ 'lbl.Title'|trans|capitalize }}
              <abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
            </label>
            <p class="text-info">{{ msg.HelpRSSTitle }}</p>
            {% form_field_error rss_title %} {% form_field rss_title %}
          </div>
          <div class="form-group">
            <label for="rssDescription">{{ 'lbl.Description'|trans|capitalize }}</label>
            <p class="text-info">{{ msg.HelpRSSDescription }}</p>
            {% form_field_error rss_description %} {% form_field rss_description %}
          </div>
          <div class="form-group">
            <p>{{ msg.HelpMeta }}:</p>
            <ul class="list-unstyled">
              <li class="checkbox">
                <label for="rssMeta">{% form_field rss_meta %} {{ 'lbl.MetaInformation'|trans|capitalize }}</label>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-module-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-right" role="group">
          <button id="save" type="submit" name="save" class="btn btn-primary">{{ 'lbl.Save'|trans|capitalize }}</button>
        </div>
      </div>
    </div>
  </div>
{% endform %}

              <div class="row">
                <div class="col-md-12">
                  <div class="content-block">
                    <div class="form-group">
                      <label for="email" class="control-label">
                        {{ 'lbl.Email'|trans|capitalize }}
                        <abbr data-toggle="tooltip" title="{{ 'lbl.RequiredField'|trans|capitalize }}">*</abbr>
                      </label>
                      {% form_field_error email %} {% form_field email %}
                    </div>
                    <div class="form-group">
                      <label for="name" class="control-label">
                        {{ 'lbl.Name'|trans|capitalize }}
                        <abbr data-toggle="tooltip" title="{{ 'lbl.RequiredField'|trans|capitalize }}">*</abbr>
                      </label>
                      {% form_field_error name %} {% form_field name %}
                    </div>
                    <div class="form-group">
                      <label for="surname" class="control-label">
                        {{ 'lbl.Surname'|trans|capitalize }}
                        <abbr data-toggle="tooltip" title="{{ 'lbl.RequiredField'|trans|capitalize }}">*</abbr>
                      </label>
                      {% form_field_error surname %} {% form_field surname %}
                    </div>
                    <div class="form-group">
                      <label for="nickname" class="control-label">
                        {{ 'lbl.Nickname'|trans|capitalize }}
                        <abbr data-toggle="tooltip" title="{{ 'lbl.RequiredField'|trans|capitalize }}">*</abbr>
                      </label>
                      <p class="help-block">{{ 'msg.HelpNickname'|trans }}</p>
                      {% form_field_error nickname %} {% form_field nickname %}
                    </div>
                    <div class="form-group last">
                      <label for="avatar" class="control-label">{{ 'lbl.Avatar'|trans|capitalize }}</label>
                      <p class="help-block">{{ 'msg.HelpAvatar'|trans }}</p>
                      {% form_field_error avatar %} {% form_field avatar %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
            {% if allowPasswordEdit %}
            <div role="tabpanel" class="tab-pane" id="tabPassword">
              {% if showPasswordStrength %}
              <div class="row">
                <div class="col-md-12">
                  <div class="content-block">
                    <div class="content-title">
                      <p>{{ 'lbl.CurrentPassword'|trans|capitalize }}</p>
                    </div>
                    <div class="form-group">
                      <label>{{ 'lbl.PasswordStrength'|trans|capitalize }}:</label>
                      <span class="strength strength-{{ record.settings.password_strength }}">
                        <span class="label">
                          {{ passwordStrengthLabel|capitalize }}
                        </span>
                      </span>
                    </div>
                  </div>

                </div>
              </div>
              {% endif %}
              <div class="row">
                <div class="col-md-12">
                  <div class="content-block">
                    <div class="content-title">
                      <p>{{ 'lbl.ChangePassword'|trans|capitalize }}</p>
                    </div>
                    <div class="form-group">
                      <label for="newPassword" class="control-label">
                        {{ 'lbl.Password'|trans|capitalize }} <abbr data-toggle="tooltip" title="{{ 'lbl.RequiredField'|trans|capitalize }}">*</abbr>
                      </label>
                      <table id="passwordStrengthMeter" class="passwordStrength" data-id="newPassword">
                        <tr>
                          <td class="strength" id="passwordStrength">
                            <p class="strength none">
                              <span class="label label-default">None</span>
                            </p>
                            <p class="strength weak">
                              <span class="label label-danger">Weak</span>
                            </p>
                            <p class="strength average">
                              <span class="label label-warning">Average</span>

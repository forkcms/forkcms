                      {% form_field_error time_format %} {% form_field time_format %}
                    </div>
                    <div class="form-group last">
                      <label for="numberFormat" class="control-label">{{ 'lbl.NumberFormat'|trans|capitalize }}</label>
                      {% form_field_error number_format %} {% form_field number_format %}
                    </div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="content-block">
                    <div class="content-title">
                      <p>{{ 'lbl.CSV'|trans|capitalize }}</p>
                    </div>
                    <div class="form-group">
                      <label for="csvSplitCharacter" class="control-label">{{ 'lbl.SplitCharacter'|trans|capitalize }}</label>
                      {% form_field_error csv_split_character %} {% form_field csv_split_character %}
                    </div>
                    <div class="form-group last">
                      <label for="csvLineEnding" class="control-label">{{ 'lbl.LineEnding'|trans|capitalize }}</label>
                      {% form_field_error csv_line_ending %} {% form_field csv_line_ending %}
                    </div>
                  </div>

                </div>
              </div>
            </div>
            {% if allowUserRights %}
            <div role="tabpanel" class="tab-pane" id="tabPermissions">
              <div class="row">
                <div class="col-md-12">
                  <div class="content-block">
                    <div class="form-group">
                      <ul class="list-unstyled">
                        <li class="checkbox">
                          <label for="active" class="control-label">{% form_field active %} {% form_field_error active %} {{ 'msg.HelpActive'|trans|capitalize }}</label>
                        </li>
                        <li class="checkbox">
                          <label for="apiAccess" class="control-label">{% form_field api_access %} {% form_field_error api_access %} {{ 'msg.HelpAPIAccess'|trans|capitalize }}</label>
                        </li>
                      </ul>
                    </div>
                    <div class="form-group last">
                      <p>{{ 'lbl.Groups'|trans|capitalize }}</p>
                      <ul id="groupList" class="list-unstyled">
                        {% for group in groups %}
                        <li class="checkbox">
                          <label for="{{ group.id }}">{{ group.chkGroups|raw }} {{ group.label }}</label>
                        </li>
                        {% endfor %}
                      </ul>
                      {% form_field_error groups %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
    <div class="row fork-page-actions">
      <div class="col-md-12">
        <div class="btn-toolbar">
          <div class="btn-group pull-left" role="group">
            {% if showUsersDelete %}
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmDelete">
              <span class="fa fa-trash-o"></span>
              {{ 'lbl.Delete'|trans|capitalize }}
            </button>
            {% endif %}
          </div>

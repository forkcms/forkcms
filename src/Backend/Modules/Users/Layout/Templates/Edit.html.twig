{% include "/Layout/Templates/Head.html.twig" %}
{% include "/Layout/Templates/StructureStartModule.html.twig" %}
<div class="row fork-module-heading">
  <div class="col-md-12">
    <h2>{{ 'msg.EditUser'|trans|sprintf(record.settings.nickname|capitalize ) }}</h2>
  </div>
</div>
{% form edit %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <table class="table table-striped">
        <tr>
          <td rowspan="6" class="text-center align-middle">
            {% if record.settings.avatar %}
            <img src="{{ FRONTEND_FILES_URL }}/backend_users/avatars/source/{{ record.settings.avatar }}" alt="" />
            {% endif %}
          </td>
          <th>{{ 'lbl.Name'|trans|capitalize }}:</th>
          <td><strong>{{ record.settings.name }} {{ record.settings.surname }}</strong></td>
        </tr>
        <tr>
          <th>{{ 'lbl.Nickname'|trans|capitalize }}:</th>
          <td>{{ record.settings.nickname }}</td>
        </tr>
        <tr>
          <th>{{ 'lbl.Email'|trans|capitalize }}:</th>
          <td>{{ record.email }}</td>
        </tr>
        <tr>
          <th>{{ 'lbl.LastLogin'|trans|capitalize }}:</th>
          <td>
            {% if record.settings.last_login %}{{ record.settings.last_login|spoondate('{$authenticatedUserDateFormat ) }} {{ authenticatedUserTimeFormat }}':INTERFACE_LANGUAGE}{% endif %}
            {% if not record.settings.last_login %}{{ lbl.NoPreviousLogin }}{% endif %}
          </td>
        </tr>
        {% if record.settings.last_failed_login_attempt %}
        <tr>
          <th>{{ 'lbl.LastFailedLoginAttempt'|trans|capitalize }}:</th>
          <td>{{ record.settings.last_failed_login_attempt|spoondate('{$authenticatedUserDateFormat ) }} {{ authenticatedUserTimeFormat }}':INTERFACE_LANGUAGE}</td>
        </tr>
        {% endif %}
        <tr>
          <th>{{ 'lbl.LastPasswordChange'|trans|capitalize }}:</th>
          <td>
            {% if record.settings.last_password_change %}{{ record.settings.last_password_change|spoondate('{$authenticatedUserDateFormat ) }} {{ authenticatedUserTimeFormat }}':INTERFACE_LANGUAGE}{% endif %}
            {% if not record.settings.last_password_change %}{{ lbl.Never }}{% endif %}
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div role="tabpanel">
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active">
            <a href="#tabProfile" aria-controls="profile" role="tab" data-toggle="tab">{{ 'lbl.Profile'|trans|capitalize }}</a>
          </li>
          {% if allowPasswordEdit %}
          <li role="presentation">
            <a href="#tabPassword" aria-controls="password" role="tab" data-toggle="tab">{{ 'lbl.Password'|trans|capitalize }}</a>
          </li>
          {% endif %}
          <li role="presentation">
            <a href="#tabSettings" aria-controls="settings" role="tab" data-toggle="tab">{{ 'lbl.Settings'|trans|capitalize }}</a>
          </li>
          {% if allowUserRights %}
          <li role="presentation">
            <a href="#tabPermissions" aria-controls="permissions" role="tab" data-toggle="tab">{{ 'lbl.Permissions'|trans|capitalize }}</a>
          </li>
          {% endif %}
        </ul>
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="tabProfile">
            <div class="row">
              <div class="col-md-12">
                <h3>{{ 'lbl.PersonalInformation'|trans|capitalize }}</h3>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <label for="email">
                    {{ 'lbl.Email'|trans|capitalize }}
                    <abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
                  </label>
                  {% form_field_error email %} {% form_field email %}
                </div>
                <div class="form-group">
                  <label for="name">
                    {{ 'lbl.Name'|trans|capitalize }}
                    <abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
                  </label>
                  {% form_field_error name %} {% form_field name %}
                </div>
                <div class="form-group">
                  <label for="surname">
                    {{ 'lbl.Surname'|trans|capitalize }}
                    <abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
                  </label>
                  {% form_field_error surname %} {% form_field surname %}
                </div>
                <div class="form-group">
                  <label for="nickname">
                    {{ 'lbl.Nickname'|trans|capitalize }}
                    <abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
                  </label>
                  <p class="text-info">{{ msg.HelpNickname }}</p>
                  {% form_field_error nickname %} {% form_field nickname %}
                </div>
                <div class="form-group">
                  <label for="avatar">{{ 'lbl.Avatar'|trans|capitalize }}</label>
                  <p class="text-info">{{ msg.HelpAvatar }}</p>
                  {% form_field_error avatar %} {% form_field avatar %}
                </div>
              </div>
            </div>
          </div>
          {% if allowPasswordEdit %}
          <div role="tabpanel" class="tab-pane" id="tabPassword">
            {% if showPasswordStrength %}
            <div class="row">
              <div class="col-md-12">
                <h3>{{ 'lbl.CurrentPassword'|trans|capitalize }}</h3>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <label>{{ 'lbl.PasswordStrength'|trans|capitalize }}</label>
                  <span class="strength {{ record.settings.password_strength }}">{{ passwordStrengthLabel|capitalize }}</span>
                </div>
              </div>
            </div>
            {% endif %}
            <div class="row">
              <div class="col-md-12">
                <h3>{{ 'lbl.ChangePassword'|trans|capitalize }}</h3>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <label for="newPassword">
                    {{ 'lbl.Password'|trans|capitalize }}&nbsp;
                    <abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
                  </label>
                  <table id="passwordStrengthMeter" class="passwordStrength" data-id="newPassword">
                    <tr>
                      <td class="strength" id="passwordStrength">
                        <p class="strength none text-muted">{{ 'lbl.None'|trans|capitalize }}</p>
                        <p class="strength weak text-danger">{{ 'lbl.Weak'|trans|capitalize }}</p>
                        <p class="strength average text-warning">{{ 'lbl.Average'|trans|capitalize }}</p>
                        <p class="strength strong text-success">{{ 'lbl.Strong'|trans|capitalize }}</p>
                      </td>
                      <td>
                        <p class="text-info">&nbsp;{{ msg.HelpStrongPassword }}</p>
                      </td>
                    </tr>
                  </table>
                  <div class="form-group form-inline">
                    <div class="form-group">
                      {% form_field_error new_password %} {% form_field new_password %}
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label for="confirmPassword">
                    {{ 'lbl.ConfirmPassword'|trans|capitalize }}
                    <abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
                  </label>
                  <div class="form-group form-inline">
                    <div class="form-group">
                      {% form_field_error confirm_password %} {% form_field confirm_password %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          {% endif %}
          <div role="tabpanel" class="tab-pane" id="tabSettings">
            <div class="row">
              <div class="col-md-12">
                <h3>{{ 'lbl.InterfacePreferences'|trans|capitalize }}</h3>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <label for="interfaceLanguage">{{ 'lbl.Language'|trans|capitalize }}</label>
                  {% form_field_error interface_language %} {% form_field interface_language %}
                </div>
                <div class="form-group">
                  <label for="dateFormat">{{ 'lbl.DateFormat'|trans|capitalize }}</label>
                  {% form_field_error date_format %} {% form_field date_format %}
                </div>
                <div class="form-group">
                  <label for="timeFormat">{{ 'lbl.TimeFormat'|trans|capitalize }}</label>
                  {% form_field_error time_format %} {% form_field time_format %}
                </div>
                <div class="form-group">
                  <label for="numberFormat">{{ 'lbl.NumberFormat'|trans|capitalize }}</label>
                  {% form_field_error number_format %} {% form_field number_format %}
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <h3>{{ 'lbl.CSV'|trans|capitalize }}</h3>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <label for="csvSplitChar'act.r">{{ 'lbl.SplitCharacter''|trans|trans|capitalize }}</label>
                  {% form_field_error csv_split_character %} {% form_field csv_split_character %}
                </div>
                <div class="form-group">
                  <label for="csvLineEnding">{{ 'lbl.LineEnding'|trans|capitalize }}</label>
                  {% form_field_error csv_line_ending %} {% form_field csv_line_ending %}
                </div>
              </div>
            </div>
          </div>
          {% if allowUserRights %}
          <div role="tabpanel" class="tab-pane" id="tabPermissions">
            <div class="row">
              <div class="col-md-12">
                <h3>{{ 'lbl.AccountManagement'|trans|capitalize }}</h3>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <ul class="list-unstyled">
                    <li class="checkbox">
                      <label for="active">{% form_field_error active %} {{ msg.HelpActive }}</label> {% form_field active %}
                    </li>
                    <li class="checkbox">
                      <label for="apiAccess">{% form_field_error api_access %} {{ msg.HelpAPIAccess }}</label> {% form_field api_access %}
                    </li>
                  </ul>
                </div>
                <div class="form-group">
                  <p>{{ 'lbl.Groups'|trans|capitalize }}</p>
                  <ul id="groupList" class="list-unstyled">
                    {% for group in groups %}
                    <li class="checkbox">
                      <label for="{{ group.id }}">{{ group.chkGroups }} {{ group.label }}</label>
                    </li>
                    {% endfor %}
                  </ul>
                  {% form_field_error groups %}
                </div>
              </div>
            </div>
          </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-page-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-left" role="group">
          {% if showUsersDelete %}
          <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmDelete">
            <span class="glyphicon glyphicon-trash"></span>
            {{ 'lbl.Delete'|trans|capitalize }}
          </button>
          {% endif %}
        </div>
        <div class="btn-group pull-right" role="group">
          <button id="editButton" type="submit" name="edit" class="btn btn-primary">
            <span class="glyphicon glyphicon-pencil"></span>&nbsp;{{ 'lbl.Save'|trans|capitalize }}
          </button>
        </div>
      </div>
      {% if showUsersDelete %}
      <div class="modal fade" id="confirmDelete" tabindex="-1" role="dialog" aria-labelledby="{{ 'lbl.Delete'|trans|capitalize }}" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <span class="modal-title h4">{{ 'lbl.Delete'|trans|capitalize }}</span>
            </div>
            <div class="modal-body">
              <p>{{ 'msg.ConfirmDelete'|trans|sprintf(record.settings.nickname ) }}</p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'lbl.Cancel'|trans|capitalize }}</button>
              <a href="{{ geturl('delete' ) }}&amp;id={{ record.id }}" class="btn btn-primary">
                {{ 'lbl.OK'|trans|capitalize }}
              </a>
            </div>
          </div>
        </div>
      </div>
      {% endif %}
    </div>
  </div>
{% endform %}

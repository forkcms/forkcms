<div id="widgetUsersStatistics" class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">
      <a href="{{ authenticatedUserEditUrl }}">{{ 'lbl.Users'|trans|capitalize }}: {{ 'lbl.Statistics'|trans|capitalize }}</a>
    </h2>
  </div>
  <div class="panel-body">
    <table class="table table-striped">
      <tr>
        <th>{{ 'lbl.LastLogin'|trans|capitalize }}:</th>
        <td>
          {% if authenticatedUserLastLogin %}{{ authenticatedUserLastLogin|spoondate(authenticatedUserDateFormat, authenticatedUserTimeFormat, INTERFACE_LANGUAGE) }} {% endif %}
          {% if not authenticatedUserLastLogin %}{{ lbl.NoPreviousLogin }}{% endif %}
        </td>
      </tr>
      {% if authenticatedUserLastFailedLoginAttempt %}
        <tr>
          <th>{{ 'lbl.LastFailedLoginAttempt'|trans|capitalize }}:</th>
          <td>{{ authenticatedUserLastFailedLoginAttempt|spoondate( authenticatedUserDateFormat, authenticatedUserTimeFormat, INTERFACE_LANGUAGE) }}</td>
        </tr>
      {% endif %}
      <tr>
        <th>{{ 'lbl.LastPasswordChange'|trans|capitalize }}:</th>
        <td>
          {% if authenticatedUserLastPasswordChange %}{{ authenticatedUserLastPasswordChange|spoondate(authenticatedUserDateFormat, authenticatedUserTimeFormat, INTERFACE_LANGUAGE) }}{% endif %}
          {% if not authenticatedUserLastPasswordChange %}{{ lbl.Never }}{% endif %}
        </td>
      </tr>
      {% if showPasswordStrength %}
        <tr>
          <th>{{ 'lbl.PasswordStrength'|trans|capitalize }}:</th>
          <td>{{ passwordStrengthLabel }}</td>
        </tr>
      {% endif %}
    </table>
  </div>
  <div class="panel-footer">
    <a href="{{ authenticatedUserEditUrl }}">
      <span>{{ 'lbl.EditProfile'|trans|capitalize }}</span>
    </a>
  </div>
</div>

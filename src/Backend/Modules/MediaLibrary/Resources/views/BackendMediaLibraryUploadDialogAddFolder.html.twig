{% import 'Layout/Templates/macros.html.twig' as macro %}
<div class="modal fade" id="addFolderDialog" role="dialog" tabindex="-1" aria-hidden="true" aria-labelledby="addFolderDialogTitle">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="addFolderDialogTitle">{{ 'lbl.MediaAddFolder'|trans|ucfirst }}</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="addFolderTitle">{{ 'lbl.Title'|trans|capitalize }}{{ macro.required }}</label>
          <input type="text" name="addFolderTitle" id="addFolderTitle" class="form-control" maxlength="255" />
        </div>
        <div class="form-group">
          <label for="addFolderParentId">{{ 'lbl.MediaInTheFolder'|trans|capitalize }}{{ macro.required }}</label>
          <select class="form-control" name="addFolderParentId" id="addFolderParentId"></select>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">
          {{ macro.icon('times') }}{{ 'lbl.Cancel'|trans|ucfirst }}
        </button>
        <button id="addFolderSubmit" type="button" class="btn btn-primary">
          {{ macro.icon('plus-square') }}{{ 'lbl.MediaAddFolder'|trans|ucfirst }}</button>
      </div>
    </div>
  </div>
</div>

{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}

{% endblock %}

{% block content %}
  {% form edit %}
    <div class="row fork-module-content">
      <div class="col-md-12">
        <div role="tabpanel">
          <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active">
              <a href="#tabContent" aria-controls="content" role="tab" data-toggle="tab">{{ 'lbl.Content'|trans|capitalize }}</a>
            </li>
            <li role="presentation">
              <a href="#tabVersions" aria-controls="versions" role="tab" data-toggle="tab">{{ 'lbl.Versions'|trans|capitalize }}</a>
            </li>
          </ul>
          <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="tabContent">
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label for="title" class="control-label">{{ 'lbl.Title'|trans|capitalize }}</label>
                    {% form_field_error title %} {% form_field title %}
                  </div>
                  <div class="form-group">
                    <label for="text" class="control-label">
                      {{ 'lbl.Content'|trans|capitalize }}
                      <abbr data-toggle="tooltip" title="{{ 'lbl.RequiredField'|trans|capitalize }}">*</abbr>
                    </label>
                    {% form_field_error text %} {% form_field text %}
                  </div>
                  {% if ddmTemplate %}
                  <div class="form-group">
                    <label for="template" class="control-label">{{ 'lbl.Template'|trans|capitalize }}</label>
                    {% form_field_error template %} {% form_field template %}
                  </div>
                  {% endif %}
                  <div class="form-group">
                    <label for="hidden" class="control-label">{% form_field_error hidden %} {% form_field hidden %} {{ 'lbl.VisibleOnSite'|trans|capitalize }}</label>
                  </div>
                </div>
              </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="tabVersions">
              <div class="row">
                <div class="col-md-12">
                  <h3>
                    {{ 'lbl.PreviousVersions'|trans|capitalize }}
                    <abbr class="fa fa-question-circle" data-toggle="tooltip" title="{{ 'msg.HelpRevisions'|trans|capitalize }}"></abbr>
                  </h3>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  {% if revisions %}
                  {{ revisions|raw }}
                  {% endif %}
                  {% if not revisions %}
                  <p>{{ msg.NoRevisions }}</p>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row fork-page-actions">
      <div class="col-md-12">
        <div class="btn-toolbar">
          <div class="btn-group pull-left" role="group">
            {% if showContentBlocksDelete %}
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmDelete">
              <span class="fa fa-trash-o"></span>
              {{ 'lbl.Delete'|trans|capitalize }}
            </button>
            {% endif %}
          </div>
          <div class="btn-group pull-right" role="group">
            <button id="editButton" type="submit" name="edit" class="btn btn-primary">
              <span class="fa fa-check"></span>&nbsp;{{ 'lbl.Save'|trans|capitalize }}
            </button>
          </div>
        </div>
        {% if showContentBlocksDelete %}
        <div class="modal fade" id="confirmDelete" tabindex="-1" role="dialog" aria-labelledby="{{ 'lbl.Delete'|trans|capitalize }}" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <span class="modal-title h4">{{ 'lbl.Delete'|trans|capitalize }}</span>
              </div>
              <div class="modal-body">
                <p>{{ 'msg.ConfirmDelete'|trans|sprintf(title ) }}</p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'lbl.Cancel'|trans|capitalize }}</button>
                <a href="{{ geturl('delete' ) }}&amp;id={{ id }}" class="btn btn-primary">
                  {{ 'lbl.OK'|trans|capitalize }}
                </a>
              </div>
            </div>
          </div>
        </div>
        {% endif %}
      </div>
    </div>
  {% endform %}
{% endblock %}

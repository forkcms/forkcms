{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}

{% endblock %}

{% block content %}
  {% form edit %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div role="tabpanel">
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active">
            <a href="#tabContent" aria-controls="tabContent" role="tab" data-toggle="tab">{{ 'lbl.Content'|trans|ucfirst }}</a>
          </li>
          <li class="pull-right" role="presentation">
            <a href="#tabVersions" aria-controls="tabVersions" role="tab" data-toggle="tab">{{ 'lbl.Versions'|trans|ucfirst }}</a>
          </li>
        </ul>
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="tabContent">
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <label for="title" class="control-label">
                    {{ 'lbl.Title'|trans|ucfirst }}
                    {{ macro.required }}
                  </label>
                  {% form_field title %} {% form_field_error title %}
                </div>
                <div class="panel panel-default panel-editor">
                  <div class="panel-heading">
                    <label for="text" class="control-label">
                      {{ 'lbl.Content'|trans|ucfirst }}
                      {{ macro.required }}<br>
                    </label>
                  </div>
                  <div class="panel-body">
                    {% form_field text %}
                  </div>
                  {% if txtTextError %}
                    <div class="panel-footer">
                      {% form_field_error text %}
                    </div>
                  {% endif %}
                </div>
                {% if ddmTemplate %}
                  <div class="form-group">
                    <label for="template" class="control-label">{{ 'lbl.Template'|trans|ucfirst }}</label>
                    {% form_field template %} {% form_field_error template %}
                  </div>
                {% endif %}
                <div class="form-group last">
                  <label for="hidden" class="control-label">{% form_field hidden %} {{ 'lbl.VisibleOnSite'|trans|ucfirst }}</label>
                  {% form_field_error hidden %}
                </div>
              </div>
            </div>
          </div>
          <div role="tabpanel" class="tab-pane" id="tabVersions">
            <div class="row">
              <div class="col-md-12">
                <div class="content-block">
                  <div class="content-title">
                    <p>
                      {{ 'lbl.PreviousVersions'|trans|ucfirst }}
                      <abbr class="fa fa-question-circle" data-toggle="tooltip" title="{{ 'msg.HelpRevisions'|trans|ucfirst }}"></abbr>
                    </p>
                  </div>
                  {% if revisions %}
                    <div class="table-responsive">
                      {{ revisions|raw }}
                    </div>
                  {% endif %}
                  {% if not revisions %}
                    <p>{{ 'msg.NoRevisions'|trans|ucfirst }}</p>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-page-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-left" role="group">
          {% if showContentBlocksDelete %}
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmDelete">
              <span class="fa fa-trash-o"></span>
              {{ 'lbl.Delete'|trans|ucfirst }}
            </button>
          {% endif %}
        </div>
        <div class="btn-group pull-right" role="group">
          <button id="editButton" type="submit" name="edit" class="btn btn-primary">
            <span class="fa fa-floppy-o"></span>{{ 'lbl.Save'|trans|ucfirst }}
          </button>
        </div>
      </div>
      {% if showContentBlocksDelete %}
        <div class="modal fade" id="confirmDelete" tabindex="-1" role="dialog" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <span class="modal-title h4">{{ 'lbl.Delete'|trans|ucfirst }}</span>
              </div>
              <div class="modal-body">
                <p>{{ 'msg.ConfirmDelete'|trans|format(title)|raw }}</p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                  <span class="fa fa-times"></span>{{ 'lbl.Cancel'|trans|ucfirst }}
                </button>
                <a href="{{ geturl('delete') }}&amp;id={{ id }}" class="btn btn-danger">
                  <span class="fa fa-trash"></span>{{ 'lbl.Delete'|trans|ucfirst }}
                </a>
              </div>
            </div>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
  {% endform %}
{% endblock %}

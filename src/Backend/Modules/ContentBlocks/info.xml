    <author>
      <name><![CDATA[Davy Hellemans]]></name>
      <url><![CDATA[http://blog.bauffman.be]]></url>
    </author>
    <author>
      <name><![CDATA[Tijs Verkoyen]]></name>
      <url><![CDATA[https://www.sumocoders.be]]></url>
    </author>
    <author>
      <name><![CDATA[Matthias Mullie]]></name>
      <url><![CDATA[http://www.mullie.eu]]></url>
    </author>
    <author>
      <name><![CDATA[Jelmer Prins]]></name>
      <url><![CDATA[https://www.sumocoders.be]]></url>
    </author>
    <author>
      <name><![CDATA[Jeroen Desloovere]]></name>
      <url><![CDATA[http://www.jeroendesloovere.be]]></url>
    </author>
  </authors>
  <events>
    <event application="backend" name="content_blocks.event.content_block_created"><![CDATA[Triggered when a content block is added.]]></event>
    <event application="backend" name="content_blocks.event.content_block_deleted"><![CDATA[Triggered when a content block is deleted.]]></event>
    <event application="backend" name="content_blocks.event.content_block_updated"><![CDATA[Triggered when a content block is edited.]]></event>
  </events>
</module>

{% extends 'Layout/Templates/base.html.twig' %}
{% import "Layout/Templates/macros.html.twig" as macro %}

{% block actionbar %}

{% endblock %}

{% block content %}
  {% form settings %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="card card-default">
        <div class="card-heading">
          <h2 class="card-title">
            {{ 'lbl.MetaNavigation'|trans|ucfirst }}
          </h2>
        </div>
        <div class="card-body">
          <div class="form-group last">
            <ul class="list-unstyled">
              <li class="checkbox">
                <label for="metaNavigation" class="control-label">{% form_field meta_navigation %} {{ 'msg.MetaNavigation'|trans|ucfirst }}</label>
              </li>
            </ul>
            <p class="help-block">{{ 'msg.HelpMetaNavigation'|trans }}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-module-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-right" role="group">
          {{ macro.buttonIcon('', 'floppy-o', 'lbl.Save'|trans|ucfirst, 'btn-primary', { "id":"save", "type":"submit", "name":"save" }) }}
        </div>
      </div>
    </div>
  </div>
  {% endform %}
{% endblock %}

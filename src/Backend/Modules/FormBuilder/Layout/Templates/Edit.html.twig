  {# Dialog for a datetime #}
  <div class="modal fade jsFieldDialog" id="datetimeDialog" tabindex="-1" role="dialog" aria-labelledby="{{ 'lbl.Datetime'|trans|ucfirst }}" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">

            <div role="tabpanel" class="tab-pane jsFieldTab" id="tabDatetimeAdvanced">
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label for="datetimeClassname" class="control-label">{{ 'lbl.Classname'|trans|ucfirst }}</label>
                    {% form_field datetime_classname %}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

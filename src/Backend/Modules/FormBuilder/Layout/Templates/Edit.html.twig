{% include "/Layout/Templates/StructureStartModule.html.twig" %}
<div class="row fork-module-heading">
  <div class="col-md-6">
    <h2>{{ 'lbl.EditForm'|trans|sprintf(name|capitalize ) }}</h2>
  </div>
  <div class="col-md-6">

  </div>
</div>
{% form edit %}
  <script type="text/javascript">
    //@todo why data comes not from action?

{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}
  <div class="btn-toolbar pull-right">
    <div class="btn-group" role="group">
      {% if showFormBuilderIndex %}
        {{ macro.buttonIcon( geturl('index'), 'list', 'lbl.Overview'|trans|capitalize) }}
      {% endif %}
      {% if showFormBuilderExportData %}
        {{ macro.buttonIcon( geturl('export_data') ~ '&id=' ~ id  ~ '&start_date=' ~ start_date ~ '&end_date=' ~ end_date, 'download', 'lbl.Export'|trans|capitalize) }}
      {% endif %}
    </div>
  </div>
{% endblock %}

{% block content %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      {% form filter %}
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <label for="startDate" class="control-label">{{ 'lbl.StartDate'|trans|capitalize }}</label>
                {% form_field_error start_date %} {% form_field start_date %}
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label for="endDate" class="control-label">{{ 'lbl.EndDate'|trans|capitalize }}</label>
                {% form_field_error end_date %} {% form_field end_date %}
              </div>
            </div>
          </div>
        </div>
        <div class="panel-footer">
          <div class="btn-toolbar">
            <div class="btn-group pull-right">
              <button id="search" type="submit" class="btn btn-primary" name="search">
                <span class="fa fa-refresh"></span>&nbsp;
                {{ 'lbl.UpdateFilter'|trans|capitalize }}
              </button>
            </div>
          </div>
        </div>
      </div>
      {% endform %}
    </div>
  </div>
  <div class="row fork-module-content">
    <div class="col-md-12">
      {% if dataGrid %}
        <form 'act.on="{{ geturl('mass_data_action' ) }}" method="get" class="forkForms">
        {{ dataGrid }}
        <div class="modal fade" id="confirmDelete" tabindex="-1" role="dialog" aria-labelledby="{{ 'lbl.Delete'|trans|capitalize }}" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <span class="modal-title h4">{{ 'lbl.Delete'|trans|capitalize }}</span>
              </div>
              <div class="modal-body">
                <p>{{ 'msg.ConfirmMassDelete'|trans|capitalize }}</p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                  <span class="fa fa-times"></span>{{ 'lbl.Cancel'|trans|capitalize }}
                </button>
                <button type="submit" class="btn btn-primary">
                  <span class="fa fa-trash"></span>{{ 'lbl.Delete'|trans|capitalize }}
                </button>
              </div>
            </div>
          </div>
        </div>
        </form>
      {% endif %}
      {% if not dataGrid %}
        <p>{{ 'msg.NoData'|trans|capitalize }}</p>
      {% endif %}
    </div>
  </div>
{% endblock %}

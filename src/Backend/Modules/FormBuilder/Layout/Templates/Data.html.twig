{% include "/Layout/Templates/Head.html.twig" %}
{% include "/Layout/Templates/StructureStartModule.html.twig" %}
<div class="row fork-module-heading">
  <div class="col-md-12">
    <h2>{{ 'lbl.FormData'|trans|sprintf(name|capitalize ) }}</h2>
    <div class="btn-toolbar pull-right">
      <div class="btn-group" role="group">
        {% if showFormBuilderIndex %}
        <a href="{{ geturl('index' ) }}" class="btn btn-default">
          <span class="glyphicon glyphicon-chevron-left"></span>&nbsp;
          {{ 'lbl.Overview'|trans|capitalize }}
        </a>
        {% endif %}
        {% if showFormBuilderExportData %}
        <a href="{{ geturl('export_data' ) }}&id={{ id }}&amp;start_date={{ start_date }}&amp;end_date={{ end_date }}" class="btn btn-default">
          <span class="glyphicon glyphicon-export"></span>&nbsp;
          {{ 'lbl.Export'|trans|capitalize }}
        </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>
<div class="row fork-module-content">
  <div class="col-md-12">
    {% form filter %}
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <label for="startDate">{{ 'lbl.StartDate'|trans|capitalize }}</label>
                {% form_field_error start_date %} {% form_field start_date %}
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label for="endDate">{{ 'lbl.EndDate'|trans|capitalize }}</label>
                {% form_field_error end_date %} {% form_field end_date %}
              </div>
            </div>
          </div>
        </div>
        <div class="panel-footer">
          <div class="btn-toolbar">
            <div class="btn-group pull-right">
              <button id="search" type="submit" class="btn btn-primary" name="search">
                <span class="glyphicon glyphicon-refresh"></span>&nbsp;
                {{ 'lbl.UpdateFilter'|trans|capitalize }}
              </button>
            </div>
          </div>
        </div>
      </div>
    {% endform %}
  </div>
</div>
<div class="row fork-module-content">
  <div class="col-md-12">
    {% if dataGrid %}
    <form 'act.on="{{  geturl('mass_data_action' ) }}" method="get" class="forkForms">
      {{ dataGrid }}
      <div class="modal fade" id="confirmDelete" tabindex="-1" role="dialog" aria-labelledby="{{ 'lbl.Delete'|trans|capitalize }}" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <span class="modal-title h4">{{ 'lbl.Delete'|trans|capitalize }}</span>
            </div>
            <div class="modal-body">
              <p>{{ msg.ConfirmMassDelete }}</p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'lbl.Cancel'|trans|capitalize }}</button>
              <button type="submit" class="btn btn-primary">{{ 'lbl.OK'|trans|capitalize }}</button>
            </div>
          </div>
        </div>
      </div>
    </form>
    {% endif %}
    {% if not dataGrid %}
    <p>{{ msg.NoData }}</p>
    {% endif %}
  </div>
</div>
{% include "/Layout/Templates/StructureEndModule.html.twig" %}

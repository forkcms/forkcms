{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}

{% endblock %}

{% block content %}
  {% if noAccounts %}
  <div class="row fork-module-messages">
    <div class="col-md-12">
      <div class="alert alert-info" role="alert">
        {{ 'msg.NoAccounts'|trans|sprintf(email ) }}
      </div>
    </div>
  </div>
  {% endif %}
  {% form settings %}
  {% if fileCertificate %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            {{ 'lbl.Certificate'|trans|capitalize }}
          </h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <p class="help-block">
              {{ 'msg.CertificateHelp'|trans|raw }}
            </p>
            {% form_field_error certificate %} {% form_field certificate %}
            <label for="email" class="control-label">{{ 'lbl.Email'|trans|capitalize }}</label>
            {% form_field_error email %} {% form_field email %}
          </div>
        </div>
      </div>
    </div>
  </div>
  {% endif %}
  {% if ddmAccount %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            {{ 'lbl.ChooseThisAccount'|trans|capitalize }}
          </h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            {% form_field account %}
          </div>
        </div>
      </div>
    </div>
  </div>
  {% endif %}
  {% if ddmWebPropertyId %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            {{ 'lbl.ChooseWebsiteProfile'|trans|capitalize }}
          </h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            {% form_field web_property_id %}
          </div>
        </div>
      </div>
    </div>
  </div>
  {% endif %}
  {% if web_property_id %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            {{ 'lbl.LinkedProfile'|trans|capitalize }}
          </h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <strong>{{ web_property_id }}</strong>{% if profile %}: ga:profile{% endif %}
          </div>
          {% if profile %}

            {% if showAnalyticsReset %}<a href="{{ geturl('reset' ) }}">{{ 'msg.RemoveAccountLink'|trans|capitalize }}</a>{% endif %}

          {% endif %}
        </div>
      </div>
    </div>
  </div>
  {% endif %}
  {% if ddmProfile %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            {{ 'lbl.ChooseWebsiteProfile'|trans|capitalize }}
          </h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            {% form_field profile %}
          </div>
        </div>
      </div>
    </div>
  </div>
  {% endif %}

  {% if noAccounts %}
    <div class="row">
      <div class="col-xs-12">
        <div class="generalMessage infoMessage content">
          <p><strong>{{ 'msg.NoAccounts'|trans|sprintf(email ) }}</strong></p>
        </div>
      </div>
    </div>
  {% endif %}


  {% if not profile %}
    <div class="row fork-module-actions">
      <div class="col-md-12">
        <div class="btn-toolbar">
          <div class="btn-group pull-right" role="group">
            <button id="save" type="submit" name="save" class="btn btn-primary">
              <span class="fa fa-floppy-o"></span>{{ 'lbl.Save'|trans|capitalize }}
            </button>
          </div>
        </div>
      </div>
    </div>
  {% endif %}
{% endblock %}

{% include "/Layout/Templates/Head.html.twig" %}
{% include "/Layout/Templates/StructureStartModule.html.twig" %}
<div class="row fork-module-heading">
  <div class="col-md-12">
    <h2>{{ 'lbl.Settings'|trans|capitalize }}</h2>
  </div>
</div>
{% if noAccounts %}
<div class="row fork-module-messages">
  <div class="col-md-12">
    <div class="alert alert-info" role="alert">
      {{ 'msg.NoAccounts'|trans|sprintf(email ) }}
    </div>
  </div>
</div>
{% endif %}
{% form settings %}
{% if fileCertificate %}
<div class="row fork-module-content">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          {{ 'lbl.Certificate'|trans|capitalize }}
        </h3>
      </div>
      <div class="panel-body">
        <div class="form-group">
          <p class="text-info">
            {{ msg.CertificateHelp }}
          </p>
          {% form_field_error certificate %} {% form_field certificate %}
        </p>
        <p>
          <label for="email">{{ 'lbl.Email'|trans|capitalize }}</label>
          {% form_field_error email %} {% form_field email %}
        </div>
      </div>
    </div>
  </div>
</div>
{% endif %}
{% if ddmAccount %}
<div class="row fork-module-content">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          {{ 'lbl.ChooseThisAccount'|trans|capitalize }}
        </h3>
      </div>
      <div class="panel-body">
        <div class="form-group">
          {% form_field account %}
        </div>
      </div>
    </div>
  </div>
</div>
{% endif %}
{% if ddmWebPropertyId %}
<div class="row fork-module-content">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          {{ 'lbl.ChooseWebsiteProfile'|trans|capitalize }}
        </h3>
      </div>
      <div class="panel-body">
        <div class="form-group">
          {% form_field web_property_id %}
        </div>
      </div>
    </div>
  </div>
</div>
{% endif %}
{% if web_property_id %}
<div class="row fork-module-content">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          {{ 'lbl.LinkedProfile'|trans|capitalize }}
        </h3>
      </div>
      <div class="panel-body">
        <div class="form-group">
          <strong>{{ web_property_id }}</strong>{% if profile %}: ga:profile{% endif %}
        </div>
      </div>
    </div>
  </div>
</div>
{% endif %}
{% if ddmProfile %}
<div class="row fork-module-content">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          {{ 'lbl.ChooseWebsiteProfile'|trans|capitalize }}
        </h3>
      </div>
      <div class="panel-body">
        <div class="form-group">
          {% form_field profile %}
        </div>
      </div>
    </div>
  </div>
</div>
{% endif %}

  {% if noAccounts %}
    <div class="generalMessage infoMessage content">
      <p><strong>{{ 'msg.NoAccounts'|trans|sprintf(email ) }}</strong></p>
    </div>
  {% endif %}

  {% if profile %}
    <div class="box">
      <div class="heading">
        <h3>{{ 'lbl.LinkedProfile'|trans|capitalize }}</h3>
      </div>
      <div class="options">
        <p>
          <strong>{{ web_property_id }}</strong>{% if profile %}: ga:profile{% endif %}
        </p>
        {% if showAnalyticsReset %}<a href="{{ geturl('reset' ) }}">{{ 'msg.RemoveAccountLink'|trans|capitalize }}</a>{% endif %}
      </div>
    </div>
  {% endif %}

  {% if not profile %}
    <div class="fullwidthOptions">
      <div class="buttonHolderRight">
        <input id="save" class="inputButton button mainButton" type="submit" name="save" value="{{ 'lbl.Save'|trans|capitalize }}" />
      </div>
    </div>
  {% endif %}
{% endform %}

                <span class="fulldate">{{ _itr_2.ga_date|spoondate('D d M',INTERFACE_LANGUAGE|ucwords ) }}</span>
                <span class="date">{{ _itr_2.ga_date|spoondate('d M',INTERFACE_LANGUAGE|ucwords ) }}</span>

{% block content %}
  {% form add %}
    <div class="row fork-module-content">
      <div class="col-md-12">
        <div class="form-group">
          <label for="title" class="control-label">{{ 'lbl.Question'|trans|capitalize }}</label>
          {% form_field_error title %} {% form_field title %}
        </div>
        {% if detailURL %}
        <a href="{{ detailURL }}"><small>{{ detailURL }}/<span id="generatedUrl"></span></small></a>      {% endif %}
        {% if not detailURL %}
        <p class="text-warning"><span class="fa fa-warning"></span> {{ 'err.NoModuleLinked'|trans|capitalize }}</p>
        {% endif %}
      </div>
    </div>
    <div class="row fork-module-content">
      <div class="col-md-12">
        <div role="tabpanel">
          <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active">
              <a href="#tabContent" aria-controls="content" role="tab" data-toggle="tab">{{ 'lbl.Content'|trans|capitalize }}</a>
            </li>
            <li role="presentation">
              <a href="#tabSEO" aria-controls="seo" role="tab" data-toggle="tab">{{ 'lbl.SEO'|trans|capitalize }}</a>
            </li>
          </ul>
          <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="tabContent">
              <div class="row">
                <div class="col-md-8">
                  <div class="form-group optionsRTE">
                    <label for="answer" class="control-label">{{ 'lbl.Answer'|trans|capitalize }}
                      <abbr data-toggle="tooltip" title="{{ 'lbl.RequiredField'|trans|capitalize }}">*</abbr>
                    </label>
                    {% form_field_error answer %} {% form_field answer %}
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="panel panel-default">
                    <div class="panel-heading">
                      <h3 class="panel-title">{{ 'lbl.Status'|trans|capitalize }}</h3>
                    </div>
                    <div class="panel-body">
                      <div class="form-group">
                        <ul class="list-unstyled">
                          {% for _itr_9 in hidden %}
                          <li class="radio">
                            <label for="{{ _itr_9.id }}">{{ _itr_9.rbtHidden|raw }} {{ _itr_9.label }}</label>
                          </li>
                          {% endfor %}
                        </ul>
                      </div>
                    </div>
                  </div>
                  <div class="panel panel-default">
                    <div class="panel-heading">
                      <h3 class="panel-title">{{ 'lbl.MetaData'|trans|capitalize }}</h3>
                    </div>
                    <div class="panel-body">
                      <div class="form-group">
                        <label for="categoryId" class="control-label">{{ 'lbl.Category'|trans|capitalize }}</label>
                        {% form_field_error category_id %} {% form_field category_id %}
                      </div>
                      <div class="form-group">
                        <label for="tags" class="control-label">{{ 'lbl.Tags'|trans|capitalize }}</label>
                        {% form_field_error tags %} {% form_field tags %}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="tabSEO">
              {% seo %}
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row fork-module-actions">
      <div class="col-md-12">
        <div class="btn-toolbar">
          <div class="btn-group pull-right" role="group">
            <button id="addButton" type="submit" name="add" class="btn btn-primary">
              <span class="fa fa-plus"></span>&nbsp;
              {{ 'lbl.Add'|trans|capitalize }}
            </button>
          </div>
        </div>
      </div>
    </div>

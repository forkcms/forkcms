          <div role="tabpanel" class="tab-pane active" id="tabContent">
            <div class="row">
              <div class="col-md-8">
                <div class="form-group optionsRTE">
                  <label for="answer" class="control-label">{{ 'lbl.Answer'|trans|capitalize }}
                    <abbr data-toggle="tooltip" title="{{ 'lbl.RequiredField'|trans|capitalize }}">*</abbr>
                  </label>
                  {% form_field_error answer %} {% form_field answer %}
                </div>
              </div>
              <div class="col-md-4">
                <div class="panel panel-default">
                  <div class="panel-heading">

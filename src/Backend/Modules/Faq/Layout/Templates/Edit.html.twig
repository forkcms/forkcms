                    <div class="form-group">
                      <label for="categoryId">{{ 'lbl.Category'|trans|capitalize }}</label>
                      {% form_field_error category_id %} {% form_field category_id %}
                    </div>
                    <div class="form-group">
                      <label for="tags">{{ 'lbl.Tags'|trans|capitalize }}</label>
                      {% form_field_error tags %} {% form_field tags %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div role="tabpanel" class="tab-pane" id="tabSEO">
            {% include "/Layout/Templates/Seo.html.twig" %}
          </div>
          <div role="tabpanel" class="tab-pane" id="tabFeedback">
            <div class="row">
              <div class="col-md-12">
                <h3>{{ 'lbl.Feedback'|trans|capitalize }}</h3>

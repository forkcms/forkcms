{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}

{% endblock %}

{% block content %}
  {% form editCategory %}
    <div class="row fork-module-content">
      <div class="col-md-12">
        <div role="tabpanel">
          <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active">
              <a href="#tabContent" aria-controls="content" role="tab" data-toggle="tab">{{ 'lbl.Content'|trans|capitalize }}</a>
            </li>
            <li role="presentation">
              <a href="#tabSEO" aria-controls="seo" role="tab" data-toggle="tab">{{ 'lbl.SEO'|trans|capitalize }}</a>
            </li>
          </ul>
          <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="tabContent">
              <div class="form-group">
                <label for="title" class="control-label">
                  {{ 'lbl.Title'|trans|capitalize }}
                  <abbr data-toggle="tooltip" title="{{ 'lbl.RequiredField'|trans|capitalize }}">*</abbr>
                </label>
                {% form_field_error title %} {% form_field title %}
              </div>
              {% if detailURL %}
                <a href="{{ detailURL }}"><small>{{ detailURL }}/<span id="generatedUrl"></span></small></a>      {% endif %}
              {% if not detailURL %}
                <p class="text-warning"><span class="fa fa-warning"></span> {{ 'err.NoModuleLinked'|trans|capitalize }}</p>
              {% endif %}
            </div>
            <div role="tabpanel" class="tab-pane" id="tabSEO">
              {% seo %}
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row fork-page-actions">
      <div class="col-md-12">
        <div class="btn-toolbar">
          <div class="btn-group pull-left" role="group">
            {% if showFaqDeleteCategory %}
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmDelete">
              <span class="fa fa-trash-o"></span>
              {{ 'lbl.Delete'|trans|capitalize }}
            </button>
            {% endif %}
          </div>
          <div class="btn-group pull-right" role="group">
            <button id="editButton" type="submit" name="edit" class="btn btn-primary">
              <span class="fa fa-check"></span>&nbsp;{{ 'lbl.Publish'|trans|capitalize }}
            </button>
          </div>
        </div>
        {% if showFaqDeleteCategory %}
        <div class="modal fade" id="confirmDelete" tabindex="-1" role="dialog" aria-labelledby="{{ 'lbl.Delete'|trans|capitalize }}" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <span class="modal-title h4">{{ 'lbl.Delete'|trans|capitalize }}</span>
              </div>
              <div class="modal-body">
                <p>{{ 'msg.ConfirmDeleteCategory'|trans|sprintf(item.title ) }}</p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'lbl.Cancel'|trans|capitalize }}</button>
                <a href="{{ geturl('delete_category' ) }}&amp;id={{ item.id }}" class="btn btn-primary">
                  {{ 'lbl.OK'|trans|capitalize }}
                </a>
              </div>
            </div>
          </div>
        </div>
        {% endif %}
      </div>
    </div>
  {% endform %}
{% endblock %}


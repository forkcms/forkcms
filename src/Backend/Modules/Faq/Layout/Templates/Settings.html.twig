{% extends 'Layout/Templates/base.html.twig' %}
{% import 'Layout/Templates/macros.html.twig' as macro %}

{% block actionbar %}

{% endblock %}

{% block content %}
  {% form settings %}
  <div class="card card-default">
    <div class="card-heading">
      <h2 class="card-title">
        {{ 'lbl.Pagination'|trans|ucfirst }}
      </h2>
    </div>
    <div class="card-body">
      <div class="form-group">
        <label for="overviewNumberOfItemsPerCategory" class="control-label">{{ 'lbl.ItemsPerCategory'|trans|ucfirst }}</label>
        {% form_field overview_number_of_items_per_category %} {% form_field_error overview_number_of_items_per_category %}
      </div>
      <div class="form-group">
        <label for="mostReadNumberOfItems" class="control-label">{{ 'msg.NumMostReadItems'|trans }}</label>
        {% form_field most_read_number_of_items %} {% form_field_error most_read_number_of_items %}
      </div>
      <div class="form-group last">
        <label for="relatedNumberOfItems" class="control-label">{{ 'msg.NumRelatedItems'|trans }}</label>
        {% form_field related_number_of_items %} {% form_field_error related_number_of_items %}
      </div>
    </div>
  </div>
  <div class="card card-default">
    <div class="card-heading">
      <h2 class="card-title">
        {{ 'lbl.Categories'|trans|ucfirst }}
      </h2>
    </div>
    <div class="card-body">
      <div class="form-group last">
        <div class="form-check">
          {% form_field allow_multiple_categories %}
          <label for="allowMultipleCategories" class="form-check-label">
            {{ 'lbl.AllowMultipleCategories'|trans|ucfirst }}
          </label>
        </div>
      </div>
    </div>
  </div>
  <div class="card card-default">
    <div class="card-heading">
      <h2 class="card-title">
        {{ 'lbl.Feedback'|trans|ucfirst }}
      </h2>
    </div>
    <div class="card-body">
      <div class="form-group last">
        <div class="form-check">
          {% form_field allow_feedback %}
          <label for="allowFeedback" class="form-check-label">
            {{ 'lbl.AllowFeedback'|trans|ucfirst }}
          </label>
        </div>
        <div class="form-check">
          {% form_field allow_own_question %}
          <label for="allowOwnQuestion" class="form-check-label">
            {{ 'lbl.AllowOwnQuestion'|trans|ucfirst }}
          </label>
        </div>
        <div class="form-check">
          {% form_field send_email_on_new_feedback %}
          <label for="sendEmailOnNewFeedback" class="form-check-label">
            {{ 'lbl.SendEmailOnNewFeedback'|trans|ucfirst }}
          </label>
        </div>
        <div class="form-check">
          {% form_field spamfilter %}
          <label for="spamfilter" class="form-check-label">
            {{ 'lbl.FilterCommentsForSpam'|trans|ucfirst }}
          </label>
        </div>
        <small class="form-text text-muted">
          {{ 'msg.HelpSpamFilter'|trans }}
          {% if noAkismetKey %}
            <br>
            {{ 'msg.NoAkismetKey'|trans|format(geturl('index','settings'))|raw }}
          {% endif %}
        </small>
      </div>
    </div>
  </div>
  <div class="fork-module-actions">
    <div class="btn-toolbar">
      <div class="btn-group ms-auto" role="group">
        {{ macro.buttonIcon('', 'save', 'lbl.Save'|trans|ucfirst, 'btn-primary', { "id":"save", "type":"submit", "name":"save" } ) }}
      </div>
    </div>
  </div>
  {% endform %}
{% endblock %}

{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}
  {% if showSearchAddSynonym %}
    <div class="btn-toolbar pull-right">
      <div class="btn-group" role="group">
        {{ macro.buttonIcon(geturl('add_synonym'), 'plus-square', 'lbl.AddSynonym'|trans|ucfirst) }}
      </div>
    </div>
  {% endif %}
{% endblock %}

{% block content %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      {% if dataGrid %}
        <div class="table-responsive">
          {{ dataGrid|raw }}
        </div>
      {% endif %}
      {% if not dataGrid %}
        <p>{{ 'msg.NoSynonyms'|trans|format(geturl('add_synonym'))|raw }}</p>
      {% endif %}
    </div>
  </div>
{% endblock %}

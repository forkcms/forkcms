{% include "/Layout/Templates/Head.html.twig" %}
{% include "/Layout/Templates/StructureStartModule.html.twig" %}
<div class="row fork-module-heading">
  <div class="col-md-12">
    <h2>{{ 'lbl.Settings'|trans|capitalize }}</h2>
  </div>
</div>
{% form settings %}
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            {{ 'lbl.Pagination'|trans|capitalize }}
          </h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <label for="overviewNumItems">{{ 'lbl.ItemsPerPage'|trans|capitalize }}</label>
            {% form_field_error overview_num_items %} {% form_field overview_num_items %}
          </div>
          <div class="form-group">
            <label for="autocompleteNumItems">{{ 'lbl.ItemsForAutocomplete'|trans|capitalize }}</label>
            {% form_field_error autocomplete_num_items %} {% form_field autocomplete_num_items %}
          </div>
          <div class="form-group">
            <label for="autosuggestNumItems">{{ 'lbl.ItemsForAutosuggest'|trans|capitalize }}</label>
            {% form_field_error autosuggest_num_items %} {% form_field autosuggest_num_items %}
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            {{ 'lbl.SitelinksSearchBox'|trans|capitalize }}
          </h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <ul class="list-unstyled">
              <li class="checkbox">
                <label for="useSitelinksSearchBox">
                  {% form_field_'err.r use_sitelinks_search_box %} {% form_field use_sitelinks_search_box_capitalize %} {{ 'lbl.UseSitelinksSearchBox''|trans|trans|capitalize }}
                  <abbr class="glyphicon glyphicon-question-sign" title="{{ msg.HelpSitelinksSearchBox }}"></abbr>
                </label>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            {{ 'lbl.ModuleWeight'|trans|capitalize }}
          </h3>
        </div>
        <div id="searchModules" class="panel-body">
          <p class="text-info">{{ msg.HelpWeightGeneral }}</p>
          <table class="table table-hover table-striped jsDataGrid">
            <tr>
              <th>{{ msg.IncludeInSearch }}</th>
              <th>{{ 'lbl.Module'|trans|capitalize }}</th>
              <th>
                {{ 'lbl.Weight'|trans|capitalize }}
                <abbr class="glyphicon glyphicon-question-sign" title="{{ msg.HelpWeight }}"></abbr>
              </th>
            </tr>
            {% for module in modules %}
            <tr class="{cycle:odd:even}">
              <td>{{ module.chk }}</td>
              <td><label for="{{ module.id }}">{{ module.label }}</label></td>
              <td>
                <label for="{{ module.id }}Weight" class="visuallyHidden">{{ 'lbl.Weight'|trans|capitalize }}</label>
                {{ module.txt }}
                {% if module.txtError %}
                <p class="text-danger">{{ module.txtError }}</p>
                {% endif %}
              </td>
            </tr>
            {% endfor %}
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-right" role="group">
          <button id="save" type="submit" name="save" class="btn btn-primary">{{ 'lbl.Save'|trans|capitalize }}</button>
        </div>
      </div>
    </div>
  </div>
{% endform %}

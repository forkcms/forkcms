{% extends 'Layout/Templates/base.html.twig' %}
{% import "Layout/Templates/macros.html.twig" as macro %}

{% block actionbar %}

{% endblock %}

{% block content %}
  {% form editItem %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="form-group">
        <label for="term" class="control-label">
          {{ 'lbl.Term'|trans|ucfirst }}
          {{ macro.required }}
        </label>
        {% form_field term %} {% form_field_error term %}
      </div>
      <div class="form-group">
        <div class="fakeP">
          <label for="addValue-synonym" class="control-label">
            {{ 'lbl.Synonyms'|trans|ucfirst }}
            {{ macro.required }}
          </label>
          <div class="itemAdder">
            {% form_field synonym %} {% form_field_error synonym %}
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-page-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-left" role="group">
          {% if showSearchDeleteSynonym %}
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmDelete">
              {{ macro.icon('trash-o') }}
              {{ 'lbl.Delete'|trans|ucfirst }}
            </button>
          {% endif %}
        </div>
        <div class="btn-group pull-right" role="group">
          <button id="addButton" type="submit" name="add" class="btn btn-primary">
            {{ macro.icon('plus-square') }}{{ 'lbl.AddSynonym'|trans|ucfirst }}
          </button>
        </div>
      </div>
    </div>
  </div>
  {% endform %}

  {% if showSearchDeleteSynonym %}
    {{ form_start(deleteForm) }}
    {{ form_row(deleteForm._token) }}
    {{ form_row(deleteForm.id) }}
    <div class="modal fade" id="confirmDelete" role="dialog" tabindex="-1" aria-hidden="true" aria-labelledby="confirmDeleteTitle">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title" id="confirmDeleteTitle">{{ 'lbl.Delete'|trans|ucfirst }}</h4>
          </div>
          <div class="modal-body">
            <p>{{ 'msg.ConfirmDeleteSynonym'|trans|format(term)|raw }}</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">
              {{ macro.icon('times') }}{{ 'lbl.Cancel'|trans|ucfirst }}
            </button>
            <button type="submit" class="btn btn-danger">
              {{ macro.icon('trash') }}{{ 'lbl.Delete'|trans|ucfirst }}
            </button>
          </div>
        </div>
      </div>
    </div>
    {{ form_end(deleteForm) }}
  {% endif %}
{% endblock %}

{% include "/Layout/Templates/Head.html.twig" %}
{% include "/Layout/Templates/StructureStartModule.html.twig" %}
<div class="row fork-module-heading">
  <div class="col-md-12">
    <h2>{{ 'lbl.Settings'|trans|capitalize }}</h2>
  </div>
</div>
{% if not clientId %}
<div class="row fork-module-messages">
  <div class="col-md-12">
    <div class="alert alert-warning" role="alert">
      <p><strong>{{ msg.ConfigurationError }}</strong></p>
      <ul>
        {% if not account %}
        <li>{{ err.NoCMAccount }}</li>
        {% endif %}
        {% if account %}
        <li>{{ err.NoCMClientID }}</li>
        {% endif %}
      </ul>
    </div>
  </div>
</div>
{% endif %}
<div class="row fork-module-content">
  <div class="col-md-12">
    <div role="tabpanel">
      <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active">
          <a href="#tabGeneral" aria-controls="general" role="tab" data-toggle="tab">{{ 'lbl.General'|trans|capitalize }}</a>
        </li>
        <li role="presentation">
          <a href="#tabAccount" aria-controls="account" role="tab" data-toggle="tab">CampaignMonitor - {{ 'lbl.AccountSettings'|trans|capitalize }}</a>
        </li>
        {% if account %}
        <li role="presentation">
          <a href="#tabClient" aria-controls="client" role="tab" data-toggle="tab">CampaignMonitor - {{ 'lbl.ClientSettings'|trans|capitalize }}</a>
        </li>
        {% endif %}
      </ul>
      <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="tabGeneral">
          {% form settingsGeneral %}
            <div class="row">
              <div class="col-md-12">
                <h3>{{ 'lbl.General'|trans|capitalize }}</h3>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h4 class="panel-title">
                      {{ 'lbl.Sender'|trans|capitalize }}
                    </h4>
                  </div>
                  <div class="panel-body">
                    <div class="form-group">
                      <label for="fromName">
                        {{ 'lbl.Name'|trans|capitalize }}
                        <abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
                      </label>
                      {% form_field_error from_name %} {% form_field from_name %}
                    </div>
                    <div class="form-group">
                      <label for="fromEmail">
                        {{ 'lbl.EmailAddress'|trans|capitalize }}
                        <abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
                      </label>
                      {% form_field_error from_email %} {% form_field from_email %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h4 class="panel-title">
                      {{ 'lbl.ReplyTo'|trans|capitalize }}
                    </h4>
                  </div>
                  <div class="panel-body">
                    <div class="form-group">
                      <label for="replyToEmail">
                        {{ 'lbl.EmailAddress'|trans|capitalize }}
                        <abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
                      </label>
                      {% form_field_error reply_to_email %} {% form_field reply_to_email %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h4 class="panel-title">
                      {{ 'lbl.PlainTextVersion'|trans|capitalize }}
                    </h4>
                  </div>
                  <div class="panel-body">
                    <div class="form-group">
                      <ul class="list-unstyled">
                        <li class="checkbox">
                          <label for="plainTextEditable">
                            {% form_field plain_text_editable %} {{ 'msg.PlainTextEditable'|trans|capitalize }}
                          </label>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            {% if userIsGod %}
            <div class="row">
              <div class="col-md-12">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h4 class="panel-title">
                      {{ 'lbl.Prices'|trans|capitalize }}
                    </h4>
                  </div>
                  <div class="panel-body">
                    <div class="form-group">
                      <label for="pricePerEmail">
                        {{ 'lbl.PerSentMailing'|trans|capitalize }}
                        <abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
                      </label>
                      <p class="text-info">{{ msg.HelpPrice }}</p>
                      <div class="form-inline">
                        € {% form_field_error price_per_email %} {% form_field price_per_email %}
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="pricePerEmail">
                        {{ 'lbl.PerCampaign'|trans|capitalize }}
                        <abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
                      </label>
                      <p class="text-info">{{ msg.HelpPrice }}</p>
                      <div class="form-inline">
                        € {% form_field_error price_per_campaign %} {% form_field price_per_campaign %}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            {% endif %}
            <div class="row">
              <div class="col-md-12">
                <div class="btn-toolbar">
                  <div class="btn-group pull-right" role="group">
                    <button id="save" type="submit" name="save" class="btn btn-primary">
                      <span class="glyphicon glyphicon-pencil"></span>&nbsp;
                      {{ 'lbl.Save'|trans|capitalize }}
                    </button>
                  </div>
                </div>
              </div>
            </div>
          {% endform %}
        </div>
        <div role="tabpanel" class="tab-pane" id="tabAccount">
          {% form settingsAccount %}
            <div class="row">
              <div class="col-md-12">
                <h3>CampaignMonitor - {{ 'lbl.AccountSettings'|trans|capitalize }}</h3>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <label for="url">
                    {{ 'lbl.URL'|trans|uppercase }}
                    <abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
                  </label>
                  <p class="text-info">{{ msg.HelpCMURL }}</p>
                  {% form_field_error url %} {% form_field url %}
                </div>
                <div class="form-group">
                  <label for="username">
                    {{ 'lbl.Username'|trans|capitalize }}
                    <abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
                  </label>
                  {% form_field_error username %} {% form_field username %}
                </div>
                <div class="form-group">
                  <label for="password">
                    {{ 'lbl.Password'|trans|capitalize }}
                    <abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
                  </label>
                  {% form_field_error password %} {% form_field password %}
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="btn-toolbar">
                  <div class="btn-group pull-left" role="group">
                    {% if account %}
                    <a id="unlinkAccount" href="#" class="btn btn-danger">
                      <span class="glyphicon glyphicon-log-out"></span>&nbsp;
                      {{ msg.UnlinkCMAccount }}
                    </a>
                    {% endif %}
                  </div>
                  <div class="btn-group pull-right" role="group">
                    {% if not account %}
                    <a id="linkAccount" href="#" class="btn btn-primary">
                      <span class="glyphicon glyphicon-log-in"></span>&nbsp;
                      {{ msg.LinkCMAccount }}
                    </a>
                    {% endif %}
                    {% if account %}
                    {% if clientId %}
                    <a href="{{ geturl('index' ) }}" class="btn btn-default">
                      <span class="glyphicon glyphicon-list-alt"></span>&nbsp;
                      {{ msg.ViewMailings }}
                    </a>
                    {% endif %}
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
          {% endform %}
        </div>
        {% if account %}
        <div role="tabpanel" class="tab-pane" id="tabClient">
          {% form settingsClient %}
            <div class="row">
              <div class="col-md-12">
                <h3>CampaignMonitor - {{ 'lbl.ClientSettings'|trans|capitalize }}</h3>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <label for="clientId">{{ 'lbl.Client'|trans|capitalize }}</label>
                  {% if not clientId %}
                  <p class="text-danger"><strong>{{ msg.NoClientID }}</strong></p>
                  {% endif %}
                  {% form_field client_id %}
                </div>
                <div class="form-group">
                  <label for="companyName">
                    {{ 'lbl.CompanyName'|trans|capitalize }}
                    <abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
                  </label>
                  {% form_field_error company_name %} {% form_field company_name %}
                </div>
                <div class="form-group">
                  <label for="countries">{{ 'lbl.Country'|trans|capitalize }}</label>
                  {% form_field_error countries %} {% form_field countries %}
                </div>
                <div class="form-group">
                  <label for="timezones">{{ 'lbl.Timezone'|trans|capitalize }}</label>
                  {% form_field_error timezones %} {% form_field timezones %}
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="btn-toolbar">
                  <div class="btn-group pull-right" role="group">
                    <button id="save" type="submit" name="save" class="btn btn-primary">
                      <span class="glyphicon glyphicon-pencil"></span>&nbsp;
                      {{ 'lbl.Save'|trans|capitalize }}
                    </button>
                  </div>
                </div>
              </div>
            </div>
          {% endform %}
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
{% include "/Layout/Templates/StructureEndModule.html.twig" %}

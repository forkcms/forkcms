{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}

{% endblock %}


{% block content %}
  {% form edit %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="form-group">
        <label for="name" class="control-label">
          {{ 'lbl.Name'|trans|ucfirst }}
          {{ macro.required }}
        </label>
        {% form_field name %} {% form_field_error name %}
      </div>
      <div class="form-group">
        <p class="help-block">{{ 'msg.DefaultGroup'|trans|ucfirst }}</p>
        <ul class="list-unstyled">
          {% for button in default %}
            <li class="radio">
              <label for="{{ button.id }}">{{ button.rbtDefault|raw }} {{ button.label }}</label>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
  <div class="row fork-module-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-right" role="group">
          <button id="saveButton" type="submit" name="save" class="btn btn-primary">
            <span class="fa fa-floppy-o"></span>{{ 'lbl.Save'|trans|ucfirst }}
          </button>
        </div>
      </div>
    </div>
  </div>
  {% endform %}
{% endblock %}

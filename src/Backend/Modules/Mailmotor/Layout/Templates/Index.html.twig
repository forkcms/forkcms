  <div class="row fork-module-heading">
    <div class="col-md-12">
      {% if dgUnsentMailings %}
        <h2>{{ 'lbl.UnsentMailings'|trans|capitalize }}{% if name %} {{ lbl.In }} {{ lbl.Campaign }} &ldquo;{{ name }}&rdquo;{% endif %}</h2>
      {% endif %}
      {% if not dgUnsentMailings %}
        <h2>{{ 'lbl.Newsletters'|trans|capitalize }}</h2>
      {% endif %}
      <div class="btn-toolbar pull-right">
        <div class="btn-group" role="group">
          {% if showMailmotorAdd %}
            <a href="{{ geturl('add' ) }}" class="btn btn-default" title="{{ 'lbl.AddNewMailing'|trans|capitalize }}">
              <span class="glyphicon glyphicon-fa fa-send-o"></span>&nbsp;
              {{ 'lbl.AddNewMailing'|trans|capitalize }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block content %}

  <div class="row fork-module-content">
    <div class="col-md-12">
      {% if dgUnsentMailings %}
      <div class="dataGridHolder">
        {{ dgUnsentMailings|raw }}
      </div>
      {% endif %}
      {% if not dgUnsentMailings %}
      <p>{{ msg.NoUnsentMailings }}</p>
      {% endif %}
    </div>
  </div>
  {% if dgQueuedMailings %}
  <div class="row fork-module-heading">
    <div class="col-md-12">
      <h2>{{ 'lbl.QueuedMailings'|trans|capitalize }}{% if name %} {{ lbl.In }} {{ lbl.Campaign }} &ldquo;{{ name }}&rdquo;{% endif %}</h2>
    </div>
  </div>
  <div class="row fork-module-content">
    <div class="col-md-12">
      {{ dgQueuedMailings|raw }}
    </div>
  </div>
  {% endif %}
  {% if dgSentMailings %}
  <div class="row fork-module-heading">
    <div class="col-md-12">
      <h2>{{ 'lbl.SentMailings'|trans|capitalize }}{% if name %} {{ lbl.In }} {{ lbl.Campaign }} &ldquo;{{ name }}&rdquo;{% endif %}</h2>
    </div>
  </div>
  <div class="row fork-module-content">
    <div class="col-md-12">
      {{ dgSentMailings|raw }}
    </div>
  </div>
  {% endif %}

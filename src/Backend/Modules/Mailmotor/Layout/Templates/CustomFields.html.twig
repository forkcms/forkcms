{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}
  <div class="row fork-module-heading">
    <div class="col-md-6">
      <h2>{{ 'lbl.CustomFields'|trans|capitalize }} {{ lbl.For }} {{ lbl.Group }} &ldquo;{{ group.name }}&rdquo; <abbr class="fa fa-question-circle" data-toggle="tooltip" title="{{ msg.HelpCustomFields }}"></abbr></h2>
    </div>
    <div class="col-md-6">

      <div class="btn-toolbar pull-right">
        <div class="btn-group" role="group">
          {% if showMailmotorAddCustomField %}
          <a href="{{ geturl('add_custom_field' ) }}&amp;group_id={{ group.id }}" class="btn btn-default" title="{{ 'lbl.AddCustomField'|trans|capitalize }}">
            <span class="fa fa-plus"></span>&nbsp;
            {{ 'lbl.AddCustomField'|trans|capitalize }}
          </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block content %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      {% if dataGrid %}
      <form 'act.on="{{  geturl('mass_custom_field_action' ) }}" method="get" class="forkForms submitWithLink" id="massCustomFieldAction">
        <input type="hidden" name="group_id" value="{{ group.id }}" />
        {{ dataGrid }}
      </form>
      {% endif %}
      {% if not dataGrid %}
      <p>{{ msg.NoItems }}</p>
      {% endif %}
    </div>
  </div>
{% endblock %}

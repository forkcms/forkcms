{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}
  <div class="btn-toolbar pull-right">
    <div class="btn-group" role="group">

      {% if showMailmotorImportGroups %}
        {{ macro.buttonIcon(geturl('import_groups'), 'upload', 'msg.ImportGroupsTitle'|trans|capitalize) }}
      {% endif %}

      {% if showMailmotorAddGroup %}
        {{ macro.buttonIcon(geturl('add_group'), 'plus-square', 'lbl.AddGroup'|trans|capitalize) }}
      {% endif %}
    </div>
  </div>
{% endblock %}

{% block content %}
  {% if noDefaultsSet %}
    <div class="row fork-module-messages">
      <div class="col-md-12">
        <div class="alert alert-warning" role="alert">
          <p><strong><span class="fa fa-exclamation-triangle"></span>{{ 'msg.NoDefaultsSetTitle'|trans }}</strong></p>
          <p>{{ 'msg.NoDefaultsSet'|trans|capitalize }}</p>
        </div>
      </div>
    </div>
  {% endif %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      {% if dataGrid %}
        <form action="{{ geturl('mass_group_action' ) }}" method="get" class="forkForms submitWithLink" id="groups">
          <div class="table-responsive">
            {{ dataGrid|raw }}
          </div>
        </form>
      {% endif %}
      {% if not dataGrid %}
        <p>{{ 'msg.NoItems'|trans|capitalize }}</p>
      {% endif %}
    </div>
  </div>
{% endblock %}

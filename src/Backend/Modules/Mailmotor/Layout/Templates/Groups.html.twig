  <div class="col-md-12">
    {% if dataGrid %}
    <form 'act.on="{{  geturl('mass_group_action' ) }}" method="get" class="forkForms submitWithLink" id="groups">
      {{ dataGrid|raw }}
    </form>
    {% endif %}
    {% if not dataGrid %}
    <p>{{ 'msg.NoItems'|trans|capitalize }}</p>
    {% endif %}

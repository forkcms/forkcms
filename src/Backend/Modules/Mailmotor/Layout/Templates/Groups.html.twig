  <div class="col-md-12">
    <div class="alert alert-warning" role="alert">
      <p><strong>{{ msg.NoDefaultsSetTitle }}</strong></p>
      <p>{{ msg.NoDefaultsSet }}</p>
    </div>
  </div>
</div>

{% include "/Layout/Templates/Head.html.twig" %}
{% include "/Layout/Templates/StructureStartModule.html.twig" %}
<div class="row fork-module-heading">
  <div class="col-md-12">
    <h2>{{ 'lbl.Bounces'|trans|capitalize }} {{ lbl.For }} &ldquo;{{ mailing.name }}&rdquo;</h2>
    <div class="btn-toolbar pull-right">
      <div class="btn-group" role="group">
        {% if showMailmotorStatistics %}
        <a href="{{ geturl('statistics' ) }}&amp;id={{ mailing.id }}" class="btn btn-default" title="{{ 'lbl.Statistics'|trans|capitalize }}">
          <span class="glyphicon glyphicon-chevron-left"></span>
          {{ 'msg.BackToStatistics'|trans|sprintf(mailing.name ) }}
        </a>
        {% endif %}
        {% if showMailmotorDeleteBounces %}
        <a href="{{ geturl('delete_bounces' ) }}&amp;mailing_id={{ mailing.id }}" class="btn btn-danger" title="{{ 'msg.DeleteBounces'|trans|capitalize }}">
          <span class="glyphicon glyphicon-trash"></span>
          {{ 'msg.DeleteBounces'|trans|capitalize }}
        </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>
<div class="row fork-module-content">
  <div class="col-md-12">
    {% if dataGrid %}
    <form 'act.on="{{  geturl('mass_bounces_action' ) }}" method="get" class="forkForms submitWithLink" id="bounces">
      {{ dataGrid }}
    </form>
    {% endif %}
    {% if not dataGrid %}
    <p>{{ msg.NoItems }}</p>
    {% endif %}
  </div>
</div>
{% include "/Layout/Templates/StructureEndModule.html.twig" %}

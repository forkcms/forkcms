{% include "/Layout/Templates/Head.html.twig" %}
{% include "/Layout/Templates/StructureStartModule.html.twig" %}
<div class="row fork-module-heading">
  <div class="col-md-12">
    <h2>{{ 'lbl.EditEmail'|trans|capitalize }}</h2>
  </div>
</div>
{% form edit %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="form-group">
        <label for="email">{{ 'lbl.EmailAddress'|trans|capitalize }}</label>
        {% form_field_error email %} {% form_field email %}
      </div>
      <div class="form-group">
        {% if groups %}
        {% if chkGroupsError %}
        <p class="text-danger">{% form_field_error groups %}</p>
        {% endif %}
        <ul class="list-unstyled">
          {% for group in groups %}
          <li class="checkbox">
            <label for="{{ group.id }}">{{ group.chkGroups|raw }} {{ group.label|capitalize }}</label>
          </li>
          {% endfor %}
        </ul>
        {% endif %}
      </div>
    </div>
  </div>
  {% if ddmSubscriptions %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            {{ 'lbl.CustomFields'|trans|capitalize }}
          </h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <label for="subscriptions">{{ 'lbl.Group'|trans|capitalize }}</label>
            {% form_field_error subscriptions %} {% form_field subscriptions %}
          </div>
        </div>
        {% if fields %}
        <div class="panel-body">
          {% for field in fields %}
          <div class="form-group">
            <label for="{{ field.name }}">[{{ field.label }}]</label>
            {{ field.txtField }} {{ field.txtFieldError }}
          </div>
          {% endfor %}
        </div>
        {% endif %}
      </div>
    </div>
  </div>
  {% endif %}
  <div class="row fork-module-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-right" role="group">
          <button id="saveButton" type="submit" name="save" class="btn btn-primary">
            <span class="glyphicon glyphicon-pencil"></span>&nbsp;
            {{ 'lbl.Save'|trans|capitalize }}
          </button>
        </div>
      </div>
    </div>
  </div>
{% endform %}

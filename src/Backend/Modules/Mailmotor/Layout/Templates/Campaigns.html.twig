{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}
  <div class="btn-toolbar pull-right">
    <div class="btn-group" role="group">
      {% if showMailmotorAddCampaign %}
        {{ macro.buttonIcon(geturl('add_campaign'), 'plus-square', 'lbl.AddCampaign'|trans|capitalize) }}
      {% endif %}
    </div>
  </div>
{% endblock %}

{% block content %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      {% if dataGrid %}
        <form action="{{ geturl('mass_campaign_action') }}" method="get" class="forkForms submitWithLink" id="campaigns">
          <div class="table-responsive">
            {{ dataGrid|raw }}
          </div>
        </form>
      {% endif %}
      {% if not dataGrid %}
        <p>{{ 'msg.NoItems'|trans|capitalize }}</p>
      {% endif %}
    </div>
  </div>
{% endblock %}

{% extends 'Layout/Templates/base.html.twig' %}
{% import 'Layout/Templates/macros.html.twig' as macro %}

{% block actionbar %}

{% endblock %}

{% block content %}
  {% form settingsSeo %}
    <div class="card card-default">
      <div class="card-heading">
        <h2 class="card-title">
          {{ 'lbl.SEO'|trans|ucfirst }}
        </h2>
      </div>
      <div class="card-body">
        <div class="form-group">
          <div class="form-check">
            {% form_field seo_noodp %}
            <label for="seoNoodp" class="form-check-label">{{ 'lbl.NOODP'|trans|upper }}</label>
          </div>
          <small class="form-text text-muted">{{ 'msg.HelpSEONoodp'|trans|ucfirst|raw }}</small>
        </div>
        <div class="form-group">
          <div class="form-check">
            {% form_field seo_noydir %}
            <label for="seoNoydir" class="form-check-label">{{ 'lbl.NOYDIR'|trans|upper }}</label>
          </div>
          <small class="form-text text-muted">{{ 'msg.HelpSEONoydir'|trans|ucfirst }}</small>
        </div>
        <div class="form-group last">
          <div class="form-check">
            {% form_field seo_nofollow_in_comments %}
            <label for="seoNofollowInComments" class="form-check-label">{{ 'msg.SEONoFollowInComments'|trans|ucfirst|raw }}</label>
          </div>
        </div>
      </div>
      {% if langFields %}
        <div class="panel panel-default">
          <div class="panel-heading">
            <h2 class="panel-title">
              {{ 'lbl.LinkedPagesPerLanguage'|trans|ucfirst }}
            </h2>
          </div>
          <div class="panel-body">
            <div class="form-group last">
              <table class="table table-hover table-striped fork-data-grid jsDataGrid">
                <thead>
                  <tr>
                    {% for lang in languages %}
                      <th>{{ lang }}</th>
                    {% endfor %}
                  </tr>
                </thead>
                <tbody>
                  {% for pageId, item in langFields %}
                    <tr class="{% if loop.index%2 == 0 %}odd{% else %}even{% endif %}">
                      {% for lang, data in item %}
                        <td>
                          {% if data.field %}
                            {{ data.field|raw }}
                          {% else %}
                            {{ data.title }}
                          {% endif%}
                        </td>
                      {% endfor %}
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      {% endif %}
    </div>
    <div class="fork-module-actions">
      <div class="btn-toolbar">
        <div class="btn-group ms-auto" role="group">
          {{ macro.buttonIcon('', 'save', 'lbl.Save'|trans|ucfirst, 'btn-primary', { "id":"save", "type":"submit", "name":"save" }) }}
        </div>
      </div>
    </div>
  {% endform %}
{% endblock %}

{% include "/Layout/Templates/StructureStartModule.html.twig" %}
<div class="row fork-module-heading">
  <div class="col-md-12">
    <h2>{{ 'lbl.GeneralSettings'|trans|capitalize }}</h2>
  </div>
</div>
{% form settingsEmail %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            {{ 'lbl.Email'|trans|capitalize }}
          </h3>
        </div>
        {% if isGod %}
        <div class="panel-body">
          <h4>{{ 'lbl.SendingEmails'|trans|capitalize }}</h4>
          <p class="text-info">{{ msg.HelpSendingEmails }}</p>
          <div class="form-inline">
            <div class="form-group">
              {% form_field_error mailer_type %} {% form_field mailer_type %}
            </div>
            <small>
              <a id="testEmailConnection" href="#">{{ msg.SendTestMail }}</a>
              <span id="testEmailConnectionSpinner" style="display: none;">
                <img style="margin-top: 3px;" src="/src/Backend/Core/Layout/images/spinner.gif" width="12px" height="12px" alt="loading" />
              </span>
              <span id="testEmailConnectionError" style="display: none;" class="alert alert-danger">{{ err.ErrorWhileSendingEmail }}</span>
              <span id="testEmailConnectionSuccess" style="display: none;" class="alert alert-success">{{ msg.TestWasSent }}</span>
            </small>
          </div>
        </div>
        {% endif %}
        <div class="panel-body">
          <h4>{{ 'lbl.From'|trans|capitalize }}</h4>
          <p>{{ msg.HelpEmailFrom }}</p>
          <div class="form-group">
            <label for="mailerFromName">
              {{ 'lbl.Name'|trans|capitalize }}
              <abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
            </label>
            {% form_field_error mailer_from_name %} {% form_field mailer_from_name %}
          </div>
          <div class="form-group">
            <label for="mailerFromEmail">
              {{ 'lbl.Email'|trans|capitalize }}
              <abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
            </label>
            {% form_field_error mailer_from_email %} {% form_field mailer_from_email %}
          </div>
        </div>
        <div class="panel-body">
          <h4>{{ 'lbl.To'|trans|capitalize }}</h4>
          <p>{{ msg.HelpEmailTo }}</p>
          <div class="form-group">
            <label for="mailerToName">
              {{ 'lbl.Name'|trans|capitalize }}
              <abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
            </label>
            {% form_field_error mailer_to_name %} {% form_field mailer_to_name %}
          </div>
          <div class="form-group">
            <label for="mailerToEmail">
              {{ 'lbl.Email'|trans|capitalize }}
              <abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
            </label>
            {% form_field_error mailer_to_email %} {% form_field mailer_to_email %}
          </div>
        </div>
        <div class="panel-body">
          <h4>{{ 'lbl.ReplyTo'|trans|capitalize }}</h4>
          <div class="form-group">
            <label for="mailerReplyToName">
              {{ 'lbl.Name'|trans|capitalize }}
              <abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
            </label>
            {% form_field_error mailer_reply_to_name %} {% form_field mailer_reply_to_name %}
          </div>
          <div class="form-group">
            <label for="mailerReplyToEmail">
              {{ 'lbl.Email'|trans|capitalize }}
              <abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr>
            </label>
            {% form_field_error mailer_reply_to_email %} {% form_field mailer_reply_to_email %}
          </div>
        </div>
      </div>
    </div>
  </div>
  {% if isGod %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            {{ 'lbl.SMTP'|trans|capitalize }}
          </h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <label for="smtpServer" style="float: left;">{{ 'lbl.Server'|trans|capitalize }}</label>
            <label for="smtpPort">&#160;&amp; {{ lbl.Port }}</label>
            <p class="text-info">{{ msg.HelpSMTPServer }}</p>
            <div class="form-inline">
              <div class="form-group">
                {% form_field smtp_server %}
              </div>
              <span>:</span>
              <div class="form-group">
                {% form_field smtp_port %}
              </div>
              <div class="form-group">
                {% form_field_error smtp_server %} {% form_field_error smtp_port %}
              </div>
            </div>
          </div>
          <div class="form-group">
            <label for="smtpUsername">{{ 'lbl.Username'|trans|capitalize }}</label>
            {% form_field_error smtp_username %} {% form_field smtp_username %}
          </div>
          <div class="form-group">
            <label for="smtpPassword">{{ 'lbl.Password'|trans|capitalize }}</label>
            {% form_field_error smtp_password %} {% form_field smtp_password %}
          </div>
          <div class="form-group">
            <label for="smtpSecureLayer">{{ 'lbl.SmtpSecureLayer'|trans|capitalize }}</label>
             {% form_field smtp_secure_layer %}
          </div>
        </div>
      </div>
    </div>
  </div>
  {% endif %}
  <div class="row fork-module-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-right" role="group">
          <button id="save" type="submit" name="save" class="btn btn-primary">{{ 'lbl.Save'|trans|capitalize }}</button>
        </div>
      </div>
    </div>
  </div>
{% endform %}

{% include "/Layout/Templates/Head.html.twig" %}
{% include "/Layout/Templates/StructureStartModule.html.twig" %}
<div class="row fork-module-heading">
  <div class="col-md-12">
    <h2>{{ 'lbl.Modules'|trans|capitalize }}</h2>
    <div class="btn-toolbar pull-right">
      <div class="btn-group" role="group">
        {% if showExtensionsUploadModule %}
        <a href="{{ geturl('upload_module' ) }}" class="btn btn-default">
          <span class="glyphicon glyphicon-import"></span>&nbsp;
          <span>{{ 'lbl.UploadModule'|trans|capitalize }}</span>
        </a>
        {% endif %}
        <a href="http://www.fork-cms.com/extensions/apps" target="_blank" class="btn btn-default">
          <span class="glyphicon glyphicon-search"></span>&nbsp;
          <span>{{ 'lbl.FindModules'|trans|capitalize }}</span>
        </a>
      </div>
    </div>
  </div>
</div>
{% if warnings %}
<div class="row fork-module-messages">
  <div class="col-md-12">
    <div class="panel panel-warning">
      <div class="panel-heading">
        <span class="panel-title">{{ msg.ModulesWarnings }}</span>
      </div>
      <div class="panel-body">
        <ul>
          <li>
            <strong>{{ warnings.module }}</strong>
            <ul>
              {% for warning in warnings.warnings %}
                <li>- {{ warning.message }}</li>
              {% endfor %}
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
{% endif %}
<div class="row fork-module-content">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">{{ 'lbl.InstalledModules'|trans|capitalize }}</h3>
      </div>
      {% if dataGridInstalledModules %}
      {{ dataGridInstalledModules }}
      {% endif %}
      {% if not dataGridInstalledModules %}
      <div class="panel-body">
        <p>{{ msg.NoModulesInstalled }}</p>
      </div>
      {% endif %}
    </div>
  </div>
</div>
{% if dataGridInstallableModules %}
<div class="row fork-module-content">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">{{ 'lbl.InstallableModules'|trans|capitalize }}</h3>
      </div>
      {{ dataGridInstallableModules }}
    </div>
  </div>
</div>
{% endif %}
{% include "/Layout/Templates/StructureEndModule.html.twig" %}

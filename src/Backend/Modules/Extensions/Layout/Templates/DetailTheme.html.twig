{% include "/Layout/Templates/Head.html.twig" %}
{% include "/Layout/Templates/StructureStartModule.html.twig" %}
<div class="row fork-module-heading">
  <div class="col-md-12">
    <h2>{{ 'lbl.UploadTheme'|trans|capitalize }}</h2>
  </div>
</div>
{% if warnings %}
<div class="row fork-module-messages">
  <div class="col-md-12">
    {% for warning in warnings %}
    <div class="alert alert-warning" role="alert">
      {{ warning.message }}
    </div>
    {% endfor %}
  </div>
</div>
{% endif %}
{% if information %}
<div class="row fork-module-content">
  <div class="col-md-8">
    {% if information.description %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          {{ 'lbl.Description'|trans|capitalize }}
        </h3>
      </div>
      <div class="panel-body">
        <p>{{ information.description }}</p>
      </div>
    </div>
    {% endif %}
    {% if dataGridTemplates %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          {{ 'lbl.Templates'|trans|capitalize }}
        </h3>
      </div>
      {{ dataGridTemplates }}
    </div>
    {% endif %}
  </div>
  <div class="col-md-4">
    {% if information.thumbnail %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          {{ 'lbl.Image'|trans|capitalize }}
        </h3>
      </div>
      <div class="panel-body text-center">
        <img src="/src/Frontend/Themes/{{ name }}/{{ information.thumbnail }}" class="img-thumbnail" alt="{{ name }}" />
      </div>
    </div>
    {% endif %}
    {% if information.version %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          {{ 'lbl.Version'|trans|capitalize }}
        </h3>
      </div>
      <div class="panel-body">
        <p>{{ information.version }}</p>
      </div>
    </div>
    {% endif %}
    {% if information.authors %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          {{ 'lbl.Authors'|trans|capitalize }}
        </h3>
      </div>
      <div class="panel-body">
        <ul>
          {% for author in information.authors %}
          <li>
            {% if author.url %}
            <a href="{{ author.url }}" target="_blank" title="{{ author.name }}">
              {% endif %}
              {{ author.name }}
              {% if author.url %}
            </a>
            {% endif %}
          </li>
          {% endfor %}
        </ul>
      </div>
    </div>
    {% endif %}
  </div>
</div>
{% endif %}
{% if showExtensionsInstallTheme %}
<div class="row fork-module-actions">
  <div class="col-md-12">
    <div class="btn-toolbar">
      <div class="btn-group pull-right" role="group">
        <button class="btn btn-primary" type="button" data-toggle="modal" data-target="#confirmInstall">
          <span class="glyphicon glyphicon-save"></span>&nbsp;
          {{ 'lbl.Install'|trans|capitalize }}
        </button>
      </div>
    </div>
    <div class="modal fade" id="confirmInstall" tabindex="-1" role="dialog" aria-labelledby="{{ 'lbl.Install'|trans|capitalize }}" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <span class="modal-title h4">{{ 'lbl.Install'|trans|capitalize }}</span>
          </div>
          <div class="modal-body">
            <p>{{ 'msg.ConfirmThemeInstall'|trans|sprintf(name ) }}</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'lbl.Cancel'|trans|capitalize }}</button>
            <a href="{{ geturl('install_theme' ) }}&amp;theme={{ name }}" class="btn btn-primary">
              {{ 'lbl.OK'|trans|capitalize }}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endif %}
{% include "/Layout/Templates/StructureEndModule.html.twig" %}

{% include "/Layout/Templates/Head.html.twig" %}
{% include "/Layout/Templates/StructureStartModule.html.twig" %}
<div class="row fork-module-heading">
  <div class="col-md-6">
    <h2>{{ 'lbl.Themes'|trans|capitalize }}</h2>
  </div>
  <div class="col-md-6">

    <div class="btn-toolbar pull-right">
      <div class="btn-group" role="group">
        {% if showExtensionsUploadTheme %}
        <a href="{{ geturl('upload_theme' ) }}" class="btn btn-default">
          <span class="fa fa-upload"></span>&nbsp;
          <span>{{ 'lbl.UploadTheme'|trans|capitalize }}</span>
        </a>
        {% endif %}
        <a href="http://www.fork-cms.com/extensions/themes" target="_blank" class="btn btn-default">
          <span class="fa fa-eye"></span>&nbsp;
          <span>{{ 'lbl.FindThemes'|trans|capitalize }}</span>
        </a>
      </div>
    </div>
  </div>
</div>
{% form settingsThemes %}
  {% if installableThemes %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            {{ 'lbl.InstallableThemes'|trans|capitalize }}
          </h3>
        </div>
        <div class="panel-body">
          <p class="help-block">{{ msg.HelpInstallableThemes }}</p>
          <div id="installedThemes" class="selectThumbList row">
            {% for installableThem in installableThemes %}
            <li>
              <div class="panel panel-default">
                <div class="panel-heading">
                  <label for="{{ installedThemes.id }}" class="panel-title">
                    <span>{{ installableThem.label|capitalize }}</span>
                  </label>
                </div>
                <div class="panel-body">
                  <img src="{{ installableThem.thumbnail }}" width="172" height="129" alt="{{ installableThem.label|capitalize }}" />
                </div>
                <div class="panel-footer">
                  {% if showExtensionsDetailTheme %}
                  <div class="btn-toolbar">
                    <div class="btn-group pull-right" role="group">
                      {% if showExtensionsInstallTheme %}
                      <button class="btn btn-primary" type="button" data-toggle="modal" data-target="#confirmInstall{{ installableThem.value|capitalize }}">
                        <span class="fa fa-file-o"></span>&nbsp;
                        {{ 'lbl.Install'|trans|capitalize }}
                      </button>
                      {% endif %}
                      {% if showExtensionsDetailTheme %}
                      <a href="{{ geturl('detail_theme' ) }}&theme={{ installableThem.value }}" class="btn btn-default" role="button" title="{{ installableThem.label|capitalize }}">
                        <span class="fa fa-eye"></span>&nbsp;
                        <span>{{ 'lbl.Details'|trans|capitalize }}</span>
                      </a>
                      {% endif %}
                    </div>
                  </div>
                  {% if showExtensionsInstallTheme %}
                  <div class="modal fade" id="confirmInstall{{ installableThem.value|capitalize }}" tabindex="-1" role="dialog" aria-labelledby="{{ 'lbl.Install'|trans|capitalize }}" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <span class="modal-title h4">{{ 'lbl.Install'|trans|capitalize }}</span>
                        </div>
                        <div class="modal-body">
                          <p>{{ msg.ConfirmThemeInstall }}</p>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'lbl.Cancel'|trans|capitalize }}</button>
                          <a href="{{ geturl('install_theme' ) }}&theme={{ installableThem.value }}" class="btn btn-primary">
                            {{ 'lbl.OK'|trans|capitalize }}
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>
                  {% endif %}
                  {% endif %}
                </div>
              </div>
            </li>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
  {% endif %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            {{ 'lbl.InstalledThemes'|trans|capitalize }}&nbsp;
            <abbr data-toggle="tooltip" title="{{ 'lbl.RequiredField'|trans|capitalize }}">*</abbr>
          </h3>
        </div>
        <div class="panel-body">
          <p class="help-block">{{ msg.HelpThemes }}</p>
          {% if rbtInstalledThemesError %}
          <p class="text-danger">{{ rbtThemesError }}</p>
          {% endif %}
          <ul id="installedThemes" class="selectThumbList list-unstyled list-inline">
            {% for installedThem in installedThemes %}
            <div class="col-md-4 theme">
                <div class="panel {% if installedThem.selected %}panel-primary{% else %}panel-default{% endif %}">
                <div class="panel-heading">
                  <label for="{{ installedThem.id }}" class="panel-title">
                    {{ installedThem.rbtInstalledThemes|raw }}
                    <span>{{ installedThem.label|capitalize }}</span>
                  </label>
                </div>
                <div class="panel-body">
                  <img src="{{ installedThem.thumbnail }}" class="img-thumbnail" alt="{{ installedThem.label|capitalize }}" />
                </div>
                <div class="panel-footer">
                  {% if showExtensionsDetailTheme %}
                  <div class="btn-toolbar">
                    <div class="btn-group pull-right" role="group">
                      <a href="{{ geturl('detail_theme' ) }}&theme={{ installedThem.value }}" class="btn btn-default" role="button"  title="{{ installedThem.label|capitalize }}">
                        <span class="fa fa-eye"></span>&nbsp;
                        <span>{{ 'lbl.Details'|trans|capitalize }}</span>
                      </a>
                    </div>
                  </div>
                  {% endif %}
                </div>
              </div>
            </div>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-module-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-right" role="group">
          <button id="editButton" type="submit" name="edit" class="btn btn-primary">
            <span class="fa fa-check"></span>&nbsp;{{ 'lbl.Save'|trans|capitalize }}
          </button>
        </div>
      </div>
    </div>
  </div>
{% endform %}
{% include "/Layout/Templates/StructureEndModule.html.twig" %}
{% include "/Layout/Templates/Footer.html.twig" %}

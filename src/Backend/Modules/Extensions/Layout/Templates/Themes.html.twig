{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}
    <div class="btn-toolbar pull-right">
      <div class="btn-group" role="group">
        {% if showExtensionsUploadTheme %}
          {{ macro.buttonIcon( geturl('upload_theme'), 'upload', 'lbl.UploadTheme'|trans|capitalize) }}
        {% endif %}
        {{ macro.buttonIcon( 'http://www.fork-cms.com/extensions/themes', 'eye', 'lbl.FindThemes'|trans|capitalize, '', 'target=_blank') }}
      </div>
    </div>
{% endblock %}

{% block content %}
  {% form settingsThemes %}
    {% if installableThemes %}
    <div class="row fork-module-content">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">
              {{ 'lbl.InstallableThemes'|trans|capitalize }}
            </h3>
          </div>
          <div class="panel-body">
            <p class="help-block">{{ 'msg.HelpInstallableThemes'|trans }}</p>
            <div id="installedThemes" class="selectThumbList row">
              {% for installableThem in installableThemes %}
              <li>
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <label for="{{ installedThemes.id }}" class="panel-title">
                      {{ installableThem.label|capitalize }}
                    </label>
                  </div>
                  <div class="panel-body">
                    <img src="{{ installableThem.thumbnail }}" width="172" height="129" alt="{{ installableThem.label|capitalize }}" />
                  </div>
                  <div class="panel-footer">
                    {% if showExtensionsDetailTheme %}
                    <div class="btn-toolbar">
                      <div class="btn-group pull-right" role="group">
                        {% if showExtensionsInstallTheme %}
                        <button class="btn btn-primary" type="button" data-toggle="modal" data-target="#confirmInstall{{ installableThem.value|capitalize }}">
                          <span class="fa fa-file-o"></span>&nbsp;
                          {{ 'lbl.Install'|trans|capitalize }}
                        </button>
                        {% endif %}
                        {% if showExtensionsDetailTheme %}
                        <a href="{{ geturl('detail_theme' ) }}&theme={{ installableThem.value }}" class="btn btn-default" role="button" title="{{ installableThem.label|capitalize }}">
                          <span class="fa fa-eye"></span>&nbsp;
                          <span>{{ 'lbl.Details'|trans|capitalize }}</span>
                        </a>
                        {% endif %}
                      </div>
                    </div>
                    {% if showExtensionsInstallTheme %}
                    <div class="modal fade" id="confirmInstall{{ installableThem.value|capitalize }}" tabindex="-1" role="dialog" aria-labelledby="{{ 'lbl.Install'|trans|capitalize }}" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <span class="modal-title h4">{{ 'lbl.Install'|trans|capitalize }}</span>
                          </div>
                          <div class="modal-body">
                            <p>{{ 'msg.ConfirmThemeInstall'|trans }}</p>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">
                              <span class="fa fa-times"></span>{{ 'lbl.Cancel'|trans|capitalize }}
                            </button>
                            <a href="{{ geturl('install_theme' ) }}&theme={{ installableThem.value }}" class="btn btn-success">
                              <span class="fa fa-check"></span>{{ 'lbl.OK'|trans|capitalize }}
                            </a>
                          </div>
                        </div>
                      </div>
                    </div>
                    {% endif %}
                    {% endif %}
                  </div>
                </div>
              </li>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
    {% endif %}
    <div class="row fork-module-content">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">
              {{ 'lbl.InstalledThemes'|trans|capitalize }} <abbr data-toggle="tooltip" title="{{ 'lbl.RequiredField'|trans|capitalize }}">*</abbr>
            </h3>
          </div>
          <div class="panel-body">
            <p class="help-block">{{ 'msg.HelpThemes'|trans }}</p>
            {% if rbtInstalledThemesError %}
            <p class="text-danger">{{ rbtThemesError }}</p>
            {% endif %}
            <div id="installedThemes" class="selectThumbList list-unstyled list-inline">
              <div class="row">
                {% for installedThem in installedThemes %}
                  <div class="col-md-4 js-theme">
                    <div class="panel panel-select {% if installedThem.selected %}panel-primary{% else %}panel-default{% endif %}">
                      <label for="{{ installedThem.id }}">
                        <span class="hidden">{{ installedThem.rbtInstalledThemes|raw }}</span>

                        <div class="panel-heading">
                          <h3 class="panel-title">{{ installedThem.label|capitalize }}</h3>
                        </div>
                        <div class="panel-body">
                          <img src="{{ installedThem.thumbnail }}" class="img-thumbnail" alt="{{ installedThem.label|capitalize }}" />
                        </div>
                        <div class="panel-footer">
                          {% if showExtensionsDetailTheme %}
                            <div class="btn-toolbar">
                              <div class="btn-group pull-right" role="group">
                                <a href="{{ geturl('detail_theme' ) }}&theme={{ installedThem.value }}" class="btn btn-default" role="button"  title="{{ installedThem.label|capitalize }}">
                                  <span class="fa fa-eye"></span>&nbsp;
                                  <span>{{ 'lbl.Details'|trans|capitalize }}</span>
                                </a>
                              </div>
                            </div>
                          {% endif %}
                        </div>
                      </label>
                    </div>
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row fork-module-actions">
      <div class="col-md-12">
        <div class="btn-toolbar">
          <div class="btn-group pull-right" role="group">
            <button id="editButton" type="submit" name="edit" class="btn btn-primary">
              <span class="fa fa-check"></span>&nbsp;{{ 'lbl.Save'|trans|capitalize }}
            </button>
          </div>
        </div>
      </div>
    </div>
  {% endform %}
{% endblock %}


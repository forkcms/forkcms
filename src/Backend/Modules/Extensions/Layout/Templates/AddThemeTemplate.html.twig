{% include "/Layout/Templates/Head.html.twig" %}
{% include "/Layout/Templates/StructureStartModule.html.twig" %}
<div class="row fork-module-heading">
  <div class="col-md-12">
    <h2>{{ 'lbl.AddTemplate'|trans|capitalize }}</h2>
  </div>
</div>
{% form add %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="form-inline form-group">
        <p class="text-info">{{ msg.HelpTemplateLocation }}</p>
        <label for="file">{{ 'msg.PathToTemplate'|trans|capitalize }}</label>
        <label for="theme" class="hide">{{ 'lbl.Theme'|trans|capitalize }}</label>
        {% form_field_error theme %}<small><code>/Core/Layout/Templates/</code></small>{% form_field file %} {% form_field theme %} {% form_field_error file %}
      </div>
      <div class="form-group">
        <label for="label">{{ 'lbl.Label'|trans|capitalize }}</label>
        {% form_field_error label %} {% form_field label %}
      </div>
    </div>
  </div>
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">{{ 'lbl.Positions'|trans|capitalize }}</h3>
        </div>
        <div id="positions" class="panel-body">
          {% for position in positions %}
          <div class="form-group jsPosition"{% if not position.i %} style="display: none"{% endif %}>
            <div class="row">
              {# Title & button to delete this position #}
              <div class="col-md-2">
                <div class="form-group">
                  <label for="position{{ position.i }}">
                    <span>{{ 'lbl.Position'|trans|capitalize }}</span>
                    <a href="#" class="btn text-danger jsDeletePosition" title="{{ 'lbl.DeletePosition'|trans|capitalize }}">
                      <span class="glyphicon glyphicon-trash"></span>&nbsp;
                    </a>
                  </label>
                </div>
              </div>
              {# Position name #}
              <div class="col-md-10">
                <div class="form-group">
                  {{ position.txtPosition }}
                  {{ position.txtPositionError }}
                </div>
              </div>
            </div>
            <div class="row jsBlocks">
              {# Default blocks for this position #}
              {% if position.blocks %}
              {% for block in position.blocks %}
              <div class="col-md-10 col-md-offset-2 jsBlock">
                <div class="form-inline form-group">
                  <div class="form-group">
                    {{ block.ddmType }}
                    {{ block.ddmTypeError }}
                  </div>
                  {# Button to remove block from this position #}
                  <a href="#" class="btn text-danger jsDeleteBlock" title="{{ 'lbl.DeleteBlock'|trans|capitalize }}">
                    <span class="glyphicon glyphicon-trash"></span>&nbsp;
                  </a>
                </div>
              </div>
              {% endfor %}
              {% endif %}
              <div class="col-md-10 col-md-offset-2">
                <div class="btn-toolbar">
                  <div class="btn-group" role="group">
                    {# Button to add new default block to this position #}
                    <a href="#" class="btn btn-default jsAddBlock">
                      <span class="glyphicon glyphicon-plus"></span>&nbsp;
                      <span>{{ 'lbl.AddBlock'|trans|capitalize }}</span>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
          {% endfor %}
          {# Button to add new position #}
          <div class="btn-toolbar">
            <div class="btn-group" role="group">
              <a href="#" class="btn btn-primary jsAddPosition">
                <span class="glyphicon glyphicon-plus"></span>&nbsp;
                <span>{{ 'lbl.AddPosition'|trans|capitalize }}</span>
              </a>
            </div>
          </div>
          {% if formErrors %}
          <p class="text-danger">{{ formErrors }}</p>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            <label for="format">{{ 'lbl.Layout'|trans|capitalize }}</label>
          </h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <p class="text-info">{{ msg.HelpTemplateFormat }}</p>
            {% form_field_error format %} {% form_field format %}
          </div>
          <div>
            {{ msg.HelpPositionsLayout }}
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">{{ 'lbl.Status'|trans|capitalize }}</h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <ul class="list-unstyled">
              <li class="checkbox">
                <label for="'act.ve">{% form_field_'err.r active %} {{ 'lbl.Active'''|trans|trans|trans|capitalize }}</label> {% form_field active %}
              </li>
              <li class="checkbox">
                <label for="default">{% form_field_'err.r default %} {{ 'lbl.Default''|trans|trans|capitalize }}</label> {% form_field default %}
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-module-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-right" role="group">
          <button id="addButton" name="add" class="btn btn-primary" type="submit">
            <span class="glyphicon glyphicon-pencil"></span>&nbsp;
            {{ 'lbl.Save'|trans|capitalize }}
          </button>
        </div>
      </div>
    </div>
  </div>
{% endform %}
{% include "/Layout/Templates/StructureEndModule.html.twig" %}

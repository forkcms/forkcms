{% form add %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div role="tabpanel">
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active">
            <a href="#tabName" aria-controls="name" role="tab" data-toggle="tab">{{ 'lbl.Name'|trans|capitalize }}</a>
          </li>
          <li role="presentation">
            <a href="#tabDashboard" aria-controls="dashboard" role="tab" data-toggle="tab">{{ 'lbl.Dashboard'|trans|capitalize }}</a>
          </li>
          <li role="presentation">
            <a href="#tabPermissions" aria-controls="permission" role="tab" data-toggle="tab">{{ 'lbl.Permissions'|trans|capitalize }}</a>
          </li>
        </ul>
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="tabName">
            <div class="row">
              <div class="col-md-12">
                <h3>{{ 'lbl.Name'|trans|capitalize }}</h3>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <label for="name">{{ 'lbl.Name'|trans|capitalize }}&nbsp;<abbr class="glyphicon glyphicon-asterisk" title="{{ 'lbl.RequiredField'|trans|capitalize }}"></abbr></label>
                  {% form_field_error name %} {% form_field name %}
                </div>
              </div>
            </div>
          </div>
          <div role="tabpanel" class="tab-pane" id="tabDashboard">
            <div class="row">
              <div class="col-md-12">
                <h3>{{ 'lbl.Dashboard'|trans|capitalize }}</h3>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <label for="toggleChecksWidgets">{{ 'lbl.DisplayWidgets'|trans|capitalize }}</label>
                  {% if widgets %}
                  {{ widgets }}
                  {% endif %}
                  {% if not widgets %}
                  {{ 'msg.NoWidgets'|trans|capitalize }}
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
          <div role="tabpanel" class="tab-pane" id="tabPermissions">

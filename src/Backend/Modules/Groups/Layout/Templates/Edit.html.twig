{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}

{% endblock %}

{% block content %}
  {% form edit %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div role="tabpanel">
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active">
            <a href="#tabName" aria-controls="name" role="tab" data-toggle="tab">{{ 'lbl.Name'|trans|ucfirst }}</a>
          </li>
          <li role="presentation">
            <a href="#tabDashboard" aria-controls="dashboard" role="tab" data-toggle="tab">{{ 'lbl.Dashboard'|trans|ucfirst }}</a>
          </li>
          <li role="presentation">
            <a href="#tabPermissions" aria-controls="permission" role="tab" data-toggle="tab">{{ 'lbl.Permissions'|trans|ucfirst }}</a>
          </li>
          <li role="presentation">
            <a href="#tabUsers" aria-controls="users" role="tab" data-toggle="tab">{{ 'lbl.Users'|trans|ucfirst }}</a>
          </li>
        </ul>
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="tabName">
            <div class="row">
              <div class="col-md-12">
                <div class="form-group last">
                  <label for="name" class="control-label">
                    {{ 'lbl.Name'|trans|ucfirst }}
                    <abbr data-toggle="tooltip" title="{{ 'lbl.RequiredField'|trans|ucfirst }}">*</abbr>
                  </label>
                  {% form_field name %} {% form_field_error name %}
                </div>
              </div>
            </div>
          </div>
          <div role="tabpanel" class="tab-pane" id="tabDashboard">
            <div class="row">
              <div class="col-md-12">
                <div class="content-block">
                  <div class="content-title">
                    <label for="toggleChecksWidgets" class="control-label">{{ 'lbl.DisplayWidgets'|trans|ucfirst }}</label>
                  </div>
                  <div class="jsGroupsWidgets">
                    {% if widgets %}
                      {{ widgets|raw }}
                    {% endif %}
                    {% if not widgets %}
                      {{ 'msg.NoWidgets'|trans|ucfirst }}
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div role="tabpanel" class="tab-pane" id="tabPermissions">
            <div class="row">
              <div class="col-md-12">
                <div class="content-block">
                  <div class="panel-group" id="permissions" role="tablist" aria-multiselectable="true">
                    {% for permission in permissions %}
                      <div class="panel panel-transparent jsGroupsPermissionsModule">
                        <div class="panel-heading" role="tab" id="permission-heading-{{ permission.id }}">
                          <a data-toggle="collapse" data-parent="#permission" href="#permission-list-{{ permission.id }}" aria-expanded="false" aria-controls="collapseOne">
                            <h4 class="panel-title">
                              {{ permission.chk|raw }}
                              <label for="{{ permission.id }}"><span class="fa fa-caret-right fa-fw"></span> {{ permission.label }}
                              </label>
                            </h4>
                          </a>
                        </div>
                        <div id="permission-list-{{ permission.id }}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="permission-heading-{{ permission.id }}">
                          {{ permission.actions.dataGrid|raw }}
                        </div>
                      </div>
                    {% endfor %}
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div role="tabpanel" class="tab-pane" id="tabUsers">
            <div class="row">
              <div class="col-md-12">
                <div class="content-block">
                  {% if dataGridUsers %}
                    {{ dataGridUsers|raw }}
                  {% endif %}
                  {% if not dataGridUsers %}
                    <p>{{ 'msg.NoUsers'|trans|ucfirst }}</p>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-page-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-left" role="group">
          {% if showGroupsDelete %}
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmDelete">
              <span class="fa fa-trash-o"></span>{{ 'lbl.Delete'|trans|ucfirst }}
            </button>
          {% endif %}
        </div>
        <div class="btn-group pull-right" role="group">
          <button id="editButton" type="submit" name="edit" class="btn btn-primary">
            <span class="fa fa-floppy-o"></span>{{ 'lbl.Save'|trans|ucfirst }}
          </button>
        </div>
      </div>
      {% if showGroupsDelete %}
        <div class="modal fade" id="confirmDelete" tabindex="-1" role="dialog" aria-labelledby="{{ 'lbl.Delete'|trans|ucfirst }}" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <span class="modal-title h4">{{ 'lbl.Delete'|trans|ucfirst }}</span>
              </div>
              <div class="modal-body">
                <p>{{ 'msg.ConfirmDelete'|trans|format(item.name)|raw }}</p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                  <span class="fa fa-times"></span>{{ 'lbl.Cancel'|trans|ucfirst }}
                </button>
                <a href="{{ geturl('delete') }}&amp;id={{ item.id }}" class="btn btn-danger">
                  <span class="fa fa-trash"></span>{{ 'lbl.Delete'|trans|ucfirst }}
                </a>
              </div>
            </div>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
  {% endform %}
{% endblock %}

{% extends 'Layout/Templates/empty.html.twig' %}
{% import "Layout/Templates/macros.html.twig" as macro %}

{% block content %}
<body id="login">

<div class="page-header text-center">
  <h1>{{ SITE_TITLE }}</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      {% if debug %}
        <div class="alert alert-warning">
          <p>{{ macro.icon('exclamation-triangle') }}{{ 'msg.WarningDebugMode'|trans|ucfirst }}</p>
        </div>
      {% endif %}
      {% form authenticationResetPassword %}
      <div class="card card-default">
        <div class="card-body">
          <p class="help-block">{{ 'msg.HelpResetPassword'|trans|ucfirst }}</p>
          <div class="form-group">
            <label for="backendNewPassword" class="control-label">{{ 'lbl.NewPassword'|trans|ucfirst }}</label>
            {% form_field backend_new_password %} {% form_field_error backend_new_password %}
          </div>
          <div class="form-group">
            <label for="backendNewPasswordRepeated" class="control-label">{{ 'lbl.RepeatPassword'|trans|ucfirst }}</label>
            {% form_field backend_new_password_repeated %} {% form_field_error backend_new_password_repeated %}
          </div>
          <div class="form-group">
            <div class="btn-toolbar justify-content-end">
              <div class="btn-group">
                {{ macro.buttonIcon('', 'sign-in-alt', 'lbl.ResetAndSignIn'|trans|ucfirst, 'btn-primary', {"id":"resetPassword", "name":"reset", "type":"submit"}) }}
              </div>
            </div>
          </div>
        </div>
      </div>
      {% endform %}
    </div>
  </div>
</div>
{% endblock %}

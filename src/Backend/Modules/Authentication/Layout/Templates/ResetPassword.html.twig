{% extends 'Layout/Templates/empty.html.twig' %}

{% block content %}
<body id="login">

<!--[if lte IE 6]>
<style type="text/css" media="screen">
  #debugnotify, #loginBox {
    display: none
  }

  #browserSupport {
    padding: 20px;
    border: 1px solid #DDD;
    width: 400px;
    margin: 40px auto
  }

  #browserSupport h2 {
    padding: 0 0 12px;
  }

  body {
    background: #FFF !important;
  }
</style>
<div id="browserSupport" class="content">
  <h2>{{ 'lbl.BrowserNotSupported'|trans|ucfirst }}</h2>
  {{ err.BrowserNotSupported }}
</div>
<![endif]-->

<div class="page-header text-center">
  <h1>{{ SITE_TITLE }}</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      {% if debug %}
        <div class="alert alert-warning">
          <p><span class="fa fa-exclamation-triangle"></span>{{ 'msg.WarningDebugMode'|trans|ucfirst }}</p>
        </div>
      {% endif %}
      {% form authenticationResetPassword %}
      <div class="panel panel-default">
        <div class="panel-body">
          <p class="help-block">{{ 'msg.HelpResetPassword'|trans|ucfirst }}</p>
          <div class="form-group">
            <label for="backendNewPassword" class="control-label">{{ 'lbl.NewPassword'|trans|ucfirst }}</label>
            {% form_field backend_new_password %} {% form_field_error backend_new_password %}
          </div>
          <div class="form-group">
            <label for="backendNewPasswordRepeated" class="control-label">{{ 'lbl.RepeatPassword'|trans|ucfirst }}</label>
            {% form_field backend_new_password_repeated %} {% form_field_error backend_new_password_repeated %}
          </div>
          <div class="form-group">
            <div class="btn-toolbar pull-right">
              <div class="btn-group">
                <button id="resetPassword" name="reset" type="submit" class="btn btn-primary">
                  {{ 'lbl.ResetAndSignIn'|trans|ucfirst }}
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
      {% endform %}
    </div>
  </div>
</div>
{% endblock %}

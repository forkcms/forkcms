<div class="header clearfix">
  <div class="site-info">
    <div class="site-icon-block">
      <img class="site-icon" src="/apple-touch-icon.png" alt="apple touch icon">
      {% if debug %}
        <div class="debug-mode">{{ 'lbl.DebugMode'|trans|uppercase }}</div>
      {% endif %}
    </div>
    <div class="site-text">
      <p class="site-title">{{ SITE_TITLE }}
        <a class="site-url" data-url="{{ SITE_URL }}{{ prefixURL }}" href="{{ SITE_URL }}{{ prefixURL }}" target="_blank">{{ 'lbl.VisitWebsite'|trans|capitalize }}</a>
      </p>
      {% if SITE_MULTILANGUAGE %}
        <ul class="nav navbar-nav navbar-languages">
          {% if workingLanguages %}
            <label class="working-language hidden-xs" for="workingLanguages">{{ 'msg.NowEditing'|trans|capitalize }}</label>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" title="{{ LANGUAGE|uppercase }}">
                <span class="dropdown-text">{{ ('lbl.'~LANGUAGE|uppercase)|trans|capitalize }}</span>
                <span class="dropdown-angle"><i class="fa fa-angle-right"></i></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                {% for workingLanguage in workingLanguages %}
                  <li{% if workingLanguage.selected %} class="active"{% endif %}>
                    <a href="{{ geturl(null,null,null,workingLanguage.abbr) }}" title="{{ workingLanguage.label|capitalize }}">{{ ('lbl.'~workingLanguage.abbr|uppercase)|trans|capitalize }}</a>
                  </li>
                {% endfor %}
              </ul>
            </li>
          {% endif %}
        </ul>
      {% endif %}
    </div>
  </div>

  <ul class="nav navbar-nav navbar-right navbar-user">
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" title="{{ authenticatedUserNickname }}">
        <img src="{{ FRONTEND_FILES_URL }}/backend_users/avatars/128x128/{{ authenticatedUserAvatar }}" class="img-circle" alt="{{ authenticatedUserNickname }}" />
        <i class="fa fa-angle-right"></i>
      </a>
      <ul class="dropdown-menu pull-right" role="menu">
        {% if authenticatedUserEditUrl %}
          <li><a href="{{ authenticatedUserEditUrl }}">{{ 'lbl.EditProfile'|trans|capitalize }}</a></li>
        {% endif %}
        <li><a href="{{ geturl('logout','authentication') }}">{{ 'lbl.SignOut'|trans|capitalize }}</a></li>
      </ul>
    </li>
  </ul>
</div>

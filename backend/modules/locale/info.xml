<?xml version="1.0" encoding="UTF-8"?>
<module>
	<name>locale</name>
	<version>2.0.0</version>
	<requirements>
		<minimum_version>2.0.0</minimum_version>
	</requirements>
	<description>
		<![CDATA[
			Translate all module-generated tidbits of content with this translation module, either through the "point and click" translations overview or via XML export/import.
		]]>
	</description>
	<authors>
		<author>
			<name><![CDATA[Davy Hellemans]]></name>
			<url><![CDATA[http://blog.bauffman.be]]></url>
		</author>
		<author>
			<name><![CDATA[Tijs Verkoyen]]></name>
			<url><![CDATA[http://www.sumocoders.be]]></url>
		</author>
		<author>
			<name><![CDATA[Dieter Vanden Eynde]]></name>
			<url><![CDATA[http://www.dieterve.be]]></url>
		</author>
		<author>
			<name><![CDATA[Lowie Benoot]]></name>
			<url><![CDATA[http://www.lowiebenoot.be]]></url>
		</author>
	</authors>
	<events>
		<event application="backend" name="after_add"><![CDATA[Triggered when a locale is added.]]></event>
		<event application="backend" name="after_delete"><![CDATA[Triggered when a locale is deleted.]]></event>
		<event application="backend" name="after_edit"><![CDATA[Triggered when a locale is edited.]]></event>
		<event application="backend" name="after_import"><![CDATA[Triggered when locale is imported.]]></event>
	</events>
</module>

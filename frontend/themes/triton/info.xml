<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<name>triton</name>
	<version>1.0.0</version>
	<requirements>
		<minimum_version>3.0.0</minimum_version>
	</requirements>
	<thumbnail>thumbnail.png</thumbnail>
	<description>
		<![CDATA[
			Triton is the default theme for Fork CMS and combines flexibility and scalability. Its clean design gives your content the canvas it deserves.
			Triton is the perfect theme to get to know and explore what Fork CMS has to offer.
		]]>
	</description>
	<authors>
		<author>
			<name>Yoni De Beule</name>
			<url>http://www.yonidebeule.be</url>
		</author>
	</authors>
	<metanavigation supported="false" />
	<templates>
		<template label="Default" path="core/layout/templates/default.tpl">
			<positions>
				<position name="main" />
				<position name="left" />
				<position name="top">
					<defaults>
						<widget module="search" action="form" />
					</defaults>
				</position>
				<position name="advertisement" />
			</positions>
			<format>
				[/,advertisement,advertisement,advertisement],[/,/,top,top],[/,/,/,/],[left,main,main,main]
			</format>
		</template>
		<template label="Home" path="core/layout/templates/home.tpl">
			<positions>
				<position name="main" />
				<position name="left" />
				<position name="right" />
				<position name="top">
					<defaults>
						<widget module="search" action="form" />
					</defaults>
				</position>
				<position name="advertisement" />
			</positions>
			<format>
				[/,advertisement,advertisement,advertisement],[/,/,top,top],[/,/,/,/],[main,main,main,main],[left,left,right,right]
			</format>
		</template>
	</templates>
</theme>